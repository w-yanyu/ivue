{
  "module": "v-search-btn-datagrid",
  "pageId": "risk_authorization_system",
  "layout": {
    "form": {
      "controls": [
        {
          "systemName": {
            "label": "系统名称",
            "width": "auto",
            "control": "text",
            "span": 8
          },
          "systemId": {
            "label": "系统编号标识",
            "width": "auto",
            "control": "text",
            "span": 8
          },
          "systemBranchId": {
              "label": "机构名称",
              "control": "remoteSelect",
              "labelField": "branch_name",
              "valueField": "branch_id",
              "searchField":"branch_name",
              "value": "$g{{user_info.branch_id}}",
              "width": "auto",
              "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "post",
                "params": {
                  "is_authorize":"true",
                  "servicecode": "ct2191"
                }
            },
            "span": 8
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "#authId": "fact_add_btn",
          "show": true,
          "label": "新增",
          "toRequest": {
            "url": "views/risk/risk_system_management/risk_authorization_system_add.json",
            "method": "get"
          },
          "props": {
            "width": "35%",
            "title": "授权系统新增"
          }
        }
      ]
    },
    "datagrid": {
      "isInitSearch": false,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "post",
        "params": {
          "servicecode": "deci090101",
          "isList": true
        }
      },
      "thead": [
        {
          "label": "序号",
          "type": "index"
        },
        {
          "label": "系统名称",
          "prop": "systemName"
        },
        {
          "label": "系统编号标识",
          "prop": "systemId"
        },
        {
          "label": "系统所属机构",
          "prop": "systemBranchId",
          "dict": {
            "dictType": "DECI_E_BRANCH_MARK2",
            "dictKey": [
              "DECI_E_BRANCH_MARK2"
            ],
            "format": "label"
          }
        },
        {
          "label": "备注",
          "prop": "remark"
        },
        {
          "label": "创建时间",
          "prop": "createTime"
        },
        {
          "label": "最新维护时间",
          "prop": "updateTime"
        },
        {
          "label": "操作",
          "width": "150px",
          "btns": [
            {
              "type": "edit",
              "#authId": "fact_upd_btn",
              "label": "维护",
              "toRequest": {
                "url": "views/risk/risk_system_management/risk_authorization_system_edit.json",
                "method": "get"
              },
              "props": {
                "width": "35%"
              }
            },
            {
              "type": "delete",
              "#authId": "fact_del_btn",
              "label": "删除",
              "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "post",
                "params": {
                  "servicecode": "deci090203"
                }
              },
              "confirm": {
                "title": "提示信息",
                "msg": "是否确认删除此授权系统？",
                "confirmButtonText": "确定",
                "cancelButtonText": "取消"
              }
            }
          ]
        }
      ]
    }
  }
}