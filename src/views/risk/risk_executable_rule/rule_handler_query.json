{
  "module": "v-search-btn-datagrid",
  "layout": {
    "form": {
      "controls": [
        {
          "handlerCode": {
            "label": "处置措施代码",
            "control": "text",
            "span": 12,
            "rules": [
              {
                "message": "字段长度超限",
                "max": 20
              }
            ]
          },
          "handlerName": {
            "label": "处置措施名称",
            "control": "text",
            "span": 12,
            "rules": [
              {
                "message": "字段长度超限",
                "max": 100
              }
            ]
          }
        },
        {
          "handlerType": {
            "label": "处置措施类型",
            "control": "select",
            "span": 12,
            "dict": {
              "dictType": "handlerType",
              "dictKey": [],
              "format": "value-label",
              "doRequest": {
                "url": "/views/risk/dictdata/handlerType.json",
                "method": "get"
              }
            }
          },
          "controlDimension": {
            "label": "管控维度",
            "control": "select",
            "span": 12,
            "dict": {
              "dictType": "indicatorDimension",
              "dictKey": [],
              "format": "value-label",
              "doRequest": {
                "url": "/views/risk/dictdata/indicatorDimension.json",
                "method": "get"
              }
            }
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "bringback",
          "label": "选择"
        }
      ]
    },
    "datagrid": {
      "doRequest": {
        "url": "/API/risk-management-service/risk-rule-handler/page-select",
        "method": "post"
      },
      "pagination": {
        "pageSizes": [
          5,
          10,
          20,
          50,
          100
        ],
        "pageSize": 5
      },
      "thead": [
        {
          "type": "selection",
          "width": "55"
        },
        {
          "label": "处置措施代码",
          "prop": "handlerCode",
          "width": "180px",
          "align": "center"
        },
        {
          "label": "处置措施名称",
          "prop": "handlerName"
        },
        {
          "label": "处置措施类型",
          "prop": "handlerType",
          "width": "100px",
          "align": "center"
        },
        {
          "label": "管控时间单位",
          "prop": "controlUnit",
          "width": "100px",
          "align": "center"
        },
        {
          "label": "管控时间数值",
          "prop": "controlNumber",
          "width": "100px",
          "align": "center"
        }
      ]
    }
  }
}
