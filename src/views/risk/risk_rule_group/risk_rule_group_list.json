{
  "module": "v-search-btn-datagrid",
  "pageId": "risk_rule_group",
  "layout": {
    "form": {
      "controls": [
        {
          "groupId": {
            "label": "规则组id",
            "control": "text",
            "span": 8,
            "rules": [
              {
                "message": "字段长度超限",
                "max": 8
              }
            ]
          },
          "groupName": {
            "label": "规则组名称",
            "control": "text",
            "span": 8,
            "rules": [
              {
                "message": "字段长度超限",
                "max": 100
              }
            ]
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "authId": "rule_group_add_btn",
          "label": "新增",
          "toRequest": {
            "url": "/views/risk/risk_rule_group/risk_rule_group_add.json",
            "method": "get",
            "params": {}
          },
          "props": {
            "width": "70%",
            "title": "新增"
          }
        }
      ]
    },
    "datagrid": {
      "isInitSearch": false,
      "doRequest": {
        "url": "/API/risk-management-service/risk-rule-group/page-select",
        "method": "post"
      },
      "thead": [
        {
          "label": "规则组id",
          "prop": "groupId"
        },
        {
          "label": "规则组名称",
          "prop": "groupName"
        },
        {
          "label": "操作",
          "width": "150px",
          "btns": [
            {
              "type": "edit",
              "authId": "rule_group_upd_btn",
              "label": "编缉",
              "toRequest": {
                "url": "/views/risk/risk_rule_group/risk_rule_group_edit.json",
                "method": "get"
              },
              "props": {
                "width": "70%"
              }
            },
            {
              "type": "look",
              "label": "查看",
              "toRequest": {
                "url": "/views/risk/risk_rule_group/risk_rule_group_view.json",
                "method": "get"
              },
              "props": {
                "width": "70%"
              }
            },
            {
              "type": "delete",
              "authId": "rule_group_del_btn",
              "label": "删除",
              "doRequest": {
                "url": "/API/risk-management-service/risk-rule-group/delete",
                "method": "post"
              }
            }
          ]
        }
      ]
    }
  }
}
