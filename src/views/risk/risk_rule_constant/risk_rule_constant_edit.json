{
  "module": "v-inputDataForm-btn",
  "layout": {
    "form": {
      "controls": [
        {
          "const_code": {
            "label": "常量代码",
            "control": "string",
            "span": 12,
            "rules": [
              {
                "required": true,
                "message": "请正确输入",
                "max": 20
              }
            ]
          },
          "const_name": {
            "label": "常量名称",
            "control": "text",
            "span": 12,
            "rules": [
              {
                "required": true,
                "message": "请正确输入",
                "max": 60
              }
            ]
          }
        },
        {
          "data_type": {
            "label": "数据类型",
            "control": "select",
            "span": 12,
            "disabledOptions":["Boolean"],
            "dict": {
              "dictType": "dataType",
              "dictKey": [],
              "format": "value-label",
              "doRequest": {
                "url": "/views/risk/dictdata/dataType.json",
                "method": "get"
              }
            },
            "rules": [
              {
                "required": true,
                "message": "该控件必填"
              }
            ]
          },
          "status": {
            "label": "状态",
            "control": "radio",
            "span": 12,
            "dict": {
              "dictType": "constantStatus",
              "dictKey": [],
              "doRequest": {
                "url": "/views/risk/dictdata/constantStatus.json",
                "method": "get"
              }
            },
            "rules": [
              {
                "required": true,
                "message": "该控件必填"
              }
            ]
          }
        },
        {
          "description": {
            "label": "描述",
            "control": "textarea",
            "span": 24,
            "showWordLimit": 500,
            "maxlength": 500,
            "rules": [
              {
                "message": "请正确输入",
                "max": 500
              }
            ]
          }
        },
        {
          "value_type": {
            "label": "值类型",
            "control": "radio",
            "span": 12,
            "dict": {
              "dictType": "valueType",
              "dictKey": [],
              "format": "value-label",
              "doRequest": {
                "url": "/views/risk/dictdata/valueType.json",
                "method": "get"
              }
            },
            "rules": [
              {
                "required": true,
                "message": "该控件必填"
              }
            ],
            "showItem": {
              "":[],
              "S":["constValue"],
              "M":["constValues"]
            }
          },
          "const_value": {
            "label": "常量值",
            "initShow": false,
            "control": "text",
            "span": 12,
            "rules": [
              {
                "required": true,
                "pattern": "^\\w{1,200}$",
                "message": "请正确输入"
              }
            ]
          },
          "const_values": {
            "label": "常量值",
            "initShow": false,
            "span": 24,
            "control": "dynamic",
            "toRequest": {
              "url": "/views/risk/risk_rule_constant/constant_add.json"
            },
            "props": {
              
            }
          }
        }
      ],
      "initRequest": {
        "url": "/API/risk-management-service/risk_rule_constant/query",
        "method": "post"
      },
      "doRequest": {
        "url": "/API/risk-management-service/risk_rule_constant/update",
        "method": "post",
        "params":{
          "updateUser": "$g{{user_info.userCode}}"
        }
      }
    }
  }
}
