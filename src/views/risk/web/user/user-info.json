{
  "module": "v-inputDataForm-btn",
  "layout": {
    "form": {
      "initRequest": {
        "url": "/WEB/user/user-info",
        "method": "GET"
      },
      "doRequest": {
        "url": "/WEB/user",
        "method": "PUT"
      },
      "controls": [
        {
          "userCode": {
            "control": "string",
            "label": "用户编码",
            "required": true
          },
          "userName": {
            "control": "text",
            "label": "用户名称",
            "required": true
          }
        },
        {
          "employeeCode": {
            "control": "string",
            "label": "雇员",
            "dict": {
              "dictType": "WEB",
              "dictKey": [
                "employeeCode"
              ],
              "labelField": "employeeName",
              "valueField": "employeeCode",
              "doRequest": {
                "url": "/WEB/employee/list",
                "method": "GET",
                "params": {
                  "employeeCode": "admin"
                }
              }
            }
          },
          "menuType": {
            "control": "select",
            "label": "菜单类型",
            "dict": {
              "dictType": "WEB",
              "dictKey": [
                "WEB",
                "menuType"
              ],
              "labelField": "dictName",
              "valueField": "dictCode",
              "doRequest": {
                "url": "/WEB/dict/common",
                "method": "post"
              }
            }
          }
        },
        {
          "skinCode": {
            "control": "select",
            "label": "皮肤",
            "dict": {
              "dictType": "WEB",
              "dictKey": [
                "WEB",
                "skinType"
              ],
              "labelField": "dictName",
              "valueField": "dictCode",
              "doRequest": {
                "url": "/WEB/dict/common",
                "method": "post"
              }
            }
          },
          "status": {
            "control": "select",
            "label": "用户状态",
            "value": "A",
            "dict": {
              "dictType": "WEB",
              "dictKey": [
                "WEB",
                "user-status"
              ],
              "labelField": "dictName",
              "valueField": "dictCode",
              "doRequest": {
                "url": "/WEB/dict/common",
                "method": "post"
              }
            }
          }
        },
        {
          "enable": {
            "control": "radio",
            "label": "是否有效",
            "value": "1",
            "dict": {
              "dictType": "WEB",
              "dictKey": [
                "WEB",
                "boolean"
              ],
              "labelField": "dictName",
              "valueField": "dictCode",
              "doRequest": {
                "url": "/WEB/dict/common",
                "method": "post"
              }
            },
            "required": true
          },
          "defaultDashboard": {
            "control": "select",
            "label": "默认首页",
            "dict": {
              "dictType": "WEB",
              "dictKey": [
                "userInfo",
                "homepage"
              ],
              "labelField": "homePageName",
              "valueField": "homePageCode",
              "doRequest": {
                "url": "/WEB/homepage/authoritied",
                "method": "GET"
              }
            }
          }
        },
        {
          "description": {
            "span": 24,
            "control": "textarea",
            "label": "备注"
          }
        }
      ]
    }
  }
}
