{
  "module": "v-inputDataForm-btn",
  "layout": {
    "form": {
      "initRequest": {
        "url": "/WEB/user/user-info",
        "method": "GET"
      },
      "doRequest": {
        "url": "/WEB/user/update-pwd",
        "method": "PUT"
      },
      "controls": [
        {
          "userCode": {
            "control": "string",
            "label": "用户名",
            "rules": [
              {
                "required": true,
                "message": "buweikong"
              }
            ]
          }
        },
        {
          "password": {
            "control": "password",
            "label": "原密码",
            "rules": [
              {
                "required": true,
                "message": "buweikong"
              }
            ]
          }
        },
        {
          "newPassword": {
            "control": "password",
            "label": "新密码",
            "rules": [
              {
                "required": true,
                "message": "buweikong"
              }
            ]
          }
        },
        {
          "newPasswordConfirm": {
            "control": "password",
            "label": "确认密码",
            "rules": [
              {
                "required": true,
                "message": "buweikong"
              },
              {
                "expression": "'${{form.newPassword}}' == '${{form.newPasswordConfirm}}'",
                "message": "两次密码输入不一致。"
              }
            ]
          }
        }
      ]
    }
  }
}
