{
  "module": "v-inputDataForm-btn",
  "layout": {
    "form": {
      "doRequest": {
        "url": "/WEB/employee",
        "method": "POST",
        "params": {
          "corpCode": "${{params.corpCode}}",
          "orgCode": "${{params.orgCode}}",
          "positionCode": "${{params.positionCode}}"
        }
      },
      "controls": [
        {
          "employeeCode": {
            "control": "text",
            "label": "员工编码",
            "rules": [
              {
                "required": true,
                "message": "请输入员工编码"
              }
            ]
          },
          "employeeName": {
            "control": "text",
            "label": "员工姓名",
            "rules": [
              {
                "required": true,
                "message": "请输入员工姓名"
              }
            ]
          }
        },
        {
          "phonCode": {
            "control": "text",
            "label": "拼音简写"
          },
          "employeeEnglishName": {
            "control": "text",
            "label": "英文名"
          }
        },
        {
          "gender": {
            "control": "radio",
            "label": "性别",
            "value": "male",
            "dict": {
              "dictType": "WEB",
              "dictKey": [
                "WEB",
                "gender"
              ],
              "labelField": "dictName",
              "valueField": "dictCode",
              "doRequest": {
                "url": "/WEB/dict/common",
                "method": "post"
              }
            }
          },
          "birthday": {
            "control": "dateTimePicker",
            "label": "出生日期",
            "disabledDate": "dateAfter"
          }
        },
        {
          "maritalstatus": {
            "control": "select",
            "label": "婚姻状况",
            "dict": {
              "dictType": "WEB",
              "dictKey": [
                "WEB",
                "marital-status"
              ],
              "labelField": "dictName",
              "valueField": "dictCode",
              "doRequest": {
                "url": "/WEB/dict/common",
                "method": "post"
              }
            }
          },
          "degree": {
            "control": "select",
            "label": "学位",
            "dict": {
              "dictType": "WEB",
              "dictKey": [
                "WEB",
                "degree"
              ],
              "labelField": "dictName",
              "valueField": "dictCode",
              "doRequest": {
                "url": "/WEB/dict/common",
                "method": "post"
              }
            }
          }
        },
        {
          "phone": {
            "control": "text",
            "label": "电话"
          },
          "email": {
            "control": "text",
            "label": "邮箱",
            "rules": [
              {
                "type": "email",
                "message": "请输入正确的邮箱地址"
              }
            ]
          }
        },
        {
          "enable": {
            "control": "radio",
            "label": "是否有效",
            "value": "1",
            "dict": {
              "dictType": "WEB",
              "dictKey": [
                "WEB",
                "boolean"
              ],
              "labelField": "dictName",
              "valueField": "dictCode",
              "doRequest": {
                "url": "/WEB/dict/common",
                "method": "post"
              }
            },
            "required": true
          },
          "sequence": {
            "control": "inputNumber",
            "label": "排序号"
          }
        },
        {
          "description": {
            "span": 24,
            "control": "textarea",
            "label": "备注"
          }
        }
      ]
    }
  }
}
