{
  "module": "v-inputDataForm-btn",
  "layout": {
    "form": {
      "###initRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "scoreCardType": "0",
          "servicecode": "deci020126"
        }
      },
      "controls": [
        {
          "scoreCardCode": {
            "label": "简单评分卡代码",
            "control": "text",
            "width":"auto",
            "span": 12,
            "disabled":false,
            "rules": [
              {
                "required": true,
                "pattern": "^[A-Za-z][A-Za-z\\d_]{0,39}$",
                "message": "请正确输入"
              }
            ]
          },
          "scoreCardName": {
            "label": "简单评分卡名称",
            "width":"auto",
            "control": "text",
            "span": 12,
            "rules": [
              {
                "required": true,
                "pattern": "^[a-z0-9A-Z\u4e00-\u9fa5]+$",
                "message": "仅可为字母、数字、文字及相关组合",
                "max": 125
              }
            ]
          }
        },
        {
          "description": {
            "label": "备注",
            "width":"auto",
            "control": "textarea",
            "span": 24,
            "showWordLimit": 200,
            "maxlength": 200,
            "rows": 5,
            "rules": [
              {
                "message": "请正确输入",
                "max": 200
              }
            ]
          }
        }
      ],
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "scoreCardType": "${{params.scoreCardType}}",
          "riskOperationType": "A",
          "approveStatus":"00",
          "createUser": "$g{{user_info.userCode}}",
          "updateUser": "$g{{user_info.userCode}}",
          "branchId": "$g{{user_info.branch_id}}",
          "servicecode": "deci020202"
          
        }
      }
    }
  }
}
