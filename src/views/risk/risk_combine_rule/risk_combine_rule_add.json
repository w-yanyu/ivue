{
  "module": "v-inputDataForm-btn",
  "layout": {
    "form": {
      "controls": [
        {
          "cruleName": {
            "label": "规则名称",
            "control": "text",
            "span": 12,
            "rules": [
              {
                "required": true,
                "message": "请正确输入",
                "max": 100
              }
            ]
          },
          "cruleCode": {
            "label": "规则代码",
            "control": "text",
            "span": 12,
            "rules": [
              {
                "required": true,
                "pattern": "^[A-Za-z][A-Za-z\\d_]{0,39}$",
                "message": "请正确输入"
              }
            ]
          }
        },
        {
          "cruleVersion": {
            "label": "规则版本",
            "control": "inputNumber",
            "span": 12,
            "rules": [
              {
                "required": true,
                "message": "请输入正整数",
                "type":"integer",
                "min": 0
              }
            ]
          },
          "cruleType": {
            "label": "规则类型",
            "control": "text",
            "span": 12,
            "rules": [
              {
                "required": true,
                "message": "请正确输入",
                "max": 2
              }
            ]
          }
        },
        {
          "natureExpression": {
            "label": "规则自然语言表达式",
            "control": "text",
            "span": 12,
            "rules": [
              {
                "required": true,
                "message": "请正确输入",
                "max": 4000
              }
            ]
          }
        },
        {
          "executableExpression": {
            "label": "规则可执行表达式",
            "control": "textarea",
            "span": 24,
            "rules": [
              {
                "required": true,
                "message": "请正确输入",
                "max": 100
              }
            ]
          }
        },
        {
          "description": {
            "label": "备注",
            "control": "textarea",
            "span": 24,
            "rules": [
              {
                "message": "请正确输入",
                "max": 2000
              }
            ]
          }
        }
      ],
      "doRequest": {
        "url": "/API/risk-management-service/risk-combine-rule/add",
        "method": "post",
        "params":{
          "createUser": "$g{{user_info.userCode}}",
          "updateUser": "$g{{user_info.userCode}}"
        }
      }
    }
  }
}
