{
  "module": "v-search-btn-datagrid",
  "layout": {
    "form": {
      "controls": [
        {
          "cruleId": {
            "label": "规则id",
            "control": "text",
            "span": 8,
            "rules": [
              {
                "message": "字段长度超限",
                "max": 8
              }
            ]
          },
          "cruleName": {
            "label": "规则名称",
            "control": "text",
            "span": 8,
            "rules": [
              {
                "message": "字段长度超限",
                "max": 100
              }
            ]
          },
          "cruleCode": {
            "label": "规则代码",
            "control": "text",
            "span": 8,
            "rules": [
              {
                "message": "字段长度超限",
                "max": 40
              }
            ]
          }
        },
        {
          "cruleVersion": {
            "label": "规则版本",
            "control": "text",
            "span": 8
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "label": "新增",
          "toRequest": {
            "url": "/views/risk/risk_combine_rule/risk_combine_rule_add.json",
            "method": "get",
            "params": {}
          },
          "props": {
            "width": "70%",
            "title": "新增"
          }
        }
      ]
    },
    "datagrid": {
      "isInitSearch": false,
      "doRequest": {
        "url": "/API/risk-management-service/risk-combine-rule/page-select",
        "method": "post"
      },
      "thead": [
        {
          "label": "规则id",
          "prop": "cruleId"
        },
        {
          "label": "规则名称",
          "prop": "cruleName"
        },
        {
          "label": "规则代码",
          "prop": "cruleCode"
        },
        {
          "label": "规则版本",
          "prop": "cruleVersion"
        },
        {
          "label": "备注",
          "prop": "description"
        },
        {
          "label": "最后更新人",
          "prop": "updateUser"
        },
        {
          "label": "最后修改日期",
          "prop": "updateTime"
        },
        {
          "label": "操作",
          "btns": [
            {
              "type": "edit",
              "label": "编缉",
              "toRequest": {
                "url": "/views/risk/risk_combine_rule/risk_combine_rule_edit.json",
                "method": "get"
              },
              "props": {
                "width": "70%"
              }
            },
            {
              "type": "look",
              "label": "查看",
              "toRequest": {
                "url": "/views/risk/risk_combine_rule/risk_combine_rule_view.json",
                "method": "get"
              },
              "props": {
                "width": "70%"
              }
            },
            {
              "type": "delete",
              "label": "删除",
              "doRequest": {
                "url": "/API/risk-management-service/risk-combine-rule/delete",
                "method": "post"
              }
            }
          ]
        }
      ]
    }
  }
}
