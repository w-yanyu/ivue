{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "btns": [
        {
          "type": "submit",
          "label": "提交",
          "icon": "",
          "doRequest": {
            "url": "/SUMP/call/RPCCall",
            "method": "POST",
            "params": {
              "servicecode": "deci050076",
              "batch_test_type": "1"
            }
          }
        }
      ],
      "controls": [
        {
          "task_code": {
            "control": "text",
            "label": "任务代码",
            "width": "auto",
            "rules": [
              {
                "required": true,
                "message": "请输入任务代码"
              },
              {
                "max": 32,
                "message": "长度不能超过32个字符"
              }
            ]
          },
          "task_name": {
            "control": "text",
            "label": "任务名称",
            "width": "auto",
            "rules": [
              {
                "required": true,
                "message": "请输入任务名称"
              },
              {
                "max": 100,
                "message": "长度不能超过100个字符"
              }
            ]
          }
        },
        {
          "task_desc": {
            "control": "textarea",
            "label": "任务描述",
            "width": "auto",
            "span": 24,
            "autosize": {
              "minRows": 3,
              "maxRows": 5
            },
            "maxlength": 500,
            "showWordLimit": true,
            "rules": [
              {
                "required": true,
                "message": "请输入任务描述"
              },
              {
                "max": 500,
                "message": "长度不能超过500个字符"
              }
            ]
          }
        }
      ]
    }
  }
}
