{
  "module": "v_search_btn_datagrid",
  "pageId": "risk_message_template",
  "layout": {
    "form": {
      "controls": [
        {
          "templateCode": {
            "label": "消息模板代码",
            "control": "text",
            "span": 8,
            "rules": [
              {
                "max": 10,
                "message": "请正确输入"
              }
            ]
          },
          "status": {
            "label": "状态",
            "control": "select",
            "span": 8,
            "dict": {
              "dictType": "status",
              "dictKey": [],
              "format": "value-label",
              "doRequest": {
                "url": "/views/risk/dictdata/enabledStatus.json",
                "method": "get"
              }
            }
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "label": "新增",
          "authId": "message_template_add_btn",
          "toRequest": {
            "url": "/views/risk/risk_message_template/risk_message_template_add.json",
            "method": "get",
            "params": {}
          },
          "props": {
            "width": "70%",
            "title": "新增"
          }
        }
      ]
    },
    "datagrid": {
      "isInitSearch": false,
      "doRequest": {
        "url": "/API/risk-management-service/risk-message-template/page-select",
        "method": "post"
      },
      "thead": [
        {
          "label": "消息模板代码",
          "prop": "templateCode"
        },
        {
          "label": "消息模板内容",
          "prop": "templateContent"
        },
        {
          "label": "状态",
          "prop": "status",
          "dict": {
            "dictType": "status",
            "dictKey": [],
            "doRequest": {
              "url": "/views/risk/dictdata/enabledStatus.json",
              "method": "get"
            }
          }
        },
        {
          "label": "描述",
          "prop": "description"
        },
        {
          "label": "操作",
          "width": "200px",
          "btns": [
            {
              "type": "edit",
              "label": "编缉",
              "authId": "message_template_upd_btn",
              "toRequest": {
                "url": "/views/risk/risk_message_template/risk_message_template_edit.json",
                "method": "get"
              },
              "props": {
                "width": "70%",
                "title": "编缉"
              }
            },
            {
              "type": "add",
              "label": "启用",
              "authId": "message_template_enabled_btn",
              "doRequest": {
                "url": "/API/risk-management-service/risk-message-template/enabled",
                "method": "post",
                "params": {
                  "updateUser": "$g{{user_info.userCode}}"
                }
              },
              "confirm": {
                "title": "提示信息",
                "msg": "确定启用该消息模板？",
                "confirmButtonText": "确定",
                "cancelButtonText": "取消"
              },
              "show": {
                "prop": "status",
                "is": ["0"]
              }
            },
            {
              "type": "add",
              "label": "停用",
              "authId": "message_template_disabled_btn",
              "doRequest": {
                "url": "/API/risk-management-service/risk-message-template/disabled",
                "method": "post",
                "params": {
                  "updateUser": "$g{{user_info.userCode}}"
                }
              },
              "confirm": {
                "title": "提示信息",
                "msg": "确定停用该消息模板？",
                "confirmButtonText": "确定",
                "cancelButtonText": "取消"
              },
              "show": {
                "prop": "status",
                "is": ["1"]
              }
            },
            {
              "type": "look",
              "label": "查看",
              "toRequest": {
                "url": "/views/risk/risk_message_template/risk_message_template_view.json",
                "method": "get"
              },
              "props": {
                "width": "70%",
                "title": "查看"
              }
            },
            {
              "type": "delete",
              "label": "删除",
              "authId": "message_template_del_btn",
              "doRequest": {
                "url": "/API/risk-management-service/risk-message-template/delete",
                "method": "post"
              }
            }
          ]
        }
      ],
      "pagination": {
        "show": true,
        "pageSizes": [
          "10",
          "50",
          "100",
          "200"
        ],
        "pageSize": 10
      }
    }
  }
}
