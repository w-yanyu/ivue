{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "controls": [
        {
          "templateCode": {
            "label": "消息模板代码",
            "control": "text",
            "span": 12,
            "rules": [
              {
                "required": true,
                "pattern": "^[A-Za-z][A-Za-z\\d_]{0,9}$",
                "message": "请正确输入"
              }
            ]
          }
        },
        {
          "templateContent": {
            "label": "消息模板内容",
            "control": "textarea",
            "span": 24,
            "placeholder": "请输入模板内容",
            "showWordLimit": true,
            "maxlength": 500,
            "autosize": {
              "minRows": 4,
              "maxRows": 6
            },
            "rules": [
              {
                "required": true,
                "max": 500,
                "message": "请正确输入"
              }
            ]
          }
        },
        {
          "description": {
            "label": "描述",
            "control": "textarea",
            "span": 24,
            "showWordLimit": true,
            "maxlength": 500,
            "autosize": {
              "minRows": 4,
              "maxRows": 6
            },
            "rules": [
              {
                "max": 500,
                "message": "请正确输入"
              }
            ]
          }
        }
      ],
      "doRequest": {
        "url": "/API/risk-management-service/risk-message-template/add",
        "method": "POST",
        "params":{
          "createUser": "$g{{user_info.userCode}}",
          "updateUser": "$g{{user_info.userCode}}"
        }
      }
    }
  }
}
