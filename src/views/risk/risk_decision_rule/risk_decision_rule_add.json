{
  "module": "v-inputDataForm-btn",
  "layout": {
    "form": {
      "controls": [{
          "ruleName": {
            "label": "规则名称",
            "control": "text",
            "span": 12,
            "rules": [{
              "required": true,
              "message": "请正确输入"
            }]
          }
        },
        {
          "ruleCode": {
            "label": "规则代码",
            "control": "text",
            "span": 12,
            "rules": [{
              "required": true,
              "message": "请正确输入"
            }]
          }
        },
        {
          "ruleType": {
            "label": "规则类型",
            "control": "select",
            "span": 12,
            "value": "NR",
            "options": [{
                "label": "NR-普通规则",
                "value": "NR"
              }
            ],
            "rules": [{
              "required": true,
              "message": "该控件必填"
            }]
          }
        },
        {
          "description": {
            "label": "备注",
            "control": "textarea",
            "showWordLimit": 2000,
            "maxlength": 2000,
            "span": 24
          }
        }
      ],
      "initRequest": "${{params}}",
      "btns": [{}]
    }
  }
}
