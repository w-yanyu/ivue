{
  "module": "v-inputDataForm-btn",
  "layout": {
    "form": {
      "controls": [{
          "ruleId": {
            "label": "规则id",
            "control": "hidden",
            "span": 8,
            "rules": [{
              "required": true,
              "message": "该控件必填"
            }]
          },
          "ruleCode": {
            "label": "规则代码",
            "control": "text",
            "span": 8,
            "disabled": true,
            
            "rules": [{
              "required": true,
              "message": "该控件必填"
            }]
          },
          "ruleName": {
            "label": "规则名称",
            "control": "text",
            "span": 8,
        
            "rules": [
              {
              "required": true,
              "pattern": "^[a-z0-9A-Z\u4e00-\u9fa5]+$",
              "message": "仅可为字母、数字、文字及相关组合",
               "max": 125
                }
             ]
          },
          "version": {
            "label": "版本号",
            "control": "string",
        
            "span": 8,
            "rules": [{
              "required": true
            }]
          }
        },
        {
          "riskOperationType": {
            "label": "操作类型",
            "control": "select",
            "span": 8,
         
            "disabled": true,
            "options": [
              {
              "label": "新增",
              "value": "A"
              },{
              "label": "变更",
              "value": "U"
              },
              {
                "label": "删除",
                "value": "D"
                },
               {
                  "label": "复制",
                  "value": "C"
                },
                {
                  "label": "版本切换",
                  "value": "S"
                }
          ]
          }
        },
        {
          "description": {
            "label": "备注",
            "control": "textarea",
            "showWordLimit": 200,
            "maxlength": 200,
            "span": 24,
           
            "autosize": {
              "minRows": 5
            }
          }
        }
      ],
      "initRequest": "${{params}}",
      "btns": [  {
      
      }]
    }
  }
}
