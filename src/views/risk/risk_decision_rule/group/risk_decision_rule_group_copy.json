{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "###initRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "scoreCardType": "1",
          "servicecode": "deci010611"
        }
      },
      "btns": [
        {
          "type": "submit",
          "target": "addlog",
          "label": "复制",
          "doRequest": {
            "url": "/SUMP/icmcall/icmRPCCall",
            "method": "POST",
            "params": {
              "servicecode": "deci010616"
            }
          }
        } ,
        {
          "type": "close",
          "label": "取消",
          "icon": ""
      }
      ],
      "controls": [
        {
          "groupCode": {
            "control": "hidden",
            "label": "规则组代码",
            "value": "${{params.groupCode}}"
          },
          "groupName": {
            "control": "hidden",
            "label": "规则组名称",
            "value": "${{params.groupName}}"
          },
          "groupId": {
            "control": "hidden",
            "label": "规则组ID",
            "value": "${{params.groupId}}"
          },
          "currVersion": {
            "control": "hidden",
            "label": "当前生效版本",
            "value": "${{params.currVersion}}"
          },
          "newGroupCode": {
            "control": "text",
            "align": "center",
            "span": 16,
            "disabled":false,
            "inputWidth": "250px",
            "label": "规则组代码",
            "rules": [
              {
                "required": true,
                "pattern": "^[A-Za-z][A-Za-z\\d_]{0,39}$",
                "message": "请输入字母、数字组合"
              }
            ]
          },
          "newGroupName": {
            "control": "text",
            "label": "规则组名称",
            "align": "center",
            "span": 16,
            "inputWidth": "250px",
            "rules": [
              {
                "required": true,
                "pattern": "^[a-z0-9A-Z\u4e00-\u9fa5]+$",
                "message": "仅可为字母、数字、文字及相关组合"
            }
            ]
          } ,
            "newDescription": {
              "label": "备注",
              "control": "textarea",
              "span": 17,
              "showWordLimit": 200,
              "maxlength": 200,
              "rows": 5,
              "rules": [
                {
                  "message": "请正确输入",
                  "max": 200
                }
              ]
            }
        }
      ]
    }
  }
}