{
  "module": "v_search_btn_datagrid",
  "layout": {
    "datagrid": {
      "initRequest": "${{params}}",
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "ln3114",
          "adv_rpymt_adjust_plan_way": "${{params.adv_rpymt_adjust_plan_way}}",
          "adv_rpymt_catg": "${{params.adv_rpymt_catg}}",
          "adv_rpymt_int_rpymt_way": "${{params.adv_rpymt_int_rpymt_way}}",
          "aptmt_rpymt_dt": "${{params.aptmt_rpymt_dt}}",
          "ccy_code_num": "${{params.ccy_code_num}}",
          "ctrct_num": "${{params.ctrct_num}}",
          "cust_num": "${{params.cust_num}}",
          "int_smtn": "${{params.int_smtn}}",
          "loan_acct_num": "${{params.loan_acct_num}}",
          "loan_due_bill_num": "${{params.loan_due_bill_num}}",
          "prcpl_smtn": "${{params.prcpl_smtn}}",
          "ret_totl_amt": "${{params.ret_totl_amt}}",
          "rpymt_amt": "${{params.rpymt_amt}}",
          "rpymt_catg": "${{params.rpymt_catg}}",
          "outlistid": "lnInstmtOut"
        }
      },
      "pagination": {
        "pageSizes": [
          10,
          15,
          20
        ],
        "pageSize": 15,
        "show": false
      },
      "thead": [
        {
          "label": "本期期数",
          "align": "center",
          "type": "text",
          "prop": "this_prd_prds"
        },
        {
          "label": "还款日期",
          "align": "center",
          "type": "dateTimePicker",
          "format": "yyyyMMdd",
          "prop": "rpymt_dt"
        },
        {
          "label": "应还本金",
          "align": "center",
          "type": "text",
          "prop": "intl_prcpl"
        },
        {
          "label": "应还利息",
          "align": "center",
          "type": "text",
          "prop": "intl_int"
        },
        {
          "label": "本息合计",
          "align": "center",
          "type": "text",
          "prop": "evry_term_rpymt_totl_amt"
        },
        {
          "label": "剩余本金",
          "align": "center",
          "type": "text",
          "prop": "this_stg_rsdl_prcpl"
        }
      ]
    }
  }
}