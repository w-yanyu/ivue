{
    "module": "v-inputDataForm-btn",
    "layout": {
        "form": {
            "scope": "formData",
          "initRequest": {
            "url": "/SUMP/call/RPCCall",
            "method": "POST",
            "params": {
              "asset_list_id": "${{params.prod_code}}",
              "servicecode": "ln3280"
            }
          },
            "btns": [
                {
                    "type": "submit",
                    "label": "提交",
                    "icon": "",
                    "doRequest": {
                        "url": "/SUMP/icmcall/icmRPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "syln3281",
                            "alert_cmpt_id":"16",
                            "prod_code": "${{params.prod_code}}"
                        }
                    }
                }
            ],
            "controls": [
                {
                    "lmt_ccy_rule": {
                        "control": "select",
                        "label": "额度币种规则",
                        "dict": {
                            "dictType": "LN_E_LMT_CCY_RULE",
                            "dictKey": [
                                "LN_E_LMT_CCY_RULE"
                            ],
                            "format": "label"
                        },
                        "width": "130px"
                    },
                    "lmt_asgn_ccy": {
                        "control": "select",
                        "label": "额度指定币种",
                        "dict": {
                            "dictType": "MS_CURRENCY",
                            "dictKey": [
                                "MS_CURRENCY"
                            ],
                            "format": "label"
                        },
                        "width": "130px"
                    }
                },
                {
                    "lmt_use_rule": {
                        "control": "select",
                        "label": "额度使用规则",
                        "dict": {
                            "dictType": "LN_E_LMT_USE_RULE",
                            "dictKey": [
                                "LN_E_LMT_USE_RULE"
                            ],
                            "format": "label"
                        },
                        "width": "130px"
                    }
                }

            ]
        }
    }
}
