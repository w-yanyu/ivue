{
    "module": "d-steps",
    "layout": {
      "steps": {
        "scope": "formObj",
        "direction": "horizontal",
        "alignCenter": true,
        "finishStatus": "success",
        "simpleType": false,
        "nextStepType": "submit",
        "list": [
          {
            "title": "限额部件信息",
            "scope": "sp1",
            "icon": "el-icon-document",
            "toRequest": {
              "url": "/views/uccp/limit/component/uccp_component_define_detail.json",
              "method": "get",
              "params": {
                "limit_component_type":"${{params.limit_component_type}}",
                "limit_component_code": "${{params.limit_component_code}}",
                "limit_component_name":"${{params.limit_component_name}}",
                "limit_control_way":"${{params.limit_control_way}}",
                "limit_manage_way":"${{params.limit_manage_way}}",
                "exposure_flag":"${{params.exposure_flag}}",
                "need_check_flag":"${{params.need_check_flag}}",
                "valid_flag":"${{params.valid_flag}}",
                "limit_component_desc":"${{params.limit_component_desc}}"
              }
            }
          },
          {
            "title": "部件维度配置",
            "scope": "sp2",
            "forbidBack":false,
            "icon": "el-icon-document",
            "toRequest": {
              "url": "/views/uccp/limit/component/uccp_component_detail_view.json",
              "method": "get",
              "params": {
                "limit_component_code": "${{params.limit_component_code}}"
                
              },
              "eventAfter": {
                "doParentCallback": true
              }
            }
          }
        ]
      }
    }
  }
  