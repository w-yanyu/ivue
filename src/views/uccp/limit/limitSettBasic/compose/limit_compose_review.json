{
  "module": "v_search_btn_datagrid",
  "layout": {
    "form": {
      "controls": [
        {
          "norm_no": {
            "label": "限额编号",
            "control": "text",
            "rules": [
              {
              }
            ]
          },
          "norm_name": {
            "label": "限额名称",
            "control": "text",
            "rules": [
              {
              }
            ]
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
      ]
    },
    "datagrid": {
      "scope": "searchTable",
      "isInitSearch": true,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "uccp5014",
          "limit_component_type": "0",
          "limit_status":"1"
        }
      },
      "thead": [
        {
          "type": "index"
        },
        {
          "prop": "norm_no",
          "label": "限额编号",
          "align": "center"
        },
        {
          "prop": "norm_name",
          "label": "限额名称",
          "align": "center"
        },
        {
          "prop": "start_date",
          "label": "开始日期",
          "align": "center"
        },
        {
          "prop": "limit_manage_way",
          "label": "管控措施",
          "align": "center",
          "dict": {
            "dictType": "UCCP_E_LIMIT_MANAGE_WAY",
            "dictKey": [
              "UCCP_E_LIMIT_MANAGE_WAY"
            ],
            "format": "label"
          }
        },
        {
          "prop": "limit_control_way",
          "label": "控制方式",
          "align": "center",
          "dict": {
            "dictType": "UCCP_E_LIMIT_CONTORL_WAY",
            "dictKey": [
              "UCCP_E_LIMIT_CONTORL_WAY"
            ],
            "format": "label"
          }
        },
        {
          "prop": "limit_total_amt",
          "label": "限额总额",
          "align": "center",
          "format":{
            "thousand":","
          }
        },
        {
          "prop": "limit_available_amt",
          "label": "限额可用金额",
          "align": "center",
          "format":{
            "thousand":","
          }
        },
        {
          "label": "操作",
          "fixed": "right",
          "width": "210",
          "align": "center",
          "btns": [
            {
              "toRequest": {
                "method": "POST",
                "target": "dialog",
                "url": "@limitDetail"
              },
              "label": "限额详情",
              "type": "edit",
              "props": {
                "title": "限额信息详情",
                "width": "80%"
              }
            },
            {
              "toRequest": {
                "method": "POST",
                "target": "dialog",
                "url": "/views/uccp/limit/limitSettBasic/limit_check_review.json"
              },
              "label": "审核",
              "type": "edit",
              "props": {
                "title": "审核",
                "width": "80%"
              }
            }                    
          ]
        }
      ]
