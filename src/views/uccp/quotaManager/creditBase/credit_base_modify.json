{
    "module": "v-inputDataForm-btn",
    "layout": {
        "form": {
            "initRequest": "${{params}}",
            "doRequest":{
                "url": "/SUMP/call/RPCCall",
                "method": "post",
                "params": {
                    "servicecode": "uccp3046",
                    "record_no":"${{params.record_no}}"
                }
            },
            "controls": [{
                "cust_no": {
                    "control": "string",
                    "disabled":"false",
                    "edit": false,
                    "label": "客户编号",
                    "keyField": {
                        "cust_no":"cust_no"
                    },
                    "toRequest": {
                        "url": "/views/us/cust_lookup.json",
                        "method": "get"
                    },
                    "props": {
                        "title": "请选择客户编号",
                        "width": "80%"
                    }
                },
                "effect_date": {
                    "disabled":"false",
                    "control": "dateTimePicker",
                    "label": "生效日期",
                    "rules": [{
                        "required": true,
                        "message": "请选择生效日期"
                    }]
                },
                "expiry_date": {
                    "disabled":"false",
                    "control": "dateTimePicker",
                    "label": "失效日期",
                    "rules": [{
                        "required": true,
                        "message": "请选择失效日期"
                    }]
                },
                "base_ccy_code": {
                    "disabled":"false",
                    "control": "select",
                    "label": "基础币种",
                    "align": "center",
                    "rules": [{
                        "required": true,
                        "message": "请输入基础币种"
                    }],
                    "dict": {
                        "dictType": "MS_CURRENCY",
                        "dictKey": [
                            "MS_CURRENCY"
                        ],
                        "labelField": "dictName",
                        "valueField": "dictId"
                    }
                },
                "basic_credit_limit": {
                    "disabled":"false",
                    "control": "currency",
                    "label": "基本授信额度",
                    "format": {
                        "decimal": "2"
                    },
                    "align": "left",
                    "rules": [{
                        "required": true,
                        "message": "请输入基本授信额度"
                    }]
                },
                "basic_exposure_limit": {
                    "disabled":"false",
                    "control": "currency",
                    "label": "基本授信敞口额度",
                    "format": {
                        "decimal": "2"
                    },
                    "align": "left",
                    "rules": [{
                        "required": true,
                        "message": "请输入基本授信敞口额度"
                    }]
                },
                "quota_status": {
                    "control": "select",
                    "label": "额度状态",
                    "align": "center",
                    "disabled":"false",
                    "value":"1",
                    "rules": [{
                        "required": true,
                        "message": "请选择额度状态"
                    }],
                    "dict": {
                        "dictType": "UCCP_E_QUOTA_STATUS",
                        "dictKey": [
                            "UCCP_E_QUOTA_STATUS"
                        ],
                        "labelField": "dictName",
                        "valueField": "dictId"
                    }
                }
                }
            ]
        }
    }
}
