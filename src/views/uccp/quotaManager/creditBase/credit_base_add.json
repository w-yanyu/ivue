{
    "module": "v-inputDataForm-btn",
    "layout": {
        "form": {
            "#initRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "post",
                "params": {
                    "servicecode": "uccp3050"
                   
                }
            },
            "doRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "post",
                "params": {
                    "servicecode": "uccp3044"
                   
                }
            },
            "controls": [{
                "cust_no": {
                    "control": "lookup",
                    "edit": false,
                    "label": "客户编号",
                    "keyField": {
                        "cust_no":"cust_no"
                    },
                    "toRequest": {
                        "url": "/views/us/cust_lookup.json",
                        "method": "get"
                    },
                    "props": {
                        "title": "请选择客户编号",
                        "width": "80%"
                    }
                },
                "effect_date": {
                    "control": "dateTimePicker",
                    "label": "生效日期",
                    "rules": [{
                        "required": true,
                        "message": "请选择生效日期"
                    }]
                },
                "expiry_date": {
                    "control": "dateTimePicker",
                    "label": "失效日期",
                    "rules": [{
                        "required": true,
                        "message": "请选择失效日期"
                    }]
                },
                "base_ccy_code": {
                    "control": "select",
                    "label": "基础币种",
                    "align": "center",
                    "rules": [{
                        "required": true,
                        "message": "请输入基础币种"
                    }],
                    "dict": {
                        "dictType": "MS_CURRENCY",
                        "dictKey": [
                            "MS_CURRENCY"
                        ],
                        "labelField": "dictName",
                        "valueField": "dictId"
                    }
                }},
                {
                "basic_credit_limit": {
                    "control": "currency",
                    "span": 10,
                    "label": "基本授信额度",
                    "format": {
                        "decimal": "2"
                    },
                    "align": "left",
                    "rules": [{
                        "required": true,
                        "message": "请输入基本授信额度"
                    }]
                },
                "testBtn": {
                    "control": "button",
                    "type": "lookup",
                    "span": 2,
                    "height": "50px",
                    "label": "",
                    "text": "获取额度",
                    "firstInit": false,
                    "events": {
                      "doRequest": {
                        "url": "/SUMP/call/RPCCall",
                        "method": "post",
                        "params": {
                            "servicecode": "uccp3050"
                        
                        },
                        "resultSet": {
                          "basic_credit_limit": "basic_credit_limit"
                        }
                      }
                    }
                  },
                "basic_exposure_limit": {
                    "control": "currency",
                    "#span": 10,
                    "label": "基本授信敞口额度",
                    "format": {
                        "decimal": "2"
                    },
                    "align": "left",
                    "rules": [{
                        "required": true,
                        "message": "请输入基本授信敞口额度"
                    }]
                }},
                {
                "quota_status": {
                    "control": "select",
                    "label": "额度状态",
                    "align": "center",
                    "disabled":"true",
                    "value":"1",
                    "rules": [{
                        "required": true,
                        "message": "请选择额度状态"
                    }],
                    "dict": {
                        "dictType": "UCCP_E_QUOTA_STATUS",
                        "dictKey": [
                            "UCCP_E_QUOTA_STATUS"
                        ],
                        "labelField": "dictName",
                        "valueField": "dictId"
                    }
                }
                }
            ]
        }
    }
}
