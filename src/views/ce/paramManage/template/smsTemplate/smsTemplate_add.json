{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "btns": [
                {
                    "type": "submit",
                    "label": "提交",
                    "doRequest": {
                        "url": "/SUMP/call/RPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "ce0090",
                            "page_id": "/views/ce/paramManage/template/smsTemplate/smsTemplate_add.json",
                            "coll_kind":"02"
                        }
                    }
                }
            ],

            "controls": [
                {
                    "template_type": {
                        "control": "select",
                        "disabled":true,
                        "label": "模板类型",
                        "default":"SMS",
                        "width": "130px",
                        "dict": {
                          "dictType": "CE_TEMPLATE_TYPE",
                          "dictKey": [
                            "CE_TEMPLATE_TYPE"
                          ],
                          "format": "value-label"
                        },
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            },
                            {
                                "max":10,
                                "message":"最多可以输入 10 个字节"
                            }
                        ]
                    },
                    "template_code": {
                        "control": "text",
                        "label": "模板编号",
                        "width": "130px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                },
                {
                    "template_name": {
                        "control": "text",
                        "label": "模板名称",
                        "width": "130px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            },
                            {
                                "max":30,
                                "message":"最多可以输入 30 个字节"
                            }
                        ]
                    },
                    "template_desc": {
                        "control": "text",
                        "label": "模板描述",
                        "width": "130px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                },
                {
                    "send_type": {
                        "control": "select",
                        "label": "发送方式",
                        "width": "130px",
                        "default":"TIME",
                        "dict": {
                          "dictType": "CE_SEND_TYPE",
                          "dictKey": [
                            "CE_SEND_TYPE"
                          ],
                          "format": "value-label"
                        },
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                },
                {
                    "template_content": {
                        "control": "textarea",
                        "label": "模板内容",
                        "width": "130px",
                        "span":"24",
                        "autosize":"{ minRows: 2, maxRows: 4}",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                }
            ]
        }
    }
}
