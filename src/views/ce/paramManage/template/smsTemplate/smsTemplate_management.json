{
    "module": "v_search_btn_datagrid",

    "layout": {
        "form": {
            "scope": "formData",
            "controls": [
                {
                    "template_code": {
                        "control": "text",
                        "label": "模板编号"
                    },
                    "template_name": {
                        "control": "text",
                        "label": "模板名称"
                    }
                },
                {
                    "template_desc": {
                        "control": "text",
                        "label": "模板描述"
                    }
                }
            ]
        },

        "toolbar": {
            "btns": [
                {
                    "type": "add",
                    "icon": "el-icon-circle-plus",
                    "target": "dialog",
                    "label": "新增",
                    "toRequest": {
                        "method": "GET",
                        "url": "/views/ce/paramManage/template/smsTemplate/smsTemplate_add.json"
                    },
                    "props": {
                        "title": "新增短信模板"
                    }
                }
            ]
        },

        "datagrid": {
            "isInitSearch": false,
            "doRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "POST",
                "params": {
                    "servicecode": "ce0094",
                    "template_type":"SMS"
                }
            },

            "thead": [
                {
                    "type":"string",
                    "label": "模板编号",
                    "align":"center",
                    "prop": "template_code"
                },
                {
                    "type":"string",
                    "label": "模板名称",
                    "align":"center",
                    "prop": "template_name"
                },
                {
                    "type":"string",
                    "label": "模板描述",
                    "align":"center",
                    "prop": "template_desc"
                },
                {
                    "type":"string",
                    "label": "模板内容",
                    "align":"center",
                    "prop": "template_content"
                },
                {
                    "type":"string",
                    "label": "发送方式",
                    "align":"center",
                    "prop": "send_type",
                    "dict": {
                      "dictType": "CE_SEND_TYPE",
                      "dictKey": [
                        "CE_SEND_TYPE"
                      ],
                      "format": "value-label"
                    }
                },
                {
                    "label": "操作",
                    "####width": "100px",
                    "fixed": "right",
                    "align":"center",
                    "btns": [
                        {
                            "type":"look",
                            "label":"详情",
                            "toRequest":{
                                "url":"/views/ce/paramManage/template/smsTemplate/smsTemplate_info.json",
                                "method":"POST"
                            },
                            "props":{
                                "title":"短信模板详情"
                            }
                        },
                        {
                            "type": "edit",
                            "label": "维护",
                            "toRequest": {
                                "url": "/views/ce/paramManage/template/smsTemplate/smsTemplate_modify.json",
                                "method": "POST"
                            },
                            "props": {
                                "title": "短信模板维护"
                            }
                        },
                        {
                            "type": "delete",
                            "label": "删除",
                            "doRequest": {
                                "url": "/SUMP/call/RPCCall",
                                "method": "POST",
                                "params": {
                                    "servicecode": "ce0091",
                                     "template_type": "SMS",
                                     "coll_kind":"02"
                                }
                            }
                        }
                    ]
                }
            ]
        }
    }
}
