{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "btns": [
                {
                    "type": "submit",
                    "label": "提交",
                    "doRequest": {
                        "url": "/SUMP/call/RPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "ce0120",
                            "page_id": "/views/ce/paramManage/template/skillTemplate/skillTemplate_add.json",
                            "coll_kind":"02"
                        }
                    }
                }
            ],
            "controls": [
                {
                    "skill_id": {
                        "control": "text",
                        "label": "话术代码",
                        "width": "130px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    },
                    "skill_name": {
                        "control": "text",
                        "label": "话术名称",
                        "width": "130px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                },
                {
                    "skill_no": {
                        "control": "inputNumber",
                        "label": "话术排序",
                        "width": "130px",
                        "min": 1,
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    },
                    "is_valid": {
                        "control": "select",
                        "label": "是否启用",
                        "width": "130px",
                        "default":"Y",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ],
                        "dict": {
                            "dictType": "MS_E_YESORNO",
                            "dictKey": [
                                "MS_E_YESORNO"
                            ],
                            "format": "value-label"
                        }
                    }
                },
                {
                    "skill_desc": {
                        "control": "textarea",
                        "label": "话术描述",
                        "width": "130px",
                        "span":"24",
                        "autosize":"{ minRows: 2, maxRows: 4}",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                }
            ]
        }
    }
}
