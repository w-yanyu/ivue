{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "scope":"formData",
            "initRequest": "${{params}}",
            "doRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "POST",
                "params": {
                    "servicecode": "ce0092",
                    "coll_kind":"02"
                }
            },
            "btns": [
                {
                    "type": "submit",
                    "label": "提交",
                    "icon": "el-icon-tickets"
                }
            ],
            "controls": [
                {
                    "template_type": {
                        "control": "select",
                        "disabled":true,
                        "label": "模板类型",
                        "default":"EML",
                        "inputWidth": "200px",
                        "dict": {
                          "dictType": "CE_TEMPLATE_TYPE",
                          "dictKey": [
                            "CE_TEMPLATE_TYPE"
                          ],
                          "format": "value-label"
                        },
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    },
                    "template_code": {
                        "control": "text",
                        "label": "模板编号",
                        "disabled":true,
                        "inputWidth": "200px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            },
                            {
                                "max": 10,
                                "message":"最多可以输入 10 个字节"
                            }
                        ]
                    }
                },
                {
                    "template_name": {
                        "control": "text",
                        "label": "模板名称",
                       "inputWidth": "200px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            },
                            {
                                "max": 10,
                                "message":"最多可以输入 30 个字节"
                            }
                        ]
                    },
                    "template_desc": {
                        "control": "text",
                        "label": "模板描述",
                        "inputWidth": "200px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                },
                {
                    "send_type": {
                        "control": "select",
                        "label": "发送方式",
                        "inputWidth": "200px",
                        "default":"TIME",
                        "dict": {
                          "dictType": "CE_SEND_TYPE",
                          "dictKey": [
                            "CE_SEND_TYPE"
                          ],
                          "format": "value-label"
                        },
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                },
                {
                    "template_content": {
                        "control": "mce",
                        "label": "模板内容",
                        "labelWidth": "8",
                        "span":"20",
                        "autosize":"{ minRows: 2, maxRows: 4}",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                }
            ]
        }
    }
}
