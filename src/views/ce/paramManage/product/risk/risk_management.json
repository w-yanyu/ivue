{
    "module": "v_search_btn_datagrid",
    "layout": {
        "form": {
            "scope": "formData",
            "controls": [
                {
                    "risklevel_code": {
                        "control": "text",
                        "label": "风险等级代码"
                    },
                    "risklevel_name": {
                        "control": "text",
                        "label": "风险等级名称"
                    },
                    "risk_grade_desc": {
                        "control": "text",
                        "label": "风险等级描述"
                    }
                }
            ]
        },
        "toolbar": {
            "btns": [
                {
                    "type": "add",
                    "icon": "el-icon-circle-plus",
                    "target": "dialog",
                    "label": "新增",
                    "toRequest": {
                        "method": "GET",
                        "url": "/views/ce/paramManage/product/risk/risk_add.json"
                    },
                    "props": {
                        "title": "新增风险级别定义"
                    }
                }
            ]
        },
        "datagrid": {
            "isInitSearch": false,
            "doRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "POST",
                "params": {
                    "servicecode": "ce0024"
                }
            },
            "thead": [
                {
                    "type":"string",
                    "align":"center",
                    "label": "风险等级代码",
                    "prop": "risklevel_code"

                },
                {
                    "type":"string",
                    "align":"center",
                    "label": "风险等级名称",
                    "prop": "risklevel_name"
                },
                {
                    "type":"string",
                    "align":"center",
                    "label": "风险等级描述",
                    "prop": "risk_grade_desc"
                },
                {
                    "type":"string",
                    "align":"center",
                    "label": "是否默认",
                    "prop": "is_default",
                    "dict":{
                        "dictType":"MS_E_YESORNO",
                        "dictKey":[
                            "MS_E_YESORNO"
                        ],
                        "format": "value-label"
                    }
                },
                {
                    "label": "操作",
                    "align":"center",
                    "fixed": "right",
                    "####width": "100px",
                    "btns": [
                        {
                            "type":"look",
                            "label":"详情",
                            "toRequest":{
                                "url":"/views/ce/paramManage/product/risk/risk_info.json",
                                "method":"POST"
                            },
                            "props":{
                                "title":"风险级别定义详情"
                            }

                        },
                        {
                            "type": "edit",
                            "label": "维护",
                            "toRequest": {
                                "url": "/views/ce/paramManage/product/risk/risk_modify.json",
                                "method": "POST"
                            },
                            "props": {
                                "title": "风险级别定义维护"
                            }
                        },
                        {
                            "type": "delete",
                            "label": "删除",
                            "doRequest": {
                                "url": "/SUMP/call/RPCCall",
                                "method": "POST",
                                "params": {
                                    "servicecode": "ce0021",
                                    "coll_kind":"02"
                                }
                            }
                        }
                    ]
                }
            ]
        }
    }
}
