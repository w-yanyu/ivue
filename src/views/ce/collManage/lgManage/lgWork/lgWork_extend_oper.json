{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "btns": [
                {
                    "type": "submit",
                    "label": "确认展期",
                    "doRequest": {
                        "url": "/SUMP/icmcall/icmRPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "pl4685",
                            "work_id": "${{params.selectedData}}"
                        }
                    }
                },
                {
                    "type": "close",
                    "label": "取消"
                }
            ],
            "controls": [
                {
                    "extend_days": {
                        "control": "dateTimePicker",
                        "width": "180px",
                        "align": "center",
                        "span": "20",
                        "label": "法诉到期日"
                    }
                },
                {
                    "apply_reason": {
                        "control": "textarea",
                        "label": "展期原因",
                        "width": "180px",
                        "align": "center",
                        "span": "20",
                        "rows": 6,
                        "placeholder":"请输入",
                        "rules": [
                            {
                                "required": true
                            }
                        ]
                    }
                }
            ]
        }
    }
}