{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "scope":"formData",
            "initRequest": "${{params}}",
            "btns": [
                {
                    "type": "submit",
                    "icon": "el-icon-check",
                    "label": "提交",
                    "doRequest": {
                        "method": "POST",
                        "url": "/SUMP/icmcall/icmRPCCall",
                        "params": {
                            "servicecode":"pl4709",
                            "case_id":"${{params.selectedData}}"
                        }
                    }
                },
                {
                  "type": "close",
                  "label": "取消"
                }
            ],
            "controls": [
                {
                  "wo_type": {
                    "control": "remoteSelect",
                    "label": "核销类型",
                    "labelField": "drop_list_desc",
                    "valueField": "drop_list_value",
                    "doRequest": {
                      "url": "/SUMP/icmcall/icmRPCCall",
                      "method": "POST",
                      "params": {
                        "servicecode": "ap1071",
                        "drop_list_type": "wo_type"
                      }
                    },
                    "format": "label",
                    "rules": [
                      {
                        "required": true,
                        "message":"请选择"
                      }
                    ]
                  }
                },
                {
                    "apply_reason": {
                        "control": "textarea",
                        "label": "申请说明",
                        "width": "180px",
                        "align": "center",
                        "span": "20",
                        "rows": 6,
                        "placeholder":"请输入",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                }
            ]
        }
    }
}
