{
    "module": "v_form_btn_dynamic",
    "layout": {
        "form": {
            "scope": "formData",
          
            "controls": [
                {
                    "upload": {
                        "control": "dynamic",
                       
                        "span": 6,
                        "toRequest": {
                            "url": "@SingleUpload",
                            "method": "get",
                            "params": {
                                "formKey": "upload",
                                "formLabel": "上传分案文件"
                            }
                        }
                    }
                }
            ]
        },
        "toolbar": {
            "btns": [
                 {
                    "type": "submit",
                    "label": "分案导入",
                    "unplain":true,
                    "icon": "",
                    "doRequest": {
                        "url": "/SUMP/icmcall/icmRPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "RLMSPLTS1051",
                            "upload": "${{formData.upload}}"
                        }
                    }
                }
            ]
        }              
    }
}