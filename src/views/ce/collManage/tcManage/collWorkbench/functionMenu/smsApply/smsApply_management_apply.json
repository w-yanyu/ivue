{
  "module": "v-inputDataForm-btn",
  "layout": {
    "form": {
      "btns": [
        {
          "type": "custom",
          "target": "dialog",
          "label": "申请",
          "doRequest": {
            "url": "/SUMP/call/RPCCall",
            "method": "POST",
            "params": {
              "servicecode": "ce3523",
              "case_no":"${{params.case_no}}",
              "template_code": "${{form.template_code}}",
              "tel_no":"${{form.tel_no}}",
              "collection_type":"TC"
            }
          }
        },
        {
          "type": "close",
          "label": "返回"
        }
      ],
      "controls": [
        {
          "template_code": {
            "control": "remoteSelect",
            "span": 8,
            "selectFirstValue": true,
            "clearable": false,
            "inputWidth": "250px",
            "labelWidth": "0",
            "label": "短信模板",
            "labelField": "template_name",
            "valueField": "template_code",
            "doRequest": {
              "url": "/SUMP/call/RPCCall",
              "method": "POST",
              "params": {
                "servicecode": "ce0414",
                "coll_kind": "02",
                "template_type": "SMS",
                "send_type": "AUTO"
              }
            },
            "format": "label",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ],
            "events": {
              "doRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "ce0094",
                  "coll_kind": "02",
                  "template_code": "${{form.template_code}}",
                  "template_type": "SMS"
                },
                "resultSet": {
                  "template_content": "template_content"
                }
              }
            }
          },

          "tel_no": {
            "control": "text",
            "span": 8,
            "inputWidth": "250px",
            "labelWidth": "0",
            "label": "手机号码",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              },
              {
                "pattern":"^1[3-9]\\d{9}$",
                "message": "请输入正确的号码"
              }
            ]
          },
          "sms_content": {
            "disabled":true,
            "control": "textarea",
            "default":"${{params.sms_content}}",
            "inputWidth": "900px",
            "span": 22,
            "rows":"8",
            "labelWidth": "0",
            "label": "模板内容"
          }
        }
      ]
    }
  }
}
