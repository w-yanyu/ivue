{
  "module": "v_search_btn_datagrid",
  "layout": {

    "toolbar": {
      "btns": []
    },
    "datagrid": {
      "isInitSearch": false,
      "doRequest": {
        "url": "/SUMP/call/RPCCall",
        "method": "POST",
        "params": {
          "servicecode": "ce3545",
          "case_no": "${{params.case_no}}",
          "apply_journal_no": ""
        }
      },
      "thead": [
        {
          "type": "string",
          "label": "信邮模板",
          "align": "center",
          "width":"180px",
          "prop": "template_code",
          "dict": {
            "dictKey": [
              "template_code"
            ],
            "format": "label",
            "labelField": "template_name",
            "valueField": "template_code",
            "doRequest": {
              "url": "/SUMP/call/RPCCall",
              "method": "POST",
              "params": {
                "servicecode": "ce0414",
                "coll_kind": "02",
                "template_type": "EML"
              }
            }
          }
        },
        {
          "type": "string",
          "label": "邮件地址",
          "align": "center",
          "width":"180px",
          "prop": "email_addr"
        },
        {
          "type": "string",
          "label": "邮件内容",
          "align": "center",
          "width":"180px",
          "prop": "mail_content"
        },
        {
          "type": "string",
          "label": "申请人",
          "align": "center",
          "width":"180px",
          "prop": "appt",
          "dict": {
            "dictKey": [
              "appt"
            ],
            "format": "label",
            "labelField": "user_name",
            "valueField": "user_id",
            "doRequest": {
              "url": "/SUMP/call/RPCCall",
              "method": "POST",
              "params": {
                "servicecode": "ce0403"
              }
            }
          }
        },
        {
          "type": "string",
          "label": "申请时间",
          "align": "center",
          "width":"180px",
          "prop": "apply_date"
        },
        {
          "type": "string",
          "label": "审核状态",
          "align": "center",
          "width":"180px",
          "prop": "appr_state",
          "dict": {
            "dictType": "CE_E_CHECK_STATUS",
            "dictKey": [
              "CE_E_CHECK_STATUS"
            ],
            "format": "label"
          }
        },
        {
          "type": "string",
          "label": "审核人",
          "align": "center",
          "width":"180px",
          "prop": "approver",
          "dict": {
            "dictKey": [
              "approver"
            ],
            "format": "label",
            "labelField": "user_name",
            "valueField": "user_id",
            "doRequest": {
              "url": "/SUMP/call/RPCCall",
              "method": "POST",
              "params": {
                "servicecode": "ce0403"
              }
            }
          }
        },
        {
          "type": "string",
          "label": "审核时间",
          "align": "center",
          "width":"180px",
          "prop": "appr_date"
        },
        {
          "type": "string",
          "label": "审核说明",
          "align": "center",
          "width":"180px",
          "prop": "appr_comment"
        },
        {
          "label": "操作",
          "fixed": "left",
          "align": "center",
          "width":"180px",
          "btns": [
            {
              "type": "delete",
              "label": "撤回",
              "doRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "ce1522",
                  "apply_journal_no": "${{current.apply_journal_no}}"
                }
              },
              "show": {
                "prop": "appr_state",
                "is": [
                  "NC"
                ]
              }
            }
          ]
        }
      ]
    }
  }
}
