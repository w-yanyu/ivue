{
    "module": "v_search_btn_datagrid",
    "layout": {
        "form": {
            "controls": [
                {
                    "prodcd": {
                        "control": "text",
                        "label": "授信产品编号",
                        "rules": [
                            {
                                "max": 18,
                                "message": "长度不能超过18个字符"
                            }
                        ]
                    },
                    "crdtcd": {
                        "control": "text",
                        "label": "可售产品编号",
                        "rules": [
                            {
                                "max": 100,
                                "message": "长度不能超过100个字符"
                            }
                        ]
                    }
                },
                {
                    "prodna": {
                        "control": "text",
                        "label": "产品名称",
                        "rules": [
                            {
                                "max": 100,
                                "message": "长度不能超过100个字符"
                            }
                        ]
                    }
                    ,
                    "status": {
                        "control": "select",
                        "label": "状态",
                        "dict": {
                            "dictType": "E_EXCERS",
                            "dictKey": [
                                "E_EXCERS"
                            ],
                            "format": "label"
                        }
                    }
                }
            ]
        },
        "datagrid": {
            "scope": "searchTable",
            "isInitSearch": false,
            "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                    "servicecode": "AS_ICMS_PD_QRSHEX",
                    "page_id": "/views/other/product_release_exception.json"
                }
            },
            "thead": [               
                {
                    "label": "授信产品编号",
                    "prop": "prodcd"
                },
                {
                    "label": "可售产品编号",
                    "prop": "crdtcd"
                },
                {
                    "label": "产品名称",
                    "prop": "prodna"
                },
                {
                    "label": "版本号",
                    "prop": "verson"
                },
                {
                    "label": "创建机构",
                    "prop": "brchno"
                },
                {
                    "label": "状态",
                    "prop": "status"
                },               
                {
                    "label": "操作",
                    "fixed": "right",
                    "width": 200,
                    "align":"center",
                    "btns": [
                        {
                            "type": "look",
                            "label": "查看记录",
                            "toRequest": {
                                "url": "/views/other/product_release_record.json",
                                "method": "POST",
                                "params":{
                                    "servicecode":"AS_ICM_PD_QRSHIN"
                                }
                            },
                            "props": {
                                "width": "100%",
                                "title": "查看记录"
                            }
                        },
                        {
                            "type": "add",
                            "target": "dialog",
                            "label": "上架通知",
                            "toRequest": {
                                "method": "GET",
                                "url": "/views/other/product_release_notice.json"
                            },
                            "props": {
                                "title": "上架通知"
                            }
                        }
                    ]
                }
            ]
        }
    }
}