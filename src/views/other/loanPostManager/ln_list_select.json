{
	"module":"v_search_btn_datagrid",
	"layout":{
		"form":{
			"foldLineNumber":3,
			"isInitSearch":true,
			"initRequest":"${{params}}",
			"controls":[
				{
					"lncfno":{
						"label":"借据号",
						"control":"text",
						"name":"lncfno",
						"multiple":false,
						"value":"${{params.lncfno}}",
						"rules":[
							{
								"required":false
							},
							{
								"max":50,
								"message":"长度不能超过50个字符"
							}
						]
					},
					"idtfno":{
						"label":"证件号",
						"control":"text",
						"name":"idtfno",
						"multiple":false,
						"value":"${{params.idtfno}}",
						"rules":[
							{
								"required":false
							},
							{
								"max":50,
								"message":"长度不能超过50个字符"
							}
						]
					}
				},
				{
					"custno":{
						"label":"客户号",
						"control":"text",
						"name":"custno",
						"multiple":false,
						"value":"${{params.custno}}",
						"rules":[
							{
								"required":false
							},
							{
								"max":16,
								"message":"长度不能超过16个字符"
							}
						]
					}
				}
				
			]
		},
		"datagrid":{
			"isInitSearch":false,
			"scope":"searchTable",
			"doRequest":{
				"url":"/SUMP/icmcall/icmRPCCall",
				"method":"POST",
				"params":{
					"servicecode":"PLMSKGTS0011"
				}
			},
			"pagination":{
				"show":true
			},
			"thead":[
				{
					"label":"操作",
					"btns":[
						{
							"type":"bringback",
							"label":"选择"
						}
					]
				},
				{
					"type":"index"
				},
				{
					"label":"借据号",
					"prop":"lncfno"
				},
				{
					"label":"合同号",
					"prop":"cntrno"
				},
				{
					"label":"客户号",
					"prop":"custno"
                },
                {
					"label":"证件号",
					"prop":"idtfno"
				},
				{
					"label":"客户名称",
					"prop":"acctna"
				},
				{
					"label":"产品编号",
					"prop":"prodcd"
				},
				{
					"label":"产品名称",
					"prop":"prodna"
				},
				{
					"label":"客户账户状态",
					"prop":"cuacst",
					"dict":{
						"dictType":"E_CUSTST",
						"dictKey":[
							"E_CUSTST"
						],
						"format":"label"
					}
				},
				
			
				{
					"label":"贷款状态",
					"prop":"clssst",
					"dict":{
						"dictType":"E_CLSSST",
						"dictKey":[
							"E_CLSSST"
						],
						"format":"label"
					}
				},
				
				{
					"label":"借据金额",
					"prop":"lncfam",
					"format":{
						"decimal":2,
						"decimalPoint":".",
						"thousandsPoint":","
					}
				},
				
				{
					"label":"起息日期",
					"prop":"instdt",
					"type":"dateTimePicker"
				},
				{
					"label":"到期日期",
					"prop":"matudt",
					"type":"dateTimePicker"
				}
			]
		}
	}
}