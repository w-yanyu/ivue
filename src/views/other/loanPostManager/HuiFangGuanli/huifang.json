{
    "module": "v_form_btn_dynamic",
    "layout": {
        "form": {
            "scope": "formData",

            "controls": [
                {
                    "upload": {
                        "control": "dynamic",

                        "span": 6,
                        "toRequest": {
                            "url": "@SingleUpload",
                            "method": "get",
                            "params": {
                                "formKey": "upload",
                                "formLabel": "上传回访文件"
                            }
                        }
                    }
                }
            ]
        },
        "toolbar": {
            "btns": [
                 {
                    "type": "submit",
                    "label": "导入",
                    "unplain":true,
                    "icon": "",
                    "doRequest": {
                        "url": "/SUMP/icmcall/icmRPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "PLMSKGS10580",
                            "upload": "${{formData.upload}}"
                        }
                    }
                },
                {
                    "type": "export",
                    "label": "导出模板",
                    "icon": "iconfont icon-daochu",
                    "doRequest": {
                        "url": "/SUMP/icmcall/plms/exportModelDaihou",
                        "method": "post",
                        "params": {}
                    },
                    "confirm":{
                      "title":"提示信息",
                      "msg":"确认导出吗？",
                      "confirmButtonText":"确定",
                      "cancelButtonText":"取消"
                    }
                }
            ]
        }
    }
}
