{
    "module": "v_search_btn_datagrid",
    "layout": {
        "form": {
            "controls": [{
                    "colt_catg_desc": {
                        "label": "押品系统大类名称",
                        "control": "text"
                    },
                    "other_colt_prod_cd": {
                        "label": "押品系统小类",
                        "control": "text"
                    }
                }
            ]
        },
        "toolbar": {
            "btns": [{
                "type": "add",
                "label": "新增",
                "toRequest": {
                    "url": "@PledgeEntry",
                    "method": "get",
                    "params": {}
                },
                "props": {
                    "title": "抵质押品对应表新增",
                    "width": "80%"
                }
            }]
        },
        "datagrid": {
            "isInitSearch": true,
            "doRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "post",
                "params": {
                    "servicecode": "co1004",
                    "params": {}
                }
            },
            "pagination": {
                "pageSizes": [10, 15, 20],
                "pageSize": 10
            },
            "thead": [{
                    "type": "index",
                    "align": "center"
                },
                {
                    "type": "leaf",
                    "label": "押品对应序号",
                    "align": "center",
                    "prop": "colt_rela_id"
                },
                {
                    "label": "资产名称",
                    "prop": "colt_name",
                    "align": "center",
                    "type": "leaf"
                },
                {
                    "label": "抵质押品产品名称",
                    "prop": "colt_prod_name",
                    "align": "center",
                    "type": "leaf"
                },
                {
                    "label": "押品系统大类名称",
                    "prop": "colt_catg_desc",
                    "align": "center",
                    "type": "leaf"
                },
                {
                    "label": "押品系统小类",
                    "prop": "other_colt_prod_cd",
                    "align": "center",
                    "type": "leaf"
                },
                {
                    "label": "操作",
                    "width": "150px",
                    "align": "center",
                    "fixed": "right",
                    "btns": [{
                            "type": "edit",
                            "label": "维护",
                            "toRequest": {
                                "url": "@PledgeUpdate",
                                "method": "get",
                                "params": {}
                            },
                            "props": {
                                "title": "抵质押品对应表维护",
                                "width": "80%"
                            }
                        },
                        {
                            "type": "delete",
                            "label": "删除",
                            "doRequest": {
                                "url": "/SUMP/call/RPCCall",
                                "method": "DELETE",
                                "params": {
                                    "servicecode": "co1018",
                                    "tran_type":"3",
                                    "detail":{
                                        "colt_rela_id":"${{current.colt_rela_id}}"
                                    }
                                }
                            }
                        }
                    ]
                }
            ]
        }
    }
}
