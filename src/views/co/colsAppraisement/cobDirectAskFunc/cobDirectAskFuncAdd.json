{
    "module": "v-inputDataForm-btn",
    "layout": {
        "form": {
            "btns": [],
            "controls": [
                {
                    "eval_val": {
                        "control": "currency",
                        "label": "询价结果(元)",
                        "span": 12,
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入购置价格"
                            }
                        ]
                    },
                    "inquiry_channel": {
                        "control": "text",
                        "label": "询价渠道",
                        "span": 12,
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入询价渠道"
                            }
                        ]
                    },
                    "inquiry_date": {
                        "control": "dateTimePicker",
                        "label": "询价日期",
                        "span": 12,
                        "format": "yyyyMMdd",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入询价日期"
                            }
                        ]
                    },
                    "servicecode": {
                        "control": "hidden",
                        "value": "co4025"
                    },
                    "colt_no": {
                        "control": "hidden",
                        "value": "${{params.colt_no}}"
                    },
                    "cust_name": {
                        "control": "hidden",
                        "value": "${{params.custna}}"
                    },
                    "cust_no": {
                        "control": "hidden",
                        "value": "${{params.custid}}"
                    },
                    "person_no": {
                        "control": "hidden",
                        "value": "${{params.person_no}}"
                    },
                    "colt_eval_meth": {
                        "control": "hidden",
                        "value": "${{params.colt_eval_meth_type}}"
                    }
                },
                {
                    "inquiry_basic": {
                        "control": "textarea",
                        "label": "询价依据",
                        "span": 24,
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入购置价格"
                            }
                        ]
                    }
                },
                {

                  "toDbsx": {
                    "span": 24,
                    "control": "dynamic",
                    "#isShowChildrenForm": false,
                    "toRequest": {
                      "method": "GET",
                      "url": "@FlowSubmitBtn",
                      "params": {
                        "appId": "coOnl",
                        "servicecode": "co4025",
                        "finalUrl": "@CommWaitToDoDeal",
                        "trans_type": "ADD",
                        "eval_type": "1"
                      }
                    }
                  }
                }
            ]
        }
    }
}
