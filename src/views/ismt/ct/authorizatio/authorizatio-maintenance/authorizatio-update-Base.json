{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "initDataOnce": true,
            "controls": [
                {
                    "auth_id": {
                        "control": "text",
                        "disabled": true,
                        "label": "授权ID",
                        "width": "150px",
                        "rules": [
                            {
                                "max": 32,
                                "message": "长度不能超过32个字符"
                            }
                        ]
                    },
                    "auth_name": {
                        "control": "text",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入授权名称"
                            },
                            {
                                "max": 100,
                                "message": "长度不能超过100个字符"
                            }
                        ],
                        "label": "授权名称",
                        "width": "150px"
                    }
                },
                {
                    "amount_exchange_ind": {
                        "control": "select",
                        "rules": [
                            {
                                "required": true,
                                "message": "请选择折算标志"
                            }
                        ],
                        "dict": {
                            "dictType": "MS_E_YESORNO",
                            "dictKey": [
                                "MS_E_YESORNO"
                            ],
                            "format": "label"
                        },
                        "label": "折算标志",
                        "width": "150px",
                        "events": {
                            "condition": {
                                "N": {
                                    "control": {
                                        "auth_ccy": {
                                            "disabled": true,
                                            "value": "",
                                            "rules": [
                                                {
                                                    "required": false
                                                }
                                            ]
                                        }
                                    }
                                },
                                "Y": {
                                    "control": {
                                        "auth_ccy": {
                                            "disabled": false,
                                            "rules": [
                                                {
                                                    "required": true,
                                                    "message": "请选择折算币种"
                                                }
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "auth_ccy": {
                        "control": "select",
                        "label": "折算币种",
                        "width": "150px",
                        "dict": {
                            "format": "label",
                            "dictKey": [
                                "MS_CURRENCY"
                            ],
                            "dictType": "MS_CURRENCY"
                        }
                    }
                },
                {
                    "remark": {
                        "control": "text",
                        "label": "备注",
                        "width": "150px",
                        "rules": [
                            {
                                "max": 100,
                                "message": "长度不能超过100个字符"
                            }
                        ]
                    }
                }
            ]
        }
    }
}
