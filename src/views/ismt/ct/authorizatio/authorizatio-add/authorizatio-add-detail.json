{
    "module": "v-form-editableDataGrid-btn",
    "layout": {
        "initReqeust": "${{params}}",
        "toolbar": {
            "btns": [
                {
                    "type": "add",
                    "label": "新增",
                    "icon": "el-icon-plus",
                    "toRequest": {
                        "url": "/views/ismt/ct/authorizatio/authorizatio-add/authorizatio-add-detail-info.json",
                        "method": "post",
                        "params": {
                            "auth_id": "${{params.auth_id}}"
                        }
                    },
                    "props": {
                        "title": "授权信息明细新增"
                    }
                }
            ]
        },
        "datagrid": {
            "name": "ctAuthInfo",
            "pagination": {
                "show": false
            },
            "thead": [
                {
                    "type": "index"
                },
                {
                    "type": "string",
                    "disabled": true,
                    "label": "角色ID",
                    "prop": "role_id"
                },
                {
                    "type": "string",
                    "label": "授权ID",
                    "prop": "auth_id"
                },
                {
                    "type": "string",
                    "disabled": true,
                    "label": "授权币种",
                    "prop": "auth_ccy"
                },
                {
                    "type": "string",
                    "label": "现金最大授权金额",
                    "prop": "cash_max_limit_amt"
                },
                {
                    "type": "string",
                    "label": "转账最大授权金额",
                    "prop": "trxn_max_limit_amt"
                },
                {
                    "label": "操作",
                    "fixed": "right",
                    "width": 150,
                    "align": "center",
                    "btns": [
                        {
                            "type": "etEdit",
                            "label": "维护",
                            "toRequest": {
                                "url": "/views/ismt/ct/authorizatio/authorizatio-add/authorizatio-update-detail-info.json",
                                "params": {
                                    "operater_ind": "M"
                                }
                            },
                            "props": {
                                "title": "授权信息维护"
                            }
                        },
                        {
                            "type": "delete",
                            "label": "删除",
                            "icon": "el-icon-close"
                        }
                    ]
                }
            ]
        }
    }
}