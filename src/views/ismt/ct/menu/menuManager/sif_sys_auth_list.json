{
    "module": "v_search_btn_datagrid",
    "layout": {
        "form": {
            "controls": [
                {
                    "pageCode": {
                        "label": "菜单编号",
                        "control": "text"
                    }
                }
            ]
        },
        "toolbar": {
            "btns": [
                {
                    "type": "add",
                    "label": "新增",
                    "toRequest": {
                        "url": "/views/ismt/ct/menu/menuManager/sif_sys_auth_add.json",
                        "method": "get"
                    },
                    "props": {
                        "width": "800px",
                        "title": "新增"
                    }
                },
                {
                    "type": "delete",
                    "label": "删除",
                    "icon": "el-icon-close",
                    "doRequest": {
                        "url": "/SUMP/rest/auth/delAuth",
                        "method": "POST",
                        "params": {}
                    }
                }
            ]
        },
        "datagrid": {
            "doRequest": {
                "url": "/SUMP/rest/auth/allMenu",
                "method": "POST"
            },
            "thead": [
                {
                    "label": "菜单编号",
                    "prop": "pageCode"
                },
                {
                    "label": "菜单名称",
                    "prop": "title"
                },
                {
                    "label": "父级",
                    "prop": "parentPageCode"
                },
                {
                    "label": "操作",
                    "width": "150px",
                    "fixed": "right",
                    "btns": [
                        {
                            "type": "edit",
                            "label": "维护",
                            "toRequest": {
                                "url": "/views/ismt/ct/menu/menuManager/sif_sys_auth_edit.json",
                                "method": "get"
                            }
                        },
                        {
                            "type": "delete",
                            "label": "删除",
                            "doRequest": {
                                "url": "/SUMP/rest/auth/delAuth",
                                "method": "POST"
                            }
                        }
                    ]
                }
            ],
            "pagination": {
                "show": true,
                "pageSizes": [
                    "10",
                    "20",
                    "50",
                    "100"
                ],
                "pageSize": 10
            }
        }
    }
}