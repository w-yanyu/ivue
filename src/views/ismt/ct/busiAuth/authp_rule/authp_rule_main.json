{
    "module": "v-inputDataForm-btn",
    "layout": {
        "scope": "templateScope",
        "form": {
            "initRequest": "${{params}}",
            "formSetTitle": "授权体系规则配置",
            "btns": [],
            "controlsGroup": [{
                "controls": [
                    {
                        "authp_system_code": {
                            "control": "string",
                            "label": "授权体系编号"
                        },
                        "authp_rule_code": {
                            "control": "string",
                            "label": "规则编号"
                        }
                     }
                ]
            },{
                
                "title": "关联角色管理",
                "tooltip": "",
                "titleIcon": "",
                "showHint": "",
                "accordion": false,
                "expand": true,
                "controls": [{
                    "role": {
                        "control": "dynamic",
                        "span": 24,
                        "toRequest": {
                            "method": "post",
                            "url": "/views/ismt/ct/busiAuth/authp_rule/role_manager.json",
                            "params": {
                                "authp_system_code": "${{params.authp_system_code}}",
                                "authp_rule_code": "${{params.authp_rule_code}}",
                                "appId":"${{params.appId}}"
                            }
                        }
                    }
                }]
            },
            {
                "title": "规则条件管理",
                "tooltip": "",
                "titleIcon": "",
                "showHint": "",
                "accordion": false,
                "expand": true,
                "controls": [{
                    "condition": {
                        "control": "dynamic",
                        "span": 24,
                        "toRequest": {
                            "method": "post",
                            "url": "/views/ismt/ct/busiAuth/authp_rule/condition_main.json",
                            "params": {
                                "authp_system_code": "${{params.authp_system_code}}",
                                "authp_rule_code": "${{params.authp_rule_code}}",
                                "appId":"${{params.appId}}"
                            }
                        },
                        "eventAfter": { 
                            "doParentCallback": true,
                            "doLastCallback": true
                          }
                    }
                }]
            },
            {
                "title": "规则维度管理",
                "tooltip": "",
                "titleIcon": "",
                "showHint": "",
                "accordion": false,
                "expand": true,
                "controls": [{
                    "dimension": {
                        "control": "dynamic",
                        "span": 24,
                        "toRequest": {
                            "method": "post",
                            "url": "/views/ismt/ct/busiAuth/authp_rule/dimension_main.json",
                            "params": {
                                "authp_system_code": "${{params.authp_system_code}}",
                                "authp_rule_code": "${{params.authp_rule_code}}",
                                "appId":"${{params.appId}}"
                            }
                        },
                        "eventAfter": { 
                            "doParentCallback": true,
                            "doLastCallback": true
                          }
                    }
                }]
            },
            {
                "title": "适用机构管理",
                "tooltip": "",
                "titleIcon": "",
                "showHint": "",
                "accordion": false,
                "expand": true,
                "controls": [{
                    "branch": {
                        "control": "dynamic",
                        "span": 24,
                        "toRequest": {
                            "method": "post",
                            "url": "/views/ismt/ct/busiAuth/authp_rule/branch_main.json",
                            "params": {
                                "authp_system_code": "${{params.authp_system_code}}",
                                "authp_rule_code": "${{params.authp_rule_code}}",
                                "appId":"${{params.appId}}"
                            }
                        },
                        "eventAfter": { 
                            "doParentCallback": true,
                            "doLastCallback": true
                          }
                    }
                }]
            }

        ]
        }
    }
}