{
    "module": "v-form-btn-dynamic",
    "layout": {
        "form": {
            "controls": [
                {
                    "user_id": {
                        "control": "text",
                        "label": "用户ID",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入用户ID"
                            },
                            {
                                "max": 32,
                                "message": "长度不能超过32个字符"
                            }
                        ]
                    }
                },
                {
                    "new_user_password": {
                        "control": "password",
                        "label": "新密码",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入新密码"
                            }
                        ]
                    }
                },
                {
                    "confirm_user_password": {
                        "control": "password",
                        "label": "确认密码",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入确认密码"
                            }
                        ]
                    }
                }
            ]
        },
        "toolbar": {
            "btns": [
                {
                    "type": "submit",
                    "label": "确认",
                    "unplain": true,
                    "doRequest": {
                        "url": "/SUMP/rest/auth/rstpwd",
                        "method": "post",
                        "params": {
                            "servicecode": "ct2010"
                        }
                    }
                },
                {
                    "type": "reset",
                    "btnStyle": "success",
                    "label": "清空"
                }
            ]
        }
    }
}