{
    "module": "d-steps",
    "layout": {
        "steps": {
            "scope": "formObj",
            "direction": "horizontal",
            "alignCenter": false,
            "finishStatus": "success",
            "simpleType": false,
            "active":0,
            "nextStepType": "validate",
            "list": [{
                    "scope":"step1",
                    "title": "角色新增",
                    "icon": "el-icon-edit",
                    "toRequest": {
                        "url": "/views/ismt/ct/role/roleManager/role_manager_add.json",
                        "method": "get",
                        "params": {
                            "role_id": "${{formObj.step1.role_id}}"
                        }
                    },
                    "doRequest": {
                        "url": "/SUMP/call/RPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "ct2051"
                        },
                        "resultSet": {
                            "role_id": "role_id"
                          }
              
                    }
                },
                {
                    "title": "角色菜单配置",
                    "icon": "el-icon-edit",
                    "scope":"step2",
                    "forbidBack":true,
                    "toRequest": {
                        "url": "/views/ismt/ct/role/menuAssignment/role_menu_assignment.json",
                        "method": "get",
                        "params": {
                            "role_id": "${{formObj.step1.role_id}}"
                        }
                    },
                    "doRequest": {
                        "url": "/SUMP/call/RPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "ct3108",
                            "role_id": "${{formObj.step1.role_id}}"
                        }
                    }
                },
                {
                    "scope":"step3",
                    "title": "角色控件配置",
                    "icon": "el-icon-edit",
                    "toRequest": {
                        "url": "/views/ismt/ct/role/controlAssignment/menuTree_add.json",
                        "method": "get",
                        "params": {
                            "role_id": "${{formObj.step1.role_id}}"
                        }
                    },
                    "doRequest": {
                        "url": "",
                        "method": "get",
                        "params": {
                          
                        }
                      }
                }
                
            ]
        }
    }
}