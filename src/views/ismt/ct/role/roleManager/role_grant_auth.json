{
  "module": "d-steps",
  "layout": {
    "steps": {
      "scope": "formObj",
      "direction": "horizontal",
      "alignCenter": true,
      "finishStatus": "success",
      "simpleType": false,

      "nextStepType": "validate",
      "list": [
        {
          "scope": "step1",
          "title": "角色菜单权限配置",
          "icon": "el-icon-edit",
          "toRequest": {
            "url": "@roleGrantAuth",
            "method": "get",
            "params": {
              "role_id": "${{params.role_id}}"
            }
          }
        },
        {
          "scope": "step2",
          "title": "角色控件配置",
          "icon": "el-icon-edit",
          "close": true,
          "toRequest": {
            "url": "/views/ismt/ct/role/controlAssignment/menuTree_update.json",
            "method": "get",
            "params": {
              "role_id": "${{params.role_id}}"
            }
          },
          "btnsLable": {
            "close": "关闭"
          }
        }
      ]
    }
  }
}
