{
    "module": "lr_tree_dynamic",
    "layout": {
        "tree": {
            "scope": "treeTemplateParams",
            "title": "菜单树",
            "lazy": false,
            "width": "300px",
            "hideDynamicArea": false,
            "draggable": false,
            "showToolbar": true,
            "stopAddNodeField": "stopAddNode",
            "stopDeleteNodeField": "isStopDeleteNode",
            "draggableField": "isStopDraggable",
            "idField": "pageCode",
            "pIdField": "parentPageCode",
            "labelField": "title",
            "nodeType": "nodeType", 
            "isLeafField": "leaf",
            "iconField": "iconfg",
            "stopClickNodeField": "stopNodeClick",
            "rootTypes": [
                "2"
            ],
            "initRequest": {
                "url": "/SUMP/rest/auth/treeMenu",
                "method": "POST",
                "params": {}
            },
            "addRootNodes": {
                "type": "add",
                "label": "新增",
                "icon": "el-icon-circle-plus-outline",
                "toRequest": {
                    "url": "/views/ismt/ct/menu/menuManager/sif_sys_auth_add.json",
                    "method": "get",
                    "params": {
                    }
                },
                "props": {
                    "width": "65%",
                    "title": "菜单新增",
                    "close": "",
                    "target": ""
                }
            },
            "root": {
                "rootNode": {
                    "name": "菜单",
                    "value": "-1",
                    "icon": "xitongguanli",
                    "disabled": false
                },
                "toRequest": {
                    "url": "/views/ismt/ct/menu/menuManager/sif_sys_auth_list.json",
                    "method": " GET"
                },
                "contextMenu": [
                    {
                        "type": "add",
                        "label": "新增",
                        "icon": "el-icon-circle-plus-outline",
                        "toRequest": {
                            "url": "/views/ismt/ct/menu/menuManager/sif_sys_auth_add.json",
                            "method": "get",
                            "params": {
                            }
                        },
                        "props": {
                            "width": "65%",
                            "title": "菜单新增",
                            "close": "",
                            "target": ""
                        }
                    },
                    {
                        "type": "divider"
                    },
                    {
                        "type": "delete",
                        "label": "删除",
                        "icon": "el-icon-remove-outline",
                        "doRequest": {
                            "url": "/rest/auth/delAuth",
                            "method": "DELETE",
                            "params": {
                            }
                        },
                        "confirm": {
                            "title": "删除",
                            "msg": "确定删除该菜单以及子菜单吗？",
                            "confirmButtonText": "确定",
                            "cancelButtonText": "取消"
                        }
                    }
                ]
            },
            "nodeTypes": {
                "2": {
                    "icon": "el-icon-news",
                    "children": [
                        "2"
                    ],
                    "toRequest": {
                        "url": "/views/ismt/ct/menu/menuManager/sif_sys_auth_edit.json",
                        "method": "get",
                        "params": {
                            "authCd": "${{form.pageCode}}"
                        }
                    },
                    "contextMenu": [
                        {
                            "type": "add",
                            "label": "新增",
                            "icon": "el-icon-circle-plus-outline",
                            "toRequest": {
                                "url": "/views/ismt/ct/menu/menuManager/sif_sys_auth_add.json",
                                "method": "get",
                                "params": {
                                }
                            },
                            "props": {
                                "width": "65%",
                                "title": "标题",
                                "close": "",
                                "target": ""
                            }
                        },
                        {
                            "type": "divider"
                        },
                        {
                            "type": "delete",
                            "label": "删除",
                            "icon": "el-icon-remove-outline",
                            "doRequest": {
                                "url": "/rest/auth/delAuth",
                                "method": "DELETE",
                                "params": {
                                }
                            },
                            "confirm": {
                                "title": "删除",
                                "msg": "确定删除该菜单以及子菜单吗？",
                                "confirmButtonText": "确定",
                                "cancelButtonText": "取消"
                            }
                        }
                    ]
                }
            },
            "search": {
                "enabled": "true",
                "displayType": "tree",
                "nameFields": [
                    "userName",
                    "userCode"
                ]
            }
        }
    }
}