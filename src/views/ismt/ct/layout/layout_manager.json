{
  "module": "v_search_btn_datagrid",
  "layout": {
    "form": {
      "controls": [
        {
          "layout_id": {
            "control": "text",
            "label": "布局编号",
            "span": 8,
            "rules": [
              {
                "max": 30,
                "message": "长度不能超过30个字符"
              }
            ]
          },
          "layout_name": {
            "control": "text",
            "label": "布局名称",
            "span": 8
          },
          "layout_type": {
            "control": "select",
            "label": "布局类型",
            "span": 8,
            "dict": {
              "dictType": "CT_E_LAYOUT_TYPE",
              "dictKey": ["CT_E_LAYOUT_TYPE"]
            }
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "label": "新增布局",
          "toRequest": {
            "target": "navTab",
            "url": "@layoutDesigner",
            "method": "GET"
          }
        }
      ]
    },
    "datagrid": {
      "isInitSearch": false,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "ct3009",
          "user_id": "$g{{user_info.userCode}}"
        }
      },
      "thead": [
        {
          "type": "index"
        },
        {
          "label": "布局编号",
          "prop": "layout_id"
        },
        {
          "label": "布局名称",
          "prop": "layout_name"
        },
        {
          "label": "布局类型",
          "prop": "layout_type",
          "dict": {
            "dictType": "CT_E_LAYOUT_TYPE",
            "dictKey": ["CT_E_LAYOUT_TYPE"]
          }
        },
        {
          "label": "创建时间",
          "prop": "data_create_time"
        },
        {
          "label": "创建人",
          "prop": "data_create_user"
        },
        {
          "label": "备注信息",
          "prop": "remark"
        },
        {
          "label": "操作",
          "width": "200px",
          "align": "center",
          "btns": [
            {
              "type": "edit",
              "label": "编辑",
              "toRequest": {
                "target": "navTab",
                "url": "@layoutDesigner",
                "method": "GET"
              }
            },
            {
              "type": "custom",
              "label": "设为首页",
              "show": {
                "expression": "'${{current.home_page}}' !== '1'"
              },
              "doRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "ct3008",
                  "user_id": "$g{{user_info.userCode}}"
                }
              },
              "confirm": {
                "title": "提示信息",
                "msg": "确定设置该布局为当前首页吗？"
              }
            },
            {
              "type": "delete",
              "label": "删除",
              "show": {
                "expression": "'${{current.home_page}}' !== '1'"
              },
              "doRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "ct3007"
                }
              },
              "confirm": {
                "title": "提示信息",
                "msg": "确定删除该信息吗？"
              }
            }
          ]
        }
      ]
    }
  }
}
