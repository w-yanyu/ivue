{
  "module": "v-inputDataForm-btn",
  "layout": {
    "form": {
      "initRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "PLMSKGTS1009",
          "appl_id": "${{params.appl_id}}",
          "sale_gather_id": "${{params.sale_gather_id}}",
          "sale_id": "${{params.sale_id}}"
        }
      },
      "btns": [{
        "type": "submit",
        "label": "提交",
        "doRequest": {
          "url": "/SUMP/icmcall/icmRPCCall",
          "method": "POST",
          "params": {
            "servicecode": "PLMSKGTS1006",
            "appl_id": "${{params.appl_id}}",
            "sale_gather_id": "${{params.sale_gather_id}}",
            "sale_id": "${{params.sale_id}}"
          }
        }
      }],
      "controls": [{
        "cust_id": {
          "control": "hidden"
        },
        "acc_brch_cd": {
          "control": "string",
          "label": "账务机构",
          "span": 7,
          "rules": [{
            "required": true,
            "message": "账务机构不能为空!"
          }]
        },
        "sale_amt": {
          "control": "text",
          "span": 7,
          "label": "出售金额(元)",
          "rules": [{
              "required": true,
              "pattern": "^[0-9]+(\\.[0-9]{2})?$",
              "message": "请输入两位小数或整数数字"
            },
            {
              "max": 21,
              "message": "长度不能超过21个字符"
            }
          ]
        },
        "save_acct": {
          "span": 7,
          "control": "text",
          "label": "存款账号",
          "rules": [{
              "required": true,
              "message": "请输入存款账号"
            },
            {
              "pattern": "^[0-9]{15,19}$",
              "message": "请输入正确的存款账号"
            }
          ]
        },
        "save_acct_name": {
          "span": 7,
          "control": "text",
          "label": "存款户名",
          "rules": [{
              "required": true,
              "message": "请输入存款户名"
            },
            {
              "max": 100,
              "message": "长度不能超过100个字符"
            }
          ]
        },
        "save_acct_bank": {
          "span": 7,
          "control": "text",
          "label": "开户银行",
          "rules": [{
              "required": true,
              "message": "请输入开户银行"
            },
            {
              "max": 100,
              "message": "长度不能超过100个字符"
            }
          ]
        }
      }]
    }
  }
}
