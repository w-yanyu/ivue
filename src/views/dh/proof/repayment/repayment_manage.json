{
  "module": "v_search_btn_datagrid",
  "layout": {
    "form": {
      "controls": [
        {
          "lncfno": {
            "label": "借据号",
            "control": "text"
          },
          "new_acct_no": {
            "control": "text",
            "label": "账号"
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "target": "dialog",
          "label": "新增",
          "toRequest": {
            "method": "GET",
            "url": "/views/dh/atpy/change/account_add.json"
          },
          "props": {
            "width": "65%",
            "title":  "新增"
          }
        }
      ]
    },
    "datagrid": {
      "scope": "searchTable",
      "isInitSearch": true,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "kg0001"
        }
      },
      "thead": [
        {
          "type": "selection",
          "align": "center"
        },
        {
          "label": "借据号",
          "width": "160px",
          "prop": "lncfno",
          "align": "center"
        },
        {
          "label": "贷款产品",
          "prop": "prodcd",
          "align": "center"
        },
        {
          "label": "客户名称",
          "prop": "prodcd",
          "align": "center"
        },
        {
          "label": "账号",
          "prop": "new_acct_no",
          "align": "center"

        },
        {
          "label": "处理模式",
          "prop": "new_acct_type",
          "align": "center"
        },
        {
          "label": "冲正标志",
          "prop": "acct_ccy",
          "align": "center"
        },
        {
          "label": "还款日期",
          "align": "center",
          "prop": "new_acct_name"
        },
        {
          "label": "客户经理",
          "align": "center",
          "prop": "acct_nt_tt_flag"
        },
        {
          "label": "操作",
          "fixed": "right",
          "width": 200,
          "align":"center",
          "btns": [
            {
              "type": "edit",
              "label": "打印凭证",
              "toRequest": {
                "url": "@ProofPrint",
                "method": "GET",
                "params": {
                  "instr_id": "${{current.instr_id}}"
                }
              },
              "props": {
                "width": "65%",
                "title": "打印凭证"
              }
            }
          ]
        }
      ]
    }
  }
}
