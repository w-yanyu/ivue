{
    "module": "v_search_btn_datagrid",
    "layout": {
        "form": {
            "controls": [
                {
                    "appId": {
                        "control": "select",
                        "label": "业务模块",
                        "selectFirstValue":true,
                        "dict": {
                            "dictType": "MS_APPID",
                            "dictKey": [
                                "MS_APPID"
                            ],
                            "format": "value-label"
                        },
                        "rules": [
                            {
                                "required": true,
                                "message": "请选择业务模块"
                            }]
                    }
                  },
                {
                    "metadata_id": {
                        "label": "元数据编号",
                        "control": "text",
                        "rules": [
                            {
                                "max": 100,
                                "message": "长度不能超过100个字符"
                            }
                        ]
                    },
                    "metadata_name": {
                        "label": "元数据名称",
                        "control": "text",
                        "rules": [
                            {
                                "max": 50,
                                "message": "长度不能超过50个字符"
                            }
                        ]
                    }
                }
            ],
            "foldLineNumber": 3
        },
        "toolbar": {
            "btns": [
                {
                    "type": "add",
                    "target": "dialog",
                    "label": "新增",
                    "toRequest": {
                        "method": "GET",
                        "#url": "/views/msap/bpm/processManagement/policyManagement/metadataManagement/metadata_management_add.json",
                        "url": "@metadataAdd",
                        "params": {
                            "appId":"${{form.appId}}"
                          }
                    },
                    "props": {
                        "width": "75%",
                        "title": "新增元数据"
                    }
                }
            ]
        },
        "datagrid": {
            "isInitSearch": false,
            "scope": "searchTable",
            "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "post",
                "params": {
                    "servicecode": "bpm0017"
                }
            },
            "thead": [
               
                {
                    "label": "元数据编号",
                    "prop": "metadata_id",
                    "align": "center"
                },
                {
                    "label": "元数据名称",
                    "prop": "metadata_name",
                    "align": "center"
                },
                {
                    "label": "数据类型",
                    "prop": "data_type",
                    "type": "select",
                    "align": "center",
                    "dict": {
                        "dictType": "BPM_E_DATTYP",
                        "dictKey": [
                            "BPM_E_DATTYP"
                        ],
                        "format": "label"
                    }
                },

                {
                    "label": "获取方式",
                    "prop": "obtain_mode",
                    "type": "select",
                    "align": "center",
                    "dict": {
                        "dictType": "BPM_E_GETTYP",
                        "dictKey": [
                            "BPM_E_GETTYP"
                        ],
                        "format": "label"
                    }
                },
                {
                    "label": "操作",
                    "fixed": "right",
                    "width": 200,
                    "align":"center",
                    "btns": [
                        {
                            "type": "edit",
                            "label": "维护",
                            "toRequest": {
                                "#url": "/views/msap/bpm/processManagement/policyManagement/metadataManagement/metadata_management_edit.json",
                                "url": "@metadataAdd",
                                "method": "GET",
                                "params": {
                                    "appId":"${{form.appId}}",
                                    "trantp":"modify"
                                  }
                            },
                            "props": {
                                "width": "75%",
                                "title": "维护"
                            }
                        },
                    
                        {
                            "type": "delete",
                            "label": "删除",
                            "doRequest": {
                                "url": "/SUMP/icmcall/icmRPCCall",
                                "method": "post",
                                "params": {
                                    "servicecode": "bpm0020",
                                    "trantp":"DELETE",
                                    "appId":"${{form.appId}}"
                                    
                                }
                            }
                        }
                    ]
                }
            ],
            "pagination": {
                "show": true
            }
        }
    }
}