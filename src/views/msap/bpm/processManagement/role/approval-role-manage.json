{
  "module": "v_search_btn_datagrid",
  "layout": {
    "form": {
      "controls": [

        {
          "appId": {
              "span": 8,
              "control": "select",
              "label": "业务模块",
              "selectFirstValue":true,
              "dict": {
                  "dictType": "MS_APPID",
                  "dictKey": [
                      "MS_APPID"
                  ],
                  "format": "value-label"
              },
              "rules": [
                  {
                      "required": true,
                      "message": "请选择业务模块"
                  }]
          }
        },
        {
        "appr_role_id": {
          "span": 8,
          "control": "text",
          "label": "审批角色编号:",
          "placeholder": "请输入审批角色编号"
        },
        "appr_role_name": {
          "span": 8,
          "control": "text",
          "label": "审批角色名称:",
          "placeholder": "请输入审批角色名称"
        }
      }]
    },
    "toolbar": {
      "btns": [
        {
        "type": "add",
        "target": "dialog",
        "label": "新增",
        "toRequest": {
          "url": "/views/msap/bpm/processManagement/role/approval-role-add.json",
          "method": "GET",
          "params": {
            "appId":"${{form.appId}}"
          }
        },
        "props": {
          "width": "65%",
          "title": "新增审批角色详情"
        }
      }
      ]
    },
    "datagrid": {
      "isInitSearch": false,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "bpm0053"
        }
      },
      "thead": [{
        "type": "selection",
        "width": "55"
      }, {
        "type": "index",
        "label": "序号"
      }, {
        "label": "审批角色编号",
        "prop": "appr_role_id",
        "align":"center"
      }, {
        "label": "审批角色名称",
        "prop": "appr_role_name",
        "align":"center"
      },
        {
          "label": "审批角色描述",
          "prop": "appr_role_desc",
          "align":"center"
        }
      ,
        {
          "label": "是否有效",
          "prop": "valid_flag",
          "align":"center",
          "dict": {
            "dictType": "BPM_E_ISFLAG",
            "dictKey": [
              "BPM_E_ISFLAG"
            ],
            "labelField": "dictName",
            "valueField": "dictId"
          }
        },
        {
          "label": "操作",
          "align":"center",
          "width": "180",
          "btns": [
            {
              "type": "edit",
              "label": "维护",
              "toRequest": {
                "url": "/views/msap/bpm/processManagement/role/approval-role-update.json",
                "method": "POST",
                "params": {
                  "appId":"${{form.appId}}"
                }
              },
              "props": {
                "width": "65%",
                "title": "审批角色维护"
              }
            },
            {
              "type": "delete",
              "label": "删除",
              "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "bpm0052",
                  "appId":"${{form.appId}}"
                }
              }
            },
            {
              "type": "edit",
              "label": "权限分配",
              "toRequest": {
                "url": "/views/msap/bpm/processManagement/role/approval-role-pow.json",
                "method": "POST",
                "params": {
                  "appId":"${{form.appId}}",
                  "appr_role_name":"${{current.appr_role_name}}"
                }
              },
              "props": {
                "width": "65%",
                "title": "权限分配"
              }
            }
          ]
        }]
    }
  }
}
