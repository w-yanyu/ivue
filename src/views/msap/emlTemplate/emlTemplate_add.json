{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "btns": [
                {
                    "type": "submit",
                    "label": "提交",
                    "doRequest": {
                        "url": "/SUMP/icmcall/icmRPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "ms0090",
                            "appId":"${{params.appId}}"
                        }
                    }
                }
            ],
            "controls": [
                {
                  "template_type": {
                    "control": "select",
                    "disabled":true,
                    "label": "模板类型",
                    "default":"MAIN",
                    "width": "130px",
                    "dict": {
                      "dictType": "MS_E_TEMPLATE_TYPES",
                      "dictKey": [
                        "MS_E_TEMPLATE_TYPES"
                      ],
                      "format": "label"

                    },

                    "rules": [
                      {
                        "required": true,
                        "message":"请输入"
                      }
                    ]
                  },
                    "template_id": {
                        "control": "text",
                        "label": "模板编号",
                        "width": "130px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            },
                            {
                                "max": 10,
                                "message":"最多可以输入 10 个字节"
                            }
                        ]
                    }
                },
                {
                    "template_name": {
                        "control": "text",
                        "label": "模板名称",
                        "width": "130px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            },
                            {
                                "max": 10,
                                "message":"最多可以输入 30 个字节"
                            }
                        ]
                    },
                    "template_desc": {
                        "control": "text",
                        "label": "模板描述",
                        "width": "130px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                },
                {
                  "send_type": {
                    "control": "select",
                    "label": "发送方式",
                    "width": "130px",
                    "default":"TIME",
                    "dict": {
                      "dictType": "MS_E_SEND_TYPE",
                      "dictKey": [
                        "MS_E_SEND_TYPE"
                      ],
                      "format": "label"
                    },
                    "rules": [
                      {
                        "required": true,
                        "message":"请输入"
                      }
                    ]
                  }
                },
                {
                    "template_content": {
                        "control": "mce",
                        "label": "模板内容",
                        "width": "130px",
                        "span":"24",
                        "autosize":"{ minRows: 2, maxRows: 4}",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                }
            ]
        }
    }
}
