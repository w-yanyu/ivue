{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "btns": [
                {
                    "type": "submit",
                    "label": "提交",
                    "icon": "",
                    "doRequest": {
                        "url": "/SUMP/icmcall/icmRPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "cb0070",
                            "page_id": "/views/cs/paramManage/template/collTemplate/collTemplate_add.json",
                            "appId": "cbOnl",
                            "coll_kind": "02",
                            "litigation_parent_stage_code": "${{params.litigation_parent_stage_code}}",
                            "stage_type": "${{params.stage_type}}",
                            "exchange_flag": "${{params.exchange_flag}}",
                            "current_litigation_stage_code": "${{params.current_litigation_stage_code}}"
                        }
                    }
                }
            ],
            "controls": [
                {
                    "stage_name": {
                        "control": "text",
                        "label": "法诉阶段名称",
                        "width": "130px",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入"
                            }
                        ]
                    }
                },
                {
                    "reminder_time": {
                        "disabled": true,
                        "control": "dateTimePicker",
                        "label": "提醒时间",
                        "type": "datetime",
                        "valueFormat": "yyyy-MM-dd HH:mm:ss",
                        "width": "130px"
                    }
                },
                {
                    "reminder_method": {
                        "disabled": true,
                        "control": "select",
                        "label": "提醒方式",
                        "width": "130px",
                        "options": [
                            {
                                "label": "系统",
                                "value": "S"
                            },
                            {
                                "label": "邮箱",
                                "value": "M"
                            }
                        ]
                    }
                },
                {
                    "reminder": {
                        "disabled": true,
                        "control": "text",
                        "label": "被提醒人",
                        "width": "130px"
                    }
                },
                {
                    "reminder_content": {
                        "disabled": true,
                        "control": "text",
                        "label": "提醒内容",
                        "width": "130px"
                    }
                }
            ]
        }
    }
}