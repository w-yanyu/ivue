{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "scope":"formData",
            "initRequest": "${{params}}",
            "doRequest": {
                "url": "/SUMP/iccsCall/iccsEurekaCall",
                "method": "POST",
                "params": {
                    "servicecode": "cs0092"
                }
            },
            "btns": [
                {
                    "type": "submit",
                    "label": "提交",
                    "icon": "el-icon-tickets"
                }
            ],
            "controls": [
                {
                    "template_type": {
                        "control": "remoteSelect",
                        "disabled":true,
                        "label": "模板类型",
                        "default":"EML",
                        "inputWidth": "200px",
                        "labelField": "drop_list_desc",
                        "valueField": "drop_list_value",
                        "doRequest": {
                            "url": "/SUMP/iccsCall/iccsEurekaCall",
                            "method": "POST",
                            "params": {
                                "servicecode": "ap1071",
                                "drop_list_type": "template_type"
                            }
                        },
                        "format": "value-label",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    },
                    "template_cd": {
                        "control": "text",
                        "label": "信邮模板编号",
                        "disabled":true,
                        "inputWidth": "200px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            },
                            {
                                "max": 10,
                                "message":"最多可以输入 10 个字节"
                            }
                        ]
                    }
                },
                {
                    "template_name": {
                        "control": "text",
                        "label": "模板名称",
                       "inputWidth": "200px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            },
                            {
                                "max": 10,
                                "message":"最多可以输入 30 个字节"
                            }
                        ]
                    },
                    "template_desc": {
                        "control": "text",
                        "label": "模板描述",
                        "inputWidth": "200px",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                },
                {
                    "send_type": {
                        "control": "remoteSelect",
                        "label": "发送方式",
                        "inputWidth": "200px",
                        "default":"TIME",
                        "labelField": "drop_list_desc",
                        "valueField": "drop_list_value",
                        "doRequest": {
                            "url": "/SUMP/iccsCall/iccsEurekaCall",
                            "method": "POST",
                            "params": {
                                "servicecode": "ap1071",
                                "drop_list_type": "sendType"
                            }
                        },
                        "format": "value-label",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                },
                {
                    "template_content": {
                        "control": "mce",
                        "label": "模板内容",
                        "labelWidth": "8",
                        "span":"20",
                        "autosize":"{ minRows: 2, maxRows: 4}",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                }
            ]
        }
    }
}
