{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "pagination": {
        "show": false
      },
      "btns": [
        {
          "type": "submit",
          "label": "提交",
          "doRequest": {
            "url": "/SUMP/icmcall/icmRPCCall",
            "method": "POST",
            "params": {
              "servicecode": "py0013",
              "page_id": "/views/cs/paramManage/strategy/automateStrategy/pie_add.json",
              "appId": "pyOnl",
              "strategy_group_code": "${{params.strategy_group_code}}"
            }
          }
        }
      ],
      "controls": [
        {
          "strategy_group_code": {
            "control": "hidden",
            "label": "策略组编号",
            "width": "130px",
            "value": "${{params.strategy_group_code}}"
          },
          "coll_team": {
            "hidden": true,
            "label": "催收组",
            "control": "remoteSelect",
            "labelField": "coll_team_name",
            "valueField": "coll_team",
            "doRequest": {
              "url": "/SUMP/icmcall/icmRPCCall",
              "method": "POST",
              "params": {
                "servicecode":"cb0041",
                "query_type": "branchTeam"
              }
            },
            "events": {
              "emit": [
                "operation"
              ]
            },
            "format": "value-label"
          },
          "collector": {
            "hidden": true,
            "label": "催收员姓名",
            "control": "remoteSelect",
            "labelField": "collector_name",
            "valueField": "collector",
            "doRequest": {
              "url": "/SUMP/icmcall/icmRPCCall",
              "method": "POST",
              "params": {
                "servicecode":"cb0043",
                "coll_team":"${{current.coll_team}}"
              }
            },
            "events": {
              "emit": [
                "operation"
              ]
            },
            "format": "value-label"
          },
          "detail_assign_ratio": {
            "control": "inputNumber",
            "label": "明细分配比重",
            "width": "130",
            "min": 1,
            "max": 100,
            "rules": [
              {
                "required": true,
                "pattern": "^[0-9]",
                "message": "请输入 1 到 100 之间的数字"
              },
              {
                "expression": "'${{form.detail_assign_ratio}}'.length < 4",
                "message": "最多可以输入 4 个字节"
              }
            ]
          }
        }
      ]
    }
  }
}