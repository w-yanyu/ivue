{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {           
            "btns": [
                {
                    "type": "submit",
                    "icon": "el-icon-check",
                    "label": "提交",
                    "doRequest": {
                        "method": "POST",
                        "url": "/SUMP/icmcall/icmRPCCall",
                        "params": {
                            "servicecode":"cb0223",
                            "work_id":"${{params.selectedData}}"
                        }
                    }
                },
                {
                    "type": "close",
                    "label": "取消"
                }
            ],
            "controls": [
                {
                    "apply_reason": {
                        "control": "textarea",
                        "label": "展期原因",
                        "width": "180px",
                        "align": "center",
                        "span": "20",
                        "rows": 6,
                        "placeholder":"请输入",
                        "rules": [
                            {
                                "required": true,
                                "message":"请输入"
                            }
                        ]
                    }
                }
            ]
        }
    }
}