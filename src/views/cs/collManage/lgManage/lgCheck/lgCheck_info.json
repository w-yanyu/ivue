{
    "module": "v_search_btn_datagrid",
    "layout": {
        "form": {
            "controls": [
                {
                    "userCode": {
                        "span": 8,
                        "control": "text",
                        "label":  "用户编码",
                        "placeholder": "用户编码"
                    },
                    "userName": {
                        "span": 8,
                        "control": "text",
                        "label": "用户名",
                        "placeholder":"用户名"
                    }
                }
            ]
        },
        "toolbar": {
            "btns": [
                {
                    "type": "add",
                    "target": "dialog",
                    "label": "新增",
                    "toRequest": {
                        "method": "GET",
                        "url": "/views/demo/user/user-add.json"
                    },
                    "props": {
                        "width": "65%",
                        "title":  "新增用户"
                    }
                },
                {
                    "type": "delete",
                    "label":  "删除",  
                    "icon": "el-icon-close",
                    "doRequest": {
                        "url": "/demo/user/deleteUser",
                        "method": "delete"
                    }
                }
            ]
        },
        "datagrid": {
            "doRequest": {
                "url": "/demo/user/getUserList",
                "method": ""
            },
            "pagination": {
                "pageSizes": [
                    10,
                    15,
                    20,
                    50,
                    100
                ],
                "pageSize": 10
            },
            "thead": [
                {
                    "type": "selection",
                    "width": "55"
                },
                {
                    "type": "index",
                    "label": "序号"
                },
                {
                    "label": "用户编码",
                    "prop": "userCode"
                },
                {
                    "label": "用户名",
                    "prop": "userName"
                },
                {
                    "label":"手机号",
                    "prop": "phoneNumber"
                },
                {
                    "label":  "邮箱",
                    "prop": "email"
                },
                {
                    "label": "性别",
                    "prop": "sex",
                    "dict": {
                        "dictType": "DEMO",
                        "dictKey": ["sex"],
                        "labelField":"label",
                        "valueField":"value"
                    }
                     
                },
                {
                    "label":  "年龄",
                    "prop": "age"
                },
                {
                    "label": "操作",
                    "width": "260px",
                    "btns": [
                        {
                            "type": "edit",
                            "label":  "修改用户",
                            "toRequest": {
                                "url": "/views/demo/user/user-update.json",
                                "method": "GET"
                            },
                            "props": {
                                "width": "65%",
                                "title":  "修改用户"
                            }
                        },
                        {
                            "type": "edit",
                            "label": "授权角色",
                            "toRequest": {
                                "url": "/views/demo/user/grant_role_to_user.json",
                                "method": "GET"
                            },
                            "props": {
                                "width": "65%",
                                "title":  "授权角色"
                            }
                        }
                    ]
                }
            ]
        }
    }
}