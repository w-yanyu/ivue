{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "btns": [
        {
          "type": "submit",
          "label": "提交",
          "icon": "el-icon-tickets",
          "doRequest": {
            "url": "/SUMP/icmcall/icmRPCCall",
            "method": "POST",
            "params": {
              "servicecode": "cb0089",
              "case_id": "${{params.case_id}}"
            }
          }
        },
        {
          "type": "close",
          "label": "取消"
        }
      ],
      "controls": [
        {
          "relationship": {
            "control": "select",
            "span": "6",
            "inputWidth": "200px",
            "label": "客户关系",
            "dict": {
              "dictType": "CS_E_RELATIONSHIP",
              "dictKey": [
                "CS_E_RELATIONSHIP"
              ],
              "format": "value-label"
            },
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ],
            "####": "客户关系为本人时，姓名只能为本人信息",
            "events": {
              "condition": {
                "9999": {
                  "doRequest": {
                    "url": "/SUMP/icmcall/icmRPCCall",
                    "method": "POST",
                    "params": {
                      "servicecode": "cb0090",
                      "org_id": "${{params.org_id}}",
                      "cust_id": "${{params.cust_id}}",
                      "case_id": "${{params.case_id}}"
                    },
                    "resultSet": {
                      "relation_cust_name": "cust_name"
                    }
                  },
                  "control": {
                    "relation_cust_name": {
                      "disabled": true
                    }
                  }
                },
                "####": "客户关系为非本人时，姓名置空",
                "$default": {
                  "control": {
                    "relation_cust_name": {
                      "value": "",
                      "disabled": false
                    }
                  }
                }
              }
            }
          },
          "relation_cust_name": {
            "control": "text",
            "span": "8",
            "inputWidth": "200px",
            "label": "联系人姓名",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          },
          "is_valid": {
            "control": "select",
            "span": "8",
            "inputWidth": "200px",
            "label": "是否有效",
            "default": "Y",
            "dict": {
              "dictType": "CS_E_YESORNO",
              "dictKey": [
                "CS_E_YESORNO"
              ],
              "format": "value-label"
            },
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          }
        },
        {
          "phone_type": {
            "control": "select",
            "span": "6",
            "inputWidth": "200px",
            "default": "MOBI",
            "label": "电话类型",
            "dict": {
              "dictType": "CS_E_PHONE_TYPE",
              "dictKey": [
                "CS_E_PHONE_TYPE"
              ],
              "format": "value-label"
            },
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          },
          "phone_no": {
            "control": "text",
            "span": "8",
            "inputWidth": "200px",
            "label": "电话号码",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              },
              {
                "pattern": "^(1\\d{10})+$|^0\\d{2,3}-?\\d{7,8}$",
                "message": "请输入正确的电话号码！"
              }
            ]
          }
        },
        {
          "remark": {
            "control": "textarea",
            "span": "6",
            "inputWidth": "1000px",
            "rows": "12",
            "label": "备注"
          }
        }
      ]
    }
  }
}
