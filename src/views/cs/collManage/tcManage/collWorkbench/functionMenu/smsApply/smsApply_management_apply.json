{
  "module": "v-inputDataForm-btn",
  "layout": {
    "form": {
      "btns": [
        {
          "type": "submit",
          "target": "dialog",
          "label": "申请",
          "doRequest": {
              "url": "/SUMP/icmcall/icmRPCCall",
            "method": "POST",
            "params": {
              "servicecode": "cb0119",
              "case_id":"${{params.case_id}}",
              "appId": "cbOnl"
            }
          }
        },
        {
          "type": "close",
          "label": "返回"
        }
      ],
      "controls": [
        {
          "template_code": {
            "control": "lookup",
            "label": "短信模板",
            "span": 8,
            "keyField":{
              "template_code": "template_id",
              "template_type": "template_type",
              "sms_content": "template_content"
            },
            "toRequest": {
              "url": "/views/cs/collManage/tcManage/collWorkbench/functionMenu/smsApply/prodMailSet_lookup.json",
              "method": "post",
              "params":{
                "org_id": "${{params.org_id}}"
              }
            },
            "rules": [
              {
                "required": true,
                "message": "模板编号不得为空"
              }
            ]
          },

          "phone_no": {
            "control": "text",
            "span": 8,
            "inputWidth": "250px",
            "labelWidth": "0",
            "label": "手机号码",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              },
              {
                "pattern":"^1[3-9]\\d{9}$",
                "message": "请输入正确的号码"
              }
            ]
          },
          "sms_content": {
            "disabled":true,
            "control": "textarea",
            "inputWidth": "900px",
            "span": 22,
            "rows":"8",
            "labelWidth": "0",
            "label": "模板内容"
          }
        }
      ]
    }
  }
}
