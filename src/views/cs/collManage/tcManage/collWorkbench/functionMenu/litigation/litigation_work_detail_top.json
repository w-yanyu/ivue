{
  "module": "v-realonlyForm-btn",
  "layout": {
  
    "initDataOnce":true,
   
      "form": {
        "initRequest": {
          "url": "/SUMP/icmcall/icmRPCCall",
          "method": "POST",
          "params": {
              "servicecode": "cb0112",
              "appId": "cbOnl",
              "litigation_stage_code":"${{params.litigation_stage_code}}"        
            }
        },
          "btns": [
          ],
          "controls": [
            {
                "reminder_time": {
                    "control": "dateTimePicker",
                    "label": "提醒时间",
                    "type":"datetime",
                    "format": "yyyy-MM-dd HH:mm:ss",
                    "value":"${{form.cbt_litigation_stage.reminder_time}}",
                    "span": 12,
                    "width":"100px",
                    "disabled":true,
                    "rules": [
                        {
                            "required": true,
                            "message":"请输入"
                        }
                    ]
                }
                ,
                "reminder_method": {
                  "control": "select",
                  "label": "提醒方式",
                  "span": 6,
                  "disabled":true,
                  "value":"${{form.cbt_litigation_stage.reminder_method}}",
                  "options":[
                    {
                      "label": "系统",
                      "value": "S"
                    },
                    {
                      "label": "邮箱",
                      "value": "  M"
                    }
                  ],
                  "rules": [
                      {
                          "required": true,
                          "message":"请输入"
                      }
                  ]
              },
              "reminder": {
                  "control": "text",
                  "label": "被提醒人",
                  "span": 6,
                  "disabled":true,
                  "value":"${{form.cbt_litigation_stage.reminder}}",
                  "rules": [
                      {
                          "required": true,
                          "message":"请输入"
                      }
                  ]
              }
            },
            {
     
                "reminder_content": {
                    "control": "text",
                    "label": "提醒内容",
                    "span": 16,
                    "disabled":true,
                    "width":"100px",
                    "value":"${{form.cbt_litigation_stage.reminder_content}}",
                    "rules": [
                        {
                            "required": true,
                            "message":"请输入"
                        }
                    ]
                }
            }
        ]
    }
  }
}
