{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "scope":"formData",
            "initRequest": "${{params}}",
            "btns": [
                {
                    "type": "submit",
                    "icon": "el-icon-check",
                    "label": "核准",
                    "doRequest": {
                        "url": "/SUMP/icmcall/icmRPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "cb0131",
                            "appId": "cbOnl",
                            "org_id": "${{params.org_id}}",
                            "serial_no": "${{params.selectedData}}",
                            "approval_status": "P"
                          }
                    }
                },
                {
                    "type": "submit",
                    "icon": "el-icon-close",
                    "label": "拒绝",
                    "doRequest": {
                        "url": "/SUMP/icmcall/icmRPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "cb0131",
                            "appId": "cbOnl",
                            "org_id": "${{params.org_id}}",
                            "serial_no": "${{params.selectedData}}",
                            "approval_status": "R"
                          }
                    }
                }
            ],
            "controls": [
                {
                    "approval_desc": {
                        "control": "textarea",
                        "label": "审核说明",
                        "width": "180px",
                        "align": "center",
                        "span": "20",
                        "rows": 6,
                        "placeholder": "请输入",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入"
                            }
                        ]
                    }
                }
            ]
        }
    }
}
