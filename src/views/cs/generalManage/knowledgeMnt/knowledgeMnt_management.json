{
  "module": "v_search_btn_datagrid",
  "layout": {
    "form": {
      "scope": "formData",
      "controls": [
        {
          "doc_name": {
            "control": "text",
            "label": "文档名称"
          },
          "doc_type": {
            "control": "remoteSelect",
            "label": "文档类型",
            "labelField": "drop_list_desc",
            "valueField": "drop_list_value",
            "###doRequest": {
              "url": "/SUMP/icmcall/icmRPCCall",
              "method": "POST",
              "params": {
                "servicecode": "ap1071",
                "drop_list_type": "doc_type"
              }
            },
            "format": "value-label"
          }
        },
        {
          "user_name": {
            "control": "text",
            "label": "上传人"
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "icon": "el-icon-circle-plus",
          "target": "dialog",
          "label": "新增",
          "toRequest": {
            "method": "GET",
            "url": "/views/cs/generalManage/knowledgeMnt/knowledgeMnt_add.json"
          },
          "props": {
            "width": "50%",
            "title": "上传文档"
          }
        }
      ]
    },
    "datagrid": {
      "isInitSearch": false,
      "doRequest": {
        "url": "/SUMP/iccsCall/iccsEurekaCall",
        "method": "POST",
        "params": {
          "servicecode": "xxx",
          "appId": "cbOnl"
        }
      },
      "thead": [
        {
          "type": "string",
          "align": "center",
          "label": "文档编号",
          "prop": "doc_id"
        },
        {
          "type": "string",
          "align": "center",
          "label": "文档名称",
          "prop": "doc_name"
        },
        {
          "type": "string",
          "align": "center",
          "label": "文档类型",
          "prop": "doc_type",
          "dict": {
            "dictKey": [
              "doc_type"
            ],
            "format": "value-label",
            "labelField": "drop_list_desc",
            "valueField": "drop_list_value",
            "###doRequest": {
              "url": "/SUMP/icmcall/icmRPCCall",
              "method": "POST",
              "params": {
                "servicecode": "ap1071",
                "drop_list_type": "doc_type"
              }
            }
          }
        },
        {
          "type": "string",
          "align": "center",
          "label": "下载次数",
          "prop": "download_cnt"
        },
        {
          "type": "string",
          "align": "center",
          "label": "是否有效",
          "prop": "is_valid",
          "dict": {
            "dictType": "E_YESORNO",
            "dictKey": [
              "E_YESORNO"
            ],
            "format": "value-label"
          }
        },
        {
          "type": "string",
          "align": "center",
          "label": "上传人",
          "prop": "data_create_user",
          "dict": {
            "dictKey": "data_create_user",
            "format": "value-label",
            "labelField": "user_name",
            "valueField": "user_id",
            "###doRequest": {
              "url": "/SUMP/icmcall/icmRPCCall",
              "method": "POST",
              "params": {
                "servicecode": "pl0403",
                "appId": "cbOnl"
              }
            }
          }
        },
        {
          "type": "string",
          "align": "center",
          "label": "上传时间",
          "prop": "data_create_time"
        },
        {
          "type": "string",
          "align": "center",
          "label": "最新下载人",
          "prop": "data_update_user",
          "dict": {
            "dictKey": "data_create_user",
            "format": "value-label",
            "labelField": "user_name",
            "valueField": "user_id",
            "###doRequest": {
              "url": "/SUMP/icmcall/icmRPCCall",
              "method": "POST",
              "params": {
                "servicecode": "pl0403",
                "appId": "cbOnl"
              }
            }
          }
        },
        {
          "type": "string",
          "align": "center",
          "label": "最新下载时间",
          "prop": "data_update_time"
        },
        {
          "type": "string",
          "align": "center",
          "label": "当前版本",
          "prop": "data_version"
        },
        {
          "label": "操作",
          "fixed": "right",
          "align": "center",
          "btns": [
            {
              "type": "export",
              "label": "下载",
              "icon": "el-icon-download",
              "###doRequest": {
                "url": "/SUMP/rest/file/download",
                "method": "POST",
                "params": {
                  "servicecode": "pl6642",
                  "filePath": "${{current.doc_path}}",
                  "fileName": "${{current.doc_name}}",
                  "appId": "cbOnl"
                }
              }
            },
            {
              "type": "delete",
              "label": "删除",
              "###doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "pl6643"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
