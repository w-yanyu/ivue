{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                    "servicecode": "insertprod"
                }
            },
            "btns": [
                {
                    "type": "submit",
                    "label": "提交",
                    "icon": ""
                }
            ],
            "controls": [
                {
                    
                    "crdtcd": {
                        "control": "text",
                        "label": "项目编号",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入项目编号"
                            },
                            {
                                "max": 20,
                                "message": "长度不能超过20个字符"
                            }
                        ]
                    },
                    "prodna": {
                        "control":  "text",
                        "label": "项目名称"
                    }
                    
                },
                {
                    
                    
                    "area_code": {
                        "control": "text",
                        "label": "区域中心代码",
                        "rules": [
                            {
                                "required": true,
                                "message": "若不确定区域中心代码,则此处填'ALL'"
                            }
                        ]
                    },

                    "area_name": {
                        "control": "text",
                        "label": "区域中心名称"
                    }
                },
                {
                    "rate_code": {
                        "control": "lookup",
                        "label": "定价方案编号",
                        "edit": false,
                        "keyField": {
                            "ratecode": "rate_code",
                            "rate_name":"rate_name" 
                        },
                        "toRequest": {
                            "url": "/views/cm/InterestRateCenter/ProdRateManagement/customermanager.json",
                            "method": "post"
                        },
                        "multiple": false,
                        "props": {
                            "title": "属性选择"
                        },
                        "rules": [
                            {
                                "required": true,
                                "message": "定价方案编号不得为空"
                            },
                            {
                                "max": 20,
                                "message": "长度不能超过20个字符"
                            }
                        ]
                    },
                    "rate_name": {
                        "control": "string",
                        "label": "定价方案名称"
                    }
                },
                {
                    
                    
                    "cust_label": {
                        "control": "select",
                        "label": "客群",
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入客群信息"
                            }
                        ],
                        "dict": {
                          "dictType": "E_CUSLAB",
                          "dictKey": [
                            "E_CUSLAB"
                          ],
                          "format": "label"
                        }
                    },
                    "seqnum": {
                        "control": "hidden",
                        "value": "${{params.seqnum}}"
                    }
                }
                
               
            ]
        },
        "alert": {
              "span": 8,
              "title": "提示",
              "description": [
                  "客群类别说明: A-A类; B-B类; ALL-全部。",
                  "<p style = 'color:red'>区域中心代码: 若区域中心代码暂未确定,则填'ALL'</p>"
              ],
              "listStyle": "disc"   
          }
    }
}
