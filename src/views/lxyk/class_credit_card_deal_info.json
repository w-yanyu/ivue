{
    "module": "v_search_btn_datagrid",
    "layout": {
        "toolbar": {
            "btns": [
                {
                  "type": "add",
                  "label": "提交",
                  "doRequest": {
                    "url": "/SUMP/call/RPCCall",
                    "method": "POST",
                    "params": {
                      "servicecode": "ln3972",
                      "smilr_cr_card_loan_acct_num": "${{params.smilr_cr_card_loan_acct_num}}",
                      "smilr_cr_card_acct_ste": "${{params.smilr_cr_card_acct_ste}}",
                      "cust_num": "${{params.cust_num}}",
                      "cust_nm": "${{params.cust_nm}}",
                      "ccy_code_num": "${{params.ccy_code_num}}",
                      "istlmt_tp": "${{params.istlmt_tp}}",
                      "prod_code": "${{params.prod_code}}",
                      "txn_amt": "${{params.txn_amt}}",
                      "istlmt_prds": "${{params.istlmt_prds}}"
                    }
                  }
                }
            ]
        },
        "datagrid": {
            "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                    "servicecode": "ln3998",
                    "smilr_cr_card_loan_acct_num": "${{params.smilr_cr_card_loan_acct_num}}",
                    "txn_evt": "${{params.txn_evt}}",
                    "outlistid": "listnm"
                }
            },
            "thead": [
                {
                    "type": "selection"
                },
                {
                    "label": "贷款借据号",
                    "prop": "loan_due_bill_num",
                    "align": "center"
                },
                {
                    "label": "账期",
                    "prop": "bill_prds",
                    "align": "center"
                },
                {
                    "label": "明细序号",
                    "prop": "detl_serl_num",
                    "align": "center"
                },
                {
                    "label": "交易金额",
                    "prop": "txn_amt",
                    "align": "center"
                },
                {
                    "label": "交易事件",
                    "prop": "txn_evt",
                    "align": "center"
                }, 
                {
                    "label": "交易事件说明",
                    "prop": "txn_evt_comt",
                    "align": "center"
                },
                {
                    "label": "摘要描述",
                    "prop": "abst_dsc",
                    "align": "center"
                },
                {
                    "label": "交易日期",
                    "prop": "txn_dt_8",
                    "align": "center"
                },
                {
                    "label": "交易机构",
                    "prop": "txn_org",
                    "align": "center"
                },
                {
                    "label": "交易用户",
                    "prop": "txn_tlr",
                    "align": "center"
                }
            ]
        }
    }
}