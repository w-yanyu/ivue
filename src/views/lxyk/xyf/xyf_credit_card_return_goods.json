{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      
      "btns": [
        {
          "type": "submit",
          "label": "确认退货",
          "doRequest": {
            "url": "/SUMP/icmcall/icmRPCCall",
            "method": "post",
            "params": {
              "servicecode": "ar0046",
              "smilr_cr_card_loan_acct_num": "${{params.smilr_cr_card_loan_acct_num}}",
              "busi_type":"LXYKDK",
              "apply_type":"THSQ",
              "order_form_num":"${{params.order_form_num}}"
            }
          }
        },
        {
          "type": "close",
          "label": "取消"
        }
      ],
      "controls": [
        {
          
          "remks": {
            "control": "textarea",
            "label": "退货原因",
            "span": 12,
            "rows": 6,
            "rules": [
              {
                "required": true,
                "message": "此项为必填项"
              }
            ]
          }
        },
        {
          
          "refund_amt": {
            "control": "currency",
            "label": "退货金额",
            "rules": [
              {
                "required": true,
                "message": "此项为必填项"
              }
            ],
            "format": {
              "thousand": ","
            },
            "span": 12
          }
        }
      ]
    },
    "toolbar": {}
  }
}