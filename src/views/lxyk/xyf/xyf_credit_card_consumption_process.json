{
  "module": "v-form-btn-dynamic",
 "layout": {
   "form": {
     "initRequest":"${{params}}",
     "controlsGroup": [
       {
         "title": "订单信息",
         "tooltip": "step1",
         "titleIcon": "",
         "showHint": "",
         "accordion": false,
         "expand": true,
         "controls": [
           {
             "id1": {
               "control": "dynamic",
               "span": 24,
               "toRequest": {
                 "url": "/views/lxyk/xyf/xyf_credit_card_order_info.json",
                 "method": "post",
                 "params": {
                   "apply_no":"${{params.apply_no}}",
                   "pageType":"detail"
                 }
               }
             }
           }
         ]
       },
       {
         "title": "订单商品详情",
         "tooltip": "step2",
         "expand": true,
         "controls": [
           {
             "id2": {
               "control": "dynamic",
               "span": 24,
               "toRequest": {
                 "url": "/views/lxyk/xyf/xyf_credit_card_order_info_list.json",
                 "method": "get",
                 "params": {
                     "apply_no":"${{params.apply_no}}",
                     "pageType":"detail"
                 }
               }
             }
           }
         ]
       }
     ]
   }
 }
}
