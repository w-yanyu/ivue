{
  "module": "v-form-btn-dynamic",
  "layout": {
    "form": {
      "scope": "strForm",
      "initRequest": "${{params}}",
      "controls": [
        {

          "smilr_cr_card_loan_acct_num": {
            "control": "hidden",
            "label": "类信用卡贷款账号",
            "width": "100px",
            "value": "${{params.smilr_cr_card_loan_acct_num}}"
          },
          "genl_lmt": {
            "control": "currency",
            "label": "通用额度",
            "width": "100px",
            "disabled": true
          },
          "basic_lmt": {
            "control": "currency",
            "label": "基础额度",
            "width": "100px",
            "disabled": true
          }
        },
        {
          "alrdy_use_basic_lmt": {
            "control": "currency",
            "label": "已用基础额度",
            "width": "100px",
            "disabled": true
          },
          "aval_basic_lmt": {
            "control": "currency",
            "label": "可用基础额度",
            "width": "100px",
            "disabled": true
          }
        },
        {

          "temp_lmt": {
            "control": "currency",
            "label": "临时额度",
            "width": "100px",
            "disabled": true
          },
          "alrdy_use_temp_lmt": {
            "control": "currency",
            "label": "已用临时额度",
            "width": "100px",
            "disabled": true
          }
        },
        {
          "aval_temp_lmt": {
            "control": "currency",
            "label": "可用临时额度",
            "width": "100px",
            "disabled": true
          },
          "frz_lmt": {
            "control": "currency",
            "label": "冻结额度",
            "width": "100px",
            "disabled": true
          }
        },
        {
          "istlmt_lmt": {
            "control": "hidden",
            "label": "分期额度",
            "width": "100px",
            "disabled": true
          },
          "alrdy_use_istlmt_lmt": {
            "control": "hidden",
            "label": "已用分期额度",
            "width": "100px",
            "disabled": true
          }
        },
        {
          "aval_istlmt_lmt": {
            "control": "hidden",
            "label": "可用分期额度",
            "width": "100px",
            "disabled": true
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "label": "去调整",
          "toRequest": {
            "url": "/views/lxyk/class_credit_card_limit_change.json",
            "method": "POST",
            "params": {
              "smilr_cr_card_loan_acct_num": "${{strForm.smilr_cr_card_loan_acct_num}}",
              "alrdy_use_basic_lmt":"${{strForm.alrdy_use_basic_lmt}}",
              "alrdy_use_temp_lmt":"${{strForm.alrdy_use_temp_lmt}}",
              "basic_lmt":"${{strForm.basic_lmt}}",
              "temp_lmt":"${{strForm.temp_lmt}}"
          }
          },
          "props": {
            "width": "70%",
            "title": "额度调整详情"
          },
          "eventAfter": {
            "doParentCallback": true
          }
        }
      ]
    }
  }
}