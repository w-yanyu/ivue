{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "pt0905",
          "seq_no": "${{params.seq_no}}",
          "partner_no": "${{params.partner_no}}"
        }
      },
      "controls": [
        {
          "approve_tp": {
            "control": "select",
            "span": 16,
            "inputWidth":"250px",
            "align": "center",
            "label": "审批类型",
            "dict": {
              "dictType": "PT_E_APPROVE_TP",
              "dictKey": [
                "PT_E_APPROVE_TP"
              ]
            },
            "rules": [
              {
                "required": true,
                "message": "请选择审批类型"
              }
            ]
          }
        },
        {
          "approve_comments": {
            "control": "textarea",
            "span": 16,
            "inputWidth":"250px",
            "align": "center",
            "label": "审批意见",
            "autosize": {
              "minRows": 3,
              "maxRows": 5
            },
            "maxlength": 200,
            "showWordLimit": true,
            "rules": [
              {
                "required": true,
                "message": "请输入审批意见"
              }
            ]
          }
        }
      ]
    }
  }
}
