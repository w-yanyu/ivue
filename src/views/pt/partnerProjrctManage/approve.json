{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "pt0320",
          "part_project_no":"${{params.part_project_no}}",
          "approve_status":"02",
          "approve_link":"03",
          "version":"${{params.version}}"
        }
      },
      "controls": [
        {
          "approve_tp": {
            "control": "select",
            "span": 16,
            "inputWidth":"250px",
            "align": "center",
            "label": "审批类型",
            "options": [
              {
                "label": "通过",
                "value": "1"
              },
              {
                "label": "拒绝",
                "value": "0"
              }
            ],
            "rules": [
              {
                "required": true,
                "message": "请选择审批类型"
              }
            ]
          }
        },
        {
          "approve_comments": {
            "control": "textarea",
            "span": 16,
            "inputWidth":"250px",
            "align": "center",
            "label": "审批意见",
            "autosize": {
              "minRows": 3,
              "maxRows": 5
            },
            "maxlength": 200,
            "showWordLimit": true,
            "rules": [
              {
                "required": true,
                "message": "请输入审批意见"
              }
            ]
          }
        }
      ]
    }
  }
}
