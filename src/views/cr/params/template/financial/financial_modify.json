{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "scope": "formData",
            "btns": [{
                    "type": "submit",
                    "icon": "el-icon-check",
                    "label": "保存",
                    "doRequest": {
                        "method": "POST",
                        "url": "/SUMP/icmcall/icmRPCCall",
                        "params": {
                            "servicecode": "cr0073",
                            "temp_id": "${{params.temp_id}}",
                            "metric_kind": "1"
                        }
                    }
                },
                {
                    "type": "reset",
                    "icon": "el-icon-close",
                    "label": "重置"
                }
            ],
            "initRequest": "${{params}}",
            "controls": [{
                    "metric_id": {
                        "control": "string",
                        "label": "指标编码",
                        "rules": [{
                            "required": true,
                            "message": "请输入"
                        }]
                    },
                    "weight": {
                        "control": "text",
                        "label": "权重(%)",
                        "rules": [{
                            "required": true,
                            "message": "请输入"
                        }]
                    }
                },
                {
                    "metric_type": {
                        "control": "select",
                        "label": "指标类型",
                        "dict": {
                            "dictType": "CR_E_FINCL_METRIC_TYPE",
                            "dictKey": [
                                "CR_E_FINCL_METRIC_TYPE"
                            ],
                            "format": "label"
                        },
                        "rules": [{
                            "required": true,
                            "message": "请输入"
                        }]
                    },
                    "metric_name": {
                        "control": "text",
                        "label": "指标名称",
                        "rules": [{
                            "required": true,
                            "message": "请输入"
                        }]
                    }
                },
                {
                    "metric_formula": {
                        "control": "textarea",
                        "label": "指标公式",
                        "span": 24,
                        "autosize": {
                            "minRows": 3,
                            "maxRows": 5
                        },
                        "rules": [{
                            "required": true,
                            "max": 500,
                            "message": "必填项且长度不能超过500个字符"
                        }]
                    }
                },
                {
                    "formula_explain": {
                        "control": "textarea",
                        "label": "公式解释",
                        "span": 24,
                        "autosize": {
                            "minRows": 3,
                            "maxRows": 5
                        },
                        "rules": [{
                            "max": 500,
                            "message": "必填项且长度不能超过500个字符"
                        }]
                    }
                },
                {
                    "metric_default": {
                        "control": "text",
                        "label": "指标默认值",
                        "rules": [{
                            "required": true,
                            "message": "请输入"
                        }]
                    },
                    "is_valid": {
                        "label": "状态",
                        "control": "select",
                        "dict": {
                            "dictType": "MS_E_YESORNO",
                            "dictKey": [
                                "MS_E_YESORNO"
                            ],
                            "format": "label"
                        },
                        "rules": [{
                            "required": true,
                            "message": "请输入"
                        }]
                    }
                }
            ]
        }
    }
}