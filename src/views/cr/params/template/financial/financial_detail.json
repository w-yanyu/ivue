{
  "module": "v-realonlyForm-btn",
  "layout": {
    "form": {
      "scope": "formData",
      "initRequest": "${{params}}",
      "controls": [
        {
          "metric_id": {
            "control": "string",
            "label": "指标编码",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          },
          "weight": {
            "control": "string",
            "label": "权重(%)",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          }
        },
        {
          "metric_type": {
            "control": "string",
            "label": "指标类型",
            "dict": {
              "dictType": "CR_E_FINCL_METRIC_TYPE",
              "dictKey": [
                "CR_E_FINCL_METRIC_TYPE"
              ],
              "format": "label"
            },
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          },
          "metric_name": {
            "control": "string",
            "label": "指标名称",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          }
        },
        {
          "metric_formula": {
            "control": "textarea",
            "label": "指标公式",
            "disabled": true,
            "span": 24,
            "autosize": {
              "minRows": 3,
              "maxRows": 5
            },
            "rules": [
              {
                "required": true,
                "max": 400,
                "message": "必填项且长度不能超过400个字符"
              }
            ]
          }
        },
        {
          "formula_explain": {
            "control": "textarea",
            "label": "公式解释",
            "disabled": true,
            "span": 24,
            "autosize": {
              "minRows": 3,
              "maxRows": 5
            },
            "rules": [
              {
                "max": 400,
                "message": "必填项且长度不能超过400个字符"
              }
            ]
          }
        },
        {
          "metric_default": {
            "control": "string",
            "label": "指标默认值",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          },
          "is_valid": {
            "label": "状态",
            "control": "string",
            "dict": {
              "dictType": "MS_E_YESORNO",
              "dictKey": [
                "MS_E_YESORNO"
              ],
              "format": "label"
            },
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          }
        }
      ]
    }
  }
}
