{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "initRequest": "${{params}}",
            "btns": [{
                "type": "submit",
                "label": "提交",
                "icon": "",
                "doRequest": {
                    "url": "/SUMP/icmcall/icmRPCCall",
                    "method": "POST",
                    "params": {
                        "servicecode": "us0351"
                    }
                }
            }],
            "controls": [{
                "cust_no": {
                    "control": "hidden",
                    "label": "客户编号",
                    "disabled": true
                },
                "violtp": {
                    "control": "select",
                    "width": "10px",
                    "label": "违规种类:",
                    "dict": {
                        "dictType": "US_E_VIOLATION_TYPE",
                        "dictKey": [
                            "US_E_VIOLATION_TYPE"
                        ],
                        "format": "label"
                    },
                    "rules": [{
                        "required": true,
                        "message": "请选择违规种类"
                    }]
                },
                "violation_date": {
                    "control": "dateTimePicker",
                    "width": "10px",
                    "label": "违规日期",
                    "rules": [{
                        "required": true,
                        "message": "请选择违规日期"
                    }]
                },
                "violation_declare": {
                    "control": "text",
                    "width": "10px",
                    "label": "违规说明",
                    "rules": [{
                        "max": 200,
                        "required": true,
                        "message": "违规说明不能为空，长度不能超过200个字符"
                    }]
                },
                "ccy_code": {
                    "control": "select",
                    "width": "10px",
                    "label": "币种",
                    "dict": {
                        "dictType": "MS_CURRENCY",
                        "dictKey": [
                            "MS_CURRENCY"
                        ],
                        "format": "label"
                    },
                    "rules": [{
                        "max": 3,
                        "required": true,
                        "message": "请选择币种，其长度不能超过3个字符"
                    }]
                },
                "violation_amt": {
                    "control": "text",
                    "width": "10px",
                    "label": "讨债金额（元）",
                    "rules": [{
                        "max": 16,
                        "required": true,
                        "message": "请输入讨债金额,长度不能超过16个字符"
                    }],
                    "format":{
                        "thousand":","
                      }
                },
                "remark": {
                    "label": "备注",
                    "control": "textarea",
                    "width": "10px",
                    "span": "24",
                    "autosize": {
                        "minRows": 4
                    },
                    "rules": [{
                        "max": "100",
                        "message": "长度不能超过100个字符"
                    }]
                }
            }]
        }
    }
}
