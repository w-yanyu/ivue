{
  "module": "v_search_btn_datagrid",
  "layout": {
    "form": {
      "controls": [
        {
          "event_type": {
            "label": "事件类型",
            "control": "select",
            "dict": {
              "dictType": "US_E_EVENT_TYPE",
              "dictKey": [
                "US_E_EVENT_TYPE"
              ],
              "format": "value-label"
            }
          },
          "event_name": {
            "label": "事件名称",
            "control": "text",
            "rules": [
              {
                "max": 80,
                "message": "长度不能超过80个字符"
              }
            ]
          }
        }
      ],
      "foldLineNumber": 3
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "target": "dialog",
          "label": "新增",
          "toRequest": {
            "method": "POST",
            "url": "/views/us/privateManage/majorEvent/custMajorEvent/custMajorEvent_add.json",
            "params": {
              "cust_no": "${{params.cust_no}}"
            }
          },
          "show": {
            "expression": "'${{params.show_flash}}' == '1'"
          },
          "props": {
            "width": "65%",
            "title": "客户重大事件录入"
          }
        }
      ]
    },
    "datagrid": {
      "isInitSearch": true,
      "scope": "searchTable",
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "us0073",
          "cust_no": "${{params.cust_no}}"
        }
      },
      "thead": [
        {
          "label": "序号",
          "type": "index"
        },
        {
          "label": "客户序号",
          "prop": "cust_no"
        },
        {
          "label": "事件名称",
          "prop": "event_name"
        },
        {
          "label": "事件类型",
          "prop": "event_type",
          "dict": {
            "dictType": "US_E_EVENT_TYPE",
            "dictKey": [
              "US_E_EVENT_TYPE"
            ],
            "labelField": "dictName",
            "valueField": "dictId"
          }
        },
        {
          "label": "发生日期",
          "prop": "start_date"
        },
        {
          "label": "结束日期",
          "prop": "end_date"
        },
        {
          "label": "操作",
          "fixed": "right",
          "width": 200,
          "align": "center",
          "btns": [
            {
              "type": "look",
              "label": "详情",
              "toRequest": {
                "url": "/views/us/privateManage/majorEvent/custMajorEvent/custMajorEvent_info.json",
                "method": "POST"
              },
              "props": {
                "width": "65%",
                "title": "客户重大事件详情"
              }
            },
            {
              "type": "edit",
              "label": "维护",
              "toRequest": {
                "url": "/views/us/privateManage/majorEvent/custMajorEvent/custMajorEvent_modify.json",
                "method": "post"
              },
              "show": {
                "expression": "'${{params.show_flash}}' == '1'"
              },
              "props": {
                "width": "70%",
                "title": "客户重大事件维护"
              }
            },
            {
              "type": "delete",
              "label": "删除",
              "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "us0076"
                }
              },
              "show": {
                "expression": "'${{params.show_flash}}' == '1'"
              },
              "confirm": {
                "title": "确定删除",
                "confirmButtonText": "确定",
                "cancelButtonText": "取消"
              }
            }
          ]
        }
      ],
      "pagination": {
        "show": true
      }
    }
  }
}
