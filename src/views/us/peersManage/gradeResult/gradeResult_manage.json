{
  "module": "v_search_btn_datagrid",
  "layout": {
    "form": {
      "controls": [
        {
          "grade_branch_no": {
            "control": "select",
            "label": "评级机构",
            "options": [
              {
                "label": "中诚信",
                "value": "中诚信"
              },
              {
                "label": "标准普尔",
                "value": "标准普尔"
              },
              {
                "label": "穆迪投资",
                "value": "穆迪投资"
              },
              {
                "label": "惠誉国际",
                "value": "惠誉国际"
              },{
                "label":"内部测算打分",
                "value":"内部测算打分"
              }
            ]
          },"grade_date":{
            "control": "dateTimePicker",
            "label": "评级日期",
            "format": "yyyyMMdd"
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "target": "dialog",
          "label": "新增",
          "toRequest": {
            "method": "GET",
            "url": "/views/us/peersManage/gradeResult/gradeResult_add.json",
            "params": {
              "cust_no": "${{params.cust_no}}"
            }
          },
          "props": {
            "width": "80%",
            "title": "评级新增"
          }
        }
      ]
    },
    "datagrid": {
      "scope": "searchTable",
      "isInitSearch": true,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "us1000",
          "cust_no": "${{params.cust_no}}"
        }
      },
      "thead": [
        {
          "type": "index",
          "label": "序号"
        },
        {
          "label": "评级机构",
          "prop": "grade_branch_no",
          "align": "center"
        },
        {
          "label": "评级日期",
          "prop": "grade_date",
          "align": "center"
        },
        {
          "label": "评级等级",
          "prop": "grade_rank",
          "align": "center"
        },
        {
          "label": "操作",
          "width": "180px",
          "align": "center",
          "btns": [
            {
              "type": "custom",
              "label": "详请",
              "toRequest": {
                "url": "/views/us/peersManage/gradeResult/gradeResult_info.json",
                "params": {
                  "cust_no": "${{params.cust_no}}"
                },
                "props": {
                  "width": "80%",
                  "title": "债券发行信息详情"
                }
              }
            },
            {
              "type": "custom",
              "label": "删除",
              "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "us1002",
                  "cust_no": "${{params.cust_no}}"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
