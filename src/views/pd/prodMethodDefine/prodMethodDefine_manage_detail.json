{
  "module": "v_search_btn_datagrid",
  "layout": {
    "datagrid": {
      "scope": "searchTable",
      "isInitSearch": true,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "pd0214",
          "apply_no": "${{params.apply_no}}",
          "cust_no": "${{params.cust_no}}",
          "due_item_no": "${{params.due_item_no}}"
        }
      },
      "thead": [
{
          "type":"string",
          "label": "null",
          "prop": "null",
          "align": "center"
        },
{
          "type":"string",
          "label": "实现方法编号",
          "prop": "method_cd",
          "align": "center"
        },
{
          "type":"string",
          "label": "方法描述",
          "prop": "method_desc",
          "align": "center"
        },
{
          "type":"string",
          "label": "方法类别",
          "prop": "method_type",
          "align": "center",
            "dict": {
              "dictType": "PD_E_LHD_CHECK_METHOD_TYPE",
              "dictKey": [
                "PD_E_LHD_CHECK_METHOD_TYPE"
              ],
              "format": "label"
            }          },
{
          "type":"string",
          "label": "实现方法",
          "prop": "real_method",
          "align": "center"
        },
{
          "label": "操作",
          "align": "center",
          "width":"200px",
          "btns": [
            {
              "type": "look",
              "label": "详情",
              "toRequest": {
                "url": "@prodLayout",
                "method": "GET",
                "params": {
                   "apply_no": "${{params.apply_no}}",
                   "cust_no": "${{params.cust_no}}",
                   "due_item_no": "${{params.due_item_no}}"
                }
              },
              "props": {
                "width": "60%",
                "title": "授信产品详情"
              }
            }
          ]
        }
      ]
    }
  }
}
