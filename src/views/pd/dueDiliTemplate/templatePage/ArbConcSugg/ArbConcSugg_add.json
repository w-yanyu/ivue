{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "initRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "post",
        "params": {
          "servicecode": "ar1738",
          "due_item_no": "${{params.due_item_no}}",
          "apply_no": "${{params.apply_no}}",
          "cust_no": "${{params.cust_no}}"
        }
      },
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "post",
        "params": {
          "servicecode": "ar1739",
          "due_item_no": "${{params.due_item_no}}",
          "apply_no": "${{params.apply_no}}",
          "cust_no": "${{params.cust_no}}"
        }
      },
      "controls": [
        {
          "apply_no": {
            "control": "hidden",
            "label": "申请号",
            "span": 8
          },
          "cust_no": {
            "control": "hidden",
            "label": "客户编号",
            "span": 8
          },
          "due_item_no": {
            "control": "hidden",
            "label": "调查项编号",
            "span": 8
          },
          "ccy_code": {
            "control":"select",
            "label": "币种",
            "disabled": true,
            "width": "200px",
            "span": 8,
            "value": "$g{{user_info.ccy_code}}",
            "dict": {
              "dictType": "MS_CURRENCY",
              "dictKey": [
                "MS_CURRENCY"
              ],
              "format": "label"
            }
          },
          "loan_amt": {
            "control": "currency",
            "label": "贷款金额",
            "decimal": "2",
            "align": "left",
            "format": {
              "thousand": ","
            },
            "width": "200px",
            "span": 8
          },
          "loan_term": {
            "control": "text",
            "label": "贷款期限(月)",
            "width": "200px",
            "span": 8
          },
          "year_rate": {
            "control": "currency",
            "label": "年利率",
            "align": "left",
            "width": "200px",
            "span": 8
          },
          "mont_installment": {
            "control": "currency",
            "label": "月分期还款额",
            "decimal": "2",
            "align": "left",
            "format": {
              "thousand": ","
            },
            "width": "200px",
            "span": 8
          },
          "mont_installment_scale": {
            "control": "currency",
            "label": "月还款额占月可支比例",
            "align": "left",
            "width": "200px",
            "span": 8
          },
          "repay_way": {
            "control": "select",
            "label": "还款方式",
            "width": "200px",
            "span": 8,
            "dict": {
              "dictType": "MS_E_REPAY_WAY",
              "dictKey": [
                "MS_E_REPAY_WAY"
              ],
              "format": "label"
            }
          },
          "exce_case": {
            "control": "textarea",
            "label": "特殊情况",
            "width": "200px",
            "span": 24,
            "rows": 6
          },
          "acco_mana_sign": {
            "control": "text",
            "label": "客户经理签字",
            "width": "200px",
            "span": 8
          },
          "sign_date": {
            "control": "dateTimePicker",
            "label": "开始日期:",
            "width": "200px",
            "span": 8,
            "format": "yyyyMMdd"
          }
        }
      ]
    }
  }
}
