{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "initRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "post",
        "params": {
          "servicecode": "ar1744",
          "due_item_no": "${{params.due_item_no}}",
          "apply_no": "${{params.apply_no}}",
          "cust_no": "${{params.cust_no}}"
        }
      },
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "post",
        "params": {
          "servicecode": "ar1745",
          "due_item_no": "${{params.due_item_no}}",
          "apply_no": "${{params.apply_no}}",
          "cust_no": "${{params.cust_no}}"
        }
      },
      "controls": [
        {
          "apply_no": {
            "control": "hidden",
            "label": "申请号",
            "span": 8
          },
          "cust_no": {
            "control": "hidden",
            "label": "客户编号",
            "span": 8
          },
          "due_item_no": {
            "control": "hidden",
            "label": "调查项编号",
            "span": 8
          },
          "ccy_code": {
            "control":"select",
            "label": "币种",
            "width": "200px",
            "span": 12,
            "value": "$g{{user_info.ccy_code}}",
            "dict": {
              "dictType": "MS_CURRENCY",
              "dictKey": [
                "MS_CURRENCY"
              ],
              "format": "label"
            }
          },
          "apply_amt": {
            "control": "currency",
            "label": "申请金额",
            "decimal": "2",
            "align" : "left",
            "format": {
              "thousand": ","
            },
            "width": "200px",
            "span": 12
          },
          "term": {
            "control": "text",
            "label": "期限(月)",
            "width": "200px",
            "span": 12
          },
          "installment_repayment": {
            "control": "currency",
            "label": "分期还款额",
            "align" : "left",
            "decimal": "2",
            "format": {
              "thousand": ","
            },
            "width": "200px",
            "span": 12
          },
          "inve_proj_step": {
            "control": "textarea",
            "label": "投资项目步骤",
            "width": "200px",
            "span": 24,
            "rows": 6
          },
          "other_need_explain_situ": {
            "control": "textarea",
            "label": "其他需要说明的情况",
            "width": "200px",
            "span": 24,
            "rows": 6
          }
        }
      ]
    }
  }
}
