{
  "module": "v_search_btn_datagrid",
  "layout": {
    "form": {
      "controls": [
        {
          "sale_prod_cd": {
            "control": "text",
            "label": "授信产品编号"
          },
          "sale_prod_name": {
            "control": "text",
            "label": "授信产品名称"
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "target": "addlog",
          "label": "新增",
          "toRequest": {
            "method": "GET",
            "url": "@sellProductAddFirst",
            "params": {
              "tranType": "add",
              "prod_type": "CL",
              "page_type": "CL",
              "cust_class_list": "${{params.cust_class_list}}"
            }
          },
          "props": {
            "width": "60%",
            "title": "授信产品信息新增"
          }
        }
      ]
    },
    "datagrid": {
      "scope": "searchTable",
      "isInitSearch": false,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "pd0211",
          "appr_status":"01",
          "prod_type": "CL",
          "cust_class_list": "${{params.cust_class_list}}"
        }
      },
      "thead": [
        {
          "type":"string",
          "label": "授信产品名称",
          "prop": "sale_prod_name",
          "align": "center"
        },
        {
          "type":"string",
          "label": "授信产品编号",
          "prop": "sale_prod_cd",
          "align": "center"
        },
        {
          "type":"string",
          "label": "授信产品版本",
          "prop": "prod_version",
          "align": "center"
        },

        {
          "type":"string",
          "label": "授信产品类型",
          "prop": "prod_type_name",
          "align": "center"
        },
        {
          "type":"string",
          "label": "模板编号",
          "prop": "template_id",
          "align": "center"
        },
        {
          "type": "string",
          "label": "模板版本",
          "prop": "template_version",
          "align": "center"
        },
        {
          "type": "string",
          "label": "适用客户类型",
          "prop": "cust_class",
          "align": "center",
          "dict": {
            "dictType": "PD_E_CUST_CLASS",
            "dictKey": [
              "PD_E_CUST_CLASS"
            ],
            "format": "label"
          }
        },
        {
          "type":"string",
          "label": "审批状态",
          "prop": "appr_status",
          "align": "center",
          "dict": {
            "dictType": "PD_E_APPR_STATUS",
            "dictKey": [
              "PD_E_APPR_STATUS"
            ],
            "format": "label"
          }
        },
        {
          "label": "操作",
          "fixed": "right",
          "width":"200px",
          "btns": [
            {
              "type": "look",
              "label": "审核记录",
              "toRequest": {
                "url": "/views/pd/prodApprovalRecord/prod_approval_record_list.json",
                "method": "POST"
              },
              "props": {
                "width": "65%",
                "title": "审核记录"
              }
            },
            {
              "type": "look",
              "label": "详情",
              "toRequest": {
                "url": "@prodLayout",
                "method": "GET",
                "params": {
                  "tranType": "detail",
                  "template_id": "${{current.template_id}}",
                  "pageTranType": "temp"
                }
              },
              "props": {
                "width": "75%",
                "title": "授信产品详情"
              }
            },
            {
              "type": "edit",
              "label": "维护",
              "toRequest": {
                "url": "@prodLayout",
                "method": "GET",
                "target": "navTab",
                "params": {
                  "tranType": "modify",
                  "template_id": "${{current.template_id}}"
                }
              },
              "props": {
                "width": "65%",
                "title": "授信产品维护"
              }
            },
            {
              "type": "delete",
              "label": "删除",
              "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "pd0213"
                }
              },
              "confirm": {
                "title": "确定删除",
                "cancelButtonText": "取消",
                "confirmButtonText": "确定"
              }
            }
          ]
        }
      ]
    }
  }
}
