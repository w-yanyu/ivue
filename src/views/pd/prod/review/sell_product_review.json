{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "pd0301",
          "sale_prod_cd": "${{params.sale_prod_cd}}",
          "prod_version": "${{params.prod_version}}",
          "prod_type": "${{params.prod_type}}",
          "busi_seq": "${{params.busi_seq}}"
        }
      },
      "controls": [
        {
          "submit_type": {
            "control": "select",
            "span": 16,
            "inputWidth":"250px",
            "align": "center",
            "label": "审批类型",
            "dict": {
              "dictType": "PL_E_RPAPLSTUS",
              "dictKey": [
                "PL_E_RPAPLSTUS"
              ],
              "exclude": [
                "0",
                "3",
                "4",
                "5"
              ]
            },
            "rules": [
              {
                "required": true,
                "message": "请选择审批类型"
              }
            ]
          }
        },
        {
          "appro_opinion": {
            "control": "textarea",
            "span": 16,
            "inputWidth":"250px",
            "align": "center",
            "label": "审批意见",
            "autosize": {
              "minRows": 3,
              "maxRows": 5
            },
            "maxlength": 200,
            "showWordLimit": true,
            "rules": [
              {
                "required": true,
                "message": "请输入审批意见"
              }
            ]
          }
        }
      ]
    }
  }
}
