{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "scope": "templateScope",
      "initRequest": {
        "url": "/SUMP/call/RPCCall",
        "method": "post",
        "params": {
          "servicecode": "pd0114",
          "template_id": "${{params.template_id}}"
        }
      },
      "controls": [
        {
          "template_id": {
            "control": "hidden",
            "label": "template_id"
          }
        },
        {
          "template_name": {
            "control": "text",
            "label": "模板名称",
            "value": "${{params.template_id}}",
            "span": 12,
            "rules": [
              {
                "required": true,
                "message": "必填项"
              }
            ]
          },
          "prod_type": {
            "control": "remoteSelect",
            "label": "产品类型",
            "labelField": "title",
            "valueField": "id",
            "doRequest": {
              "url": "/SUMP/call/RPCCall",
              "method": "POST",
              "params": {
                "servicecode": "pd0144",
                "grupno": "0006",
                "pid": "KSCP"
              }
            },
            "format": "label",
            "span": 12,
            "events": {
              "doRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "post",
                "params": {
                  "servicecode": "pd0143",
                  "grupno": "0006",
                  "id": "${{templateScope.prod_type}}"
                },
                "resultSet": {
                  "prod_type_name": "title"
                }
              }
            },
            "rules": [
              {
                "required": true,
                "message": "必填项"
              }
            ]
          }
        },
        {
          "cust_class": {
            "label": "适用客户类型",
            "control": "select",
            "dict": {
              "dictType": "PD_E_CUST_CLASS",
              "dictKey": [
                "PD_E_CUST_CLASS"
              ]
            },
            "rules": [
              {
                "required": true,
                "message": "请选择适用客户类型"
              }
            ]
          },
          "valid_flag": {
            "control": "select",
            "disabled": "true",
            "span": 12,
            "label": "是否有效",
            "selectLastValue": "true",
            "dict": {
              "dictType": "MS_E_YESORNO",
              "dictKey": [
                "MS_E_YESORNO"
              ],
              "format": "label"
            },
            "rules": [
              {
                "required": true,
                "message": "必填项"
              }
            ]
          }
        },
        {
          "apply_type_list": {
            "control": "remoteSelect",
            "multiple": true,
            "span": 12,
            "label": "申请类型列表",
            "labelField": "title",
            "valueField": "id",
            "doRequest": {
              "url": "/SUMP/call/RPCCall",
              "method": "POST",
              "params": {
                "servicecode": "pd0144",
                "grupno": "0006",
                "pid": "${{templateScope.prod_type}}"
              }
            },
            "format": "label",
            "rules": [
              {
                "required": true,
                "message": "必填项"
              }
            ]
          },
          "prod_type_name": {
            "control": "hidden",
            "span": 12,
            "label": "产品类型名称"
          }
        }
      ]
    }
  }
}