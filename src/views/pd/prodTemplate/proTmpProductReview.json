{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "pd0153",
          "sale_prod_cd": "${{params.sale_prod_cd}}",
          "template_id": "${{params.template_id}}",
          "prod_version": "${{params.prod_version}}",
          "prod_type": "${{params.prod_type}}",
          "busi_seq": "${{params.busi_seq}}"
        }
      },
      "controls": [
        {
          "submit_type": {
            "control": "select",
            "span": 16,
            "inputWidth":"250px",
            "align": "center",
            "label": "审批类型",
            "dict": {
              "dictType": "PD_E_OPINION_TYPE",
              "dictKey": [
                "PD_E_OPINION_TYPE"
              ],
              "format": "label"
            },
            "rules": [
              {
                "required": true,
                "message": "请选择审批类型"
              }
            ]
          }
        },
        {
          "appro_opinion": {
            "control": "textarea",
            "span": 16,
            "inputWidth":"250px",
            "align": "center",
            "label": "审批意见",
            "autosize": {
              "minRows": 3,
              "maxRows": 5
            },
            "maxlength": 200,
            "showWordLimit": true,
            "rules": [
              {
                "required": true,
                "message": "请输入审批意见"
              }
            ]
          }
        }
      ]
    }
  }
}
