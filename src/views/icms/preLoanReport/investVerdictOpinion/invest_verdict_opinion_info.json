{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "initRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                    "servicecode": "ar0981",
                    "apply_no": "${{params.apply_no}}"
                }
            },
            "name": "detail",
            "controls": [
                {
                    "prim_key": {
                        "label": "主键",
                        "control": "hidden",
                        "width": "140px"
                    },
                    "guar_cond": {
                        "label": "担保条件",
                        "width": "140px",
                        "placeholder": "(200个字以内,若没有请填“无”)",
                        "control": "textarea",
                        "span": 24,
                        "autosize": {
                            "minRows": 3,
                            "maxRows": 5
                        },
                        "maxlength": 200,
                        "showWordLimit": true,
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入授信用途"
                            }
                        ]
                    },
                    "credit_purpose": {
                        "label": "授信用途",
                        "width": "140px",
                        "placeholder": "(200个字以内,若没有请填“无”)",
                        "control": "textarea",
                        "span": 24,
                        "autosize": {
                            "minRows": 3,
                            "maxRows": 5
                        },
                        "maxlength": 200,
                        "showWordLimit": true,
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入授信用途"
                            }
                        ]
                    },
                    "credit_require": {
                        "label": "其他授信管理要求",
                        "width": "140px",
                        "placeholder": "(200个字以内,若没有请填“无”)",
                        "control": "textarea",
                        "span": 24,
                        "autosize": {
                            "minRows": 3,
                            "maxRows": 5
                        },
                        "maxlength": 200,
                        "showWordLimit": true,
                        "rules": [
                            {
                                "required": true,
                                "message": "请输入其他授信管理要求"
                            }
                        ]
                    }
                }
            ],
            "btns": [
                {
                    "type": "submit",
                    "label": "保存",
                    "doRequest": {
                        "url": "/SUMP/icmcall/icmRPCCall",
                        "method": "POST",
                        "params": {
                            "servicecode": "ar0982",
                            "apply_no": "${{params.apply_no}}",
                            "cust_no": "${{params.cust_no}}"
                        }
                    },
                    "show": {
                      "expression": "'${{params.pageType}}' != 'detail'"
                    }
                }
            ]
        }
    }
}