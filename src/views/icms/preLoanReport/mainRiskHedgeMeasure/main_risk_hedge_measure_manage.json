{
    "module": "v_search_btn_datagrid",
    "layout": {
        "toolbar": {
            "btns": [{
                "type": "add",
                "label": "新增",
                "toRequest": {
                    "url": "/views/icms/preLoanReport/mainRiskHedgeMeasure/main_risk_hedge_measure_add.json",
                    "method": "get",
                    "params": {
                        "apply_no": "${{params.apply_no}}",
                        "cust_no": "${{params.cust_no}}"
                    }
                },
                "props": {
                    "title": "新增",
                    "width": "65%"
                },
                "show": {
                  "expression": "'${{params.pageType}}' != 'detail'"
                }
            }]
        },
        "datagrid": {
            "isInitSearch": true,
            "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "post",
                "params": {
                    "servicecode": "ar0961",
                    "apply_no": "${{params.apply_no}}",
                    "cust_no": "${{params.cust_no}}"
                }
            },
            "pagination": {
                "pageSizes": [
                    10,
                    15,
                    20
                ],
                "pageSize": 10
            },
            "thead": [{
                    "type": "index",
                    "align": "center"
                },
                {
                    "label": "风险分组标识",
                    "prop": "risk_group_flag",
                    "align": "center",
                    "dict": {
                        "dictType": "AR_E_GROUP_FLAG",
                        "dictKey": [
                            "AR_E_GROUP_FLAG"
                        ]
                    },
                    "format": "label"
                },
                {
                    "label": "风险内容",
                    "prop": "risk_content",
                    "align": "center"
                },
                {
                    "label": "操作",
                    "width": "150px",
                    "align": "center",
                    "fixed": "right",
                    "btns": [{
                            "type": "edit",
                            "label": "维护",
                            "toRequest": {
                                "url": "/views/icms/preLoanReport/mainRiskHedgeMeasure/main_risk_hedge_measure_modify.json",
                                "method": "get",
                                "params": {
                                    "apply_no": "${{params.apply_no}}"
                                }
                            },
                            "props": {
                                "title": "维护",
                                "width": "80%"
                            },
                            "show": {
                              "expression": "'${{params.pageType}}' != 'detail'"
                            }
                        },
                        {
                            "type": "delete",
                            "label": "删除",
                            "doRequest": {
                                "url": "/SUMP/icmcall/icmRPCCall",
                                "method": "POST",
                                "params": {
                                    "servicecode": "ar0964"
                                }
                            },
                            "show": {
                              "expression": "'${{params.pageType}}' != 'detail'"
                            }
                        }
                    ]
                }
            ]
        }
    }
}
