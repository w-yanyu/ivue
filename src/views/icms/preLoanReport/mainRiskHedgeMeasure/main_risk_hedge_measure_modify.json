{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "name": "detail",
            "initRequest": "${{params}}",
            "controls": [{
                "prim_key": {
                    "label": "主键",
                    "control": "hidden"
                },
                "apply_no": {
                    "label": "申请id",
                    "control": "hidden"
                },
                "cust_no": {
                    "label": "cust_no",
                    "control": "hidden"
                },
                "risk_group_flag": {
                    "label": "主要风险点",
                    "width": "140px",
                    "control": "select",
                    "multiple": false,
                    "dict": {
                        "dictType": "AR_E_FZBS",
                        "dictKey": [
                            "AR_E_FZBS"
                        ],
                        "format": "label"
                    },
                    "rules": [{
                        "required": true,
                        "message": "请输入主要风险点"
                    }]
                },
                "risk_content": {
                    "label": "风险内容",
                    "width": "140px",
                    "placeholder": "(200个字以内,若没有请填“无”)",
                    "control": "textarea",
                    "span": 24,
                    "autosize": { "minRows": 3, "maxRows": 5 },
                    "maxlength": 200,
                    "showWordLimit": true,
                    "rules": [{
                        "required": true,
                        "message": "请输入风险内容"
                    }]
                },
                "precautionary_measures": {
                    "label": "可行的防范措施",
                    "width": "140px",
                    "placeholder": "(200个字以内,若没有请填“无”)",
                    "control": "textarea",
                    "span": 24,
                    "autosize": { "minRows": 3, "maxRows": 5 },
                    "maxlength": 200,
                    "showWordLimit": true,
                    "rules": [{
                        "required": true,
                        "message": "请输入可行的防范措施"
                    }]
                }

            }],
            "btns": [{
                "type": "submit",
                "label": "提交",
                "doRequest": {
                    "url": "/SUMP/icmcall/icmRPCCall",
                    "method": "POST",
                    "params": {
                        "servicecode": "ar0963",
                        "apply_no": "${{params.apply_no}}",
                        "cust_no": "${{params.cust_no}}"
                    }
                }
            }]
        }
    }
}