{
    "module": "v_search_btn_datagrid",
    "layout": {
        "toolbar": {
            "btns": [{
                "type": "add",
                "target": "dialog",
                "label": "新增",
                "toRequest": {
                    "method": "GET",
                    "url": "/views/icms/preLoanReport/creditBaseState/creditSchemeSummary/credit_scheme_summary_add.json",
                    "params": {
                        "apply_no": "${{params.apply_no}}",
                        "cust_no": "${{params.cust_no}}"
                    }
                },
                "props": {
                    "width": "75%",
                    "title": "授信方案综述"
                },
                "show": {
                  "expression": "'${{params.pageType}}' != 'detail'"
                }
            }]
        },
        "datagrid": {
            "scope": "searchTable",
            "isInitSearch": true,
            "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                    "servicecode": "ar0911",
                    "apply_no": "${{params.apply_no}}",
                    "cust_no": "${{params.cust_no}}"
                }
            },
            "thead": [{
                    "type": "index",
                    "align": "center"
                },
                {
                    "label": "具体业务品种",
                    "prop": "busi_type",
                    "align": "center",
                    "dict": {
                        "dictType": "AR_E_SPECIFIC_BUSI_TYPE",
                        "dictKey": [
                            "AR_E_SPECIFIC_BUSI_TYPE"
                        ]
                    },
                    "format": "label"
                },
                {
                    "label": "额度",
                    "prop": "limit_amt",
                    "align": "center",
                    "format":{
                        "thousand":","
                      }
                },
                {
                    "label": "敞口额度",
                    "prop": "credit_open_amt",
                    "align": "center",
                    "format":{
                        "thousand":","
                      }
                },
                {
                    "label": "期限(月)",
                    "prop": "term",
                    "align": "center"
                },
                {
                    "label": "担保方式",
                    "prop": "guar_type",
                    "align": "center",
                    "dict": {
                        "dictType": "AR_E_GUAR_TYPE",
                        "dictKey": [
                            "AR_E_GUAR_TYPE"
                        ]
                    }
                },
                {
                    "label": "操作",
                    "align": "center",
                    "fixed": "right",
                    "btns": [{
                            "type": "edit",
                            "label": "修改",
                            "toRequest": {
                                "url": "/views/icms/preLoanReport/creditBaseState/creditSchemeSummary/credit_scheme_summary_modify.json",
                                "method": "GET"
                            },
                            "props": {
                                "width": "75%",
                                "title": "授信方案综述"
                            },
                            "show": {
                              "expression": "'${{params.pageType}}' != 'detail'"
                            }
                        },
                        {
                            "type": "delete",
                            "label": "删除",
                            "doRequest": {
                                "url": "/SUMP/icmcall/icmRPCCall",
                                "method": "POST",
                                "params": {
                                    "servicecode": "ar0914"
                                }
                            },
                            "show": {
                              "expression": "'${{params.pageType}}' != 'detail'"
                            }
                        }
                    ]
                }
            ]
        }
    }
}