{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "scope": "form",
      "initRequest": "${{params}}",
      "btns": [
      ],
      "controls": [
        {
          "apply_no": {
            "control": "hidden",
            "disabled": true,
            "label": "申请号",
            "width": "200px",
            "span": 7
          },
          "purch_sale_contract_no": {
            "control": "hidden",
            "label": "购销合同号",
            "rules": [
              {
                "required": true,
                "message": "请选择购销合同号"
              }
            ],
            "disabled": true,
            "width": "200px",
            "span": 7
          },
          "counter_name": {
            "disabled": true,
            "control": "text",
            "edit": true,
            "width": "200px",
            "span": 7,
            "label": "收款人名称",
            "format": "label"
          },
          "contract_amt": {
            "disabled": true,
            "control": "currency",
            "label": "购销合同金额",
            
            "width": "200px",
            "span": 7,
            "align": "left",
            "format":{
              "thousand": ","
            }  
          },
          "check_total_amt": {
            "control": "currency",
            "label": "签票总额",
            "compute": "${{form.contract_amt}}",
            "disabled": true,
            "width": "200px",
            "span": 7,
            "align": "left",
            "format":{
              "thousand": ","
            }
          },
         
          "ccy_code": {
            "control": "select",
            "span": 7,
            "disabled": true,
            "width": "200px",
            "label": "币种",
            "dict": {
              "dictType": "MS_CURRENCY",
              "dictKey": [
                "MS_CURRENCY"
              ],
              "format": "label"
            },
            "value": "156"
          },
          "base_ccy": {
            "control": "select",
            "span": 7,
            "width": "200px",
            "label": "基准币种",
            "disabled": true,
            "dict": {
              "dictType": "MS_CURRENCY",
              "dictKey": [
                "MS_CURRENCY"
              ],
              "format": "label"
            },
            "value": "156"
          },
          "exchange_rate": {
            "disabled": true,
            "control": "currency",
            "label": "汇率",
            "align": "left",
            "width": "200px",
            "span": 7,
            "value": 1
          },
          "contract_base_amt": {
            "control": "currency",
            "disabled": true,
            "label": "购销合同金额(折基基准币种)",
            "compute": "${{form.contract_amt}}*${{form.exchange_rate}}",        
            "width": "200px",
            "span": 7,
            "align": "left",
            "format":{
              "thousand": ","
            }  
          },
          "check_total_base_amt": {
            "control": "currency",
            "label": "签票总额（折基准币种）",
            "compute": "${{form.check_total_amt}}*${{form.exchange_rate}}",
            "disabled": true,
            "width": "200px",
            "span": 7,
            "align": "left",
            "format":{
              "thousand": ","
            }  
          },
          "loan_contract_sign_date": {
            "control": "dateTimePicker",
            "editable": false,
            "format": "yyyyMMdd",
            "label": "购销合同签订日期",
            "disabled": true,
            "width": "200px",
            "span": 7
          },
          "start_date": {
            "control": "dateTimePicker",
            "editable": false,
            "format": "yyyyMMdd",
            "label": "购销起始日期",
            "disabled": true,
            "width": "200px",
            "span": 7
          },
          "matu_date": {
            "control": "dateTimePicker",
            "editable": false,
            "format": "yyyyMMdd",
            "label": "购销到期日期",
            "disabled": true,
            "width": "200px",
            "span": 7
          },

          "payee_pk": {
            "control": "hidden",
            "edit": true,
            "width": "200px",
            "span": 7
        },
        "merch_bill": {
          "control": "textarea",
          "label": "商品清单",
          "disabled": true,
          "width": "200px",
          "span":21
        },
          "purch_sale_contract_desc": {
            "control": "textarea",
            "label": "购销合同内容",
            "disabled": true,
            "width": "200px",
            "span":21
          },
          "other_covenants": {
            "control": "textarea",
            "disabled": true,
            "label": "其他约定事项",
            "width": "200px",
            "span":21
          }
        }
      ]
    }
  }
}