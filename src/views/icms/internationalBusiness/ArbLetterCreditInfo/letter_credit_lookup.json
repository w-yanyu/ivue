{
    "module": "v_search_btn_datagrid",
    "layout": {
      "form": {
        "controls": [
          {    
            "apply_no": {
              "control": "text",
              "label": "申请编号"
            }
          }
        ]
      },
      "datagrid": {
        "scope": "searchTable",
        "isInitSearch": false,
        "doRequest": {
          "url": "/SUMP/icmcall/icmRPCCall",
          "method": "POST",
          "params": {
            "servicecode": "ar1308",
            "cust_no": "${{params.cust_no}}"
          }
        },
        "thead": [
          {
            "type": "index",
            "label": "序号"
          },
          {
            "label": "申请编号",
            "prop": "apply_no",
            "align": "center"
          },
          {
            "label": "信用证号",
            "prop": "contract_no",
            "align": "center"
          },
          {
            "label": "信用证金额",
            "prop": "apply_amt",
            "align": "center",
            "format":{
              "thousand":","
            }
          },{
            "label": "信用证金额（折基准币种）",
            "prop": "apply_base_amt",
            "align": "center",
            "format":{
              "thousand":","
            }
          },{
            "label": "汇率",
            "prop": "exchange_rate",
            "align": "center"
          },
          {
            "label": "信用证币种",
            "prop": "ccy_code",
            "align": "center",
            "dict": 
                {
                  "dictType":"MS_CURRENCY",
                  "dictKey": "MS_CURRENCY",
                  "format":"label"
                }
          },{
            "label": "基准币种",
            "prop": "base_ccy",
            "align": "center",
            "dict": 
                {
                  "dictType":"MS_CURRENCY",
                  "dictKey": "MS_CURRENCY",
                  "format":"label"
                }
          },
          {
            "label": "信用证余额",
            "prop": "contract_valid_amt",
            "align": "center",
            "format":{
              "thousand":","
            }
          },
          {
            "label": "操作",
            "align": "center",
            "fixed": "right",
            "btns": [
              {
                "type": "bringback",
                "label": "选择"
              }
            ]
          }
        ]
      }
    }
  }