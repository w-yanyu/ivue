{
  "module": "v_search_btn_datagrid",
  "layout": {
    "datagrid": {
      "isInitSearch": false,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "ar0601",
          "limit_no": "${{params.limit_no}}"
        }
      },
      "pagination": {
        "pageSizes": [
          10,
          15,
          20,
          50,
          100
        ],
        "pageSize": 10
      },
      "thead": [
        {
          "label": "计划编号",
          "prop": "plan_id",
          "align": "center"
        },
        {
          "label": "阶段描述",
          "prop": "stage_desc",
          "align": "center"
        },
        {
          "label": "阶段序号",
          "prop": "stage_no",
          "align": "center"
        },
        {
          "label": "阶段比例",
          "prop": "stage_ratio",
          "align": "center"
        },
        {
          "label": "阶段金额",
          "prop": "stage_amt",
          "align": "center"
        },
        {
          "label": "可用余额",
          "prop": "avail_amt",
          "align": "center"
        },
        {
          "label": "已用金额",
          "prop": "used_amt",
          "align": "center"
        },
        {
          "label": "阶段状态",
          "prop": "stage_status",
          "align": "center",
          "dict": {
            "dictType": "AR_E_STAGE_STATE",
            "dictKey": [
              "AR_E_STAGE_STATE"
            ],
            "format": "label-value"
          }
        },
        {
          "label": "操作",
          "align": "center",
          "width": "200px",
          "btns": [
            {
              "type": "bringback",
              "label": "选择",
              "show": {
                "expression": "'${{current.stage_status}}' == '1'"
              }
            }
          ]
        }
      ]
    }
  }
}
