{
  "module": "v_search_btn_datagrid",
  "layout": {
    "form": {
      "controls": [
        {
          "amt_purpose_name": {
            "control": "text",
            "label": "贷款用途名称"
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "target": "dialog",
          "label": "新增",
          "toRequest": {
            "method": "POST",
            "url": "/views/icms/docManager/loanPurpose/loanPurpose_add.json"
          },
          "props": {
            "width": "65%",
            "title": "新增贷款用途定义"
          }
        }
      ]
    },
    "datagrid": {
      "scope": "searchTable",
      "isInitSearch": true,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "ar0247"
        }
      },
      "thead": [
        {
          "type":"string",
          "label": "贷款用途编号",
          "prop": "amt_purpose_no",
          "align": "center"
        },
        {
          "type":"string",
          "label": "贷款用途名称",
          "prop": "amt_purpose_name",
          "align": "center"
        },
        {
          "type":"string",
          "label": "贷款用途分类编号",
          "prop": "amt_purpose_type_no",
          "align": "center"
        },
        {
          "label": "操作",
          "fixed": "right",
          "width": "200",
          "align": "center",
          "btns": [
            {
              "label": "维护",
              "type": "edit",
              "toRequest": {
                "method": "POST",
                "url": "/views/icms/docManager/loanPurpose/loanPurpose_modify.json"
              }
            },
            {
              "label": "删除",
              "type": "delete",
              "doRequest": {
                "method": "POST",
                "url": "/SUMP/icmcall/icmRPCCall",
                "params": {
                  "servicecode": "ar0250"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
