{
    "module": "v_search_btn_datagrid",
    "layout": {
        "form": {
            "controls": [{
                "doc_type_name": {
                    "label": "资料分类名称",
                    "control": "text"
                }
            }]
        },
        "toolbar": {
            "btns": [{
                "type": "add",
                "label": "新增",
                "toRequest": {
                    "url": "/views/icms/docManager/docTypeManager/docType_add.json",
                    "method": "get",
                    "params": {}
                },
                "props": {
                    "title": "资料分类新增",
                    "width": "80%"
                }
            }]
        },
        "datagrid": {
            "isInitSearch": true,
            "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                    "servicecode": "ar0101"
                }
            },
            "pagination": {
                "pageSizes": [10, 15, 20],
                "pageSize": 10
            },
            "thead": [{
                    "type": "index",
                    "align": "center"
                },
                {
                    "type": "leaf",
                    "label": "资料分类编号",
                    "align": "center",
                    "prop": "doc_type_no"
                },
                {
                    "label": "资料分类名称",
                    "prop": "doc_type_name",
                    "align": "center",
                    "type": "leaf"
                },
                {
                    "label": "是否显示",
                    "prop": "is_display",
                    "align": "center",
                    "type": "leaf",
                    "dict": {
                        "dictType": "MS_E_YESORNO",
                        "dictKey": [
                            "MS_E_YESORNO"
                        ],
                        "format": "label"
                    }
                },
                {
                    "label": "备注信息",
                    "prop": "remark",
                    "align": "center",
                    "type": "leaf"
                },
                {
                    "label": "操作",
                    "width": "150px",
                    "align": "center",
                    "fixed": "right",
                    "btns": [{
                            "type": "edit",
                            "label": "维护",
                            "toRequest": {
                                "url": "/views/icms/docManager/docTypeManager/docType_update.json",
                                "method": "get",
                                "params": {}
                            },
                            "props": {
                                "title": "资料类型维护",
                                "width": "80%"
                            }
                        },
                        {
                            "type": "delete",
                            "label": "删除",
                            "doRequest": {
                                "url": "/SUMP/icmcall/icmRPCCall",
                                "method": "DELETE",
                                "params": {
                                    "servicecode": "ar0104"
                                }
                            }
                        }
                    ]
                }
            ]
        }
    }
}
