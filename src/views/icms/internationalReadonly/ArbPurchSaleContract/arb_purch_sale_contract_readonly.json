{
  "module": "v_search_btn_datagrid",
  "layout": {
    "initRequest": "${{params}}",
    "datagrid": {
      "isInitSearch": true,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "ar1312",
          "apply_no": "${{params.apply_no}}"
        }
      },
      "pagination": {
        "pageSizes": [
          10,
          15,
          20,
          50,
          100
        ],
        "pageSize": 10
      },
      "thead": [
        {
          "label": "购销合同号",
          "prop": "purch_sale_contract_no",
          "align": "center"
        },
        {
          "label": "收款人名称",
          "prop": "counter_name",
          "align": "center"
        },
        {
          "label": "购销合同金额",
          "prop": "contract_amt",
          "align": "center",
          "format": {
            "thousand": ","
          }
        },
        {
          "label": "签票总额",
          "prop": "check_total_amt",
          "align": "center",
          "format": {
            "thousand": ","
          }
        },
        {
          "label": "购销合同签订日期",
          "prop": "loan_contract_sign_date",
          "align": "center"
        },
        {
          "label": "购销起始日期",
          "prop": "start_date",
          "align": "center"
        },
        {
          "label": "购销到期日期",
          "prop": "matu_date",
          "align": "center"
        },
      
        {
          "label": "操作",
          "fixed": "right",
          "width": 200,
          "align": "center",
          "btns": [
  
            {
              "type": "look",
              "target": "dialog",
              "label": "详情",
              "toRequest": {
                "method": "GET",
                "url": "/views/icms/internationalBusiness/ArbPurchSaleContract/arb_purch_sale_contract_detail.json"
              },
              "props": {
                "width": "90%",
                "title": "购销合同信息详情"
              }
            }
          ]
        }
      ]
    }
  }
}