{
  "module": "v-form-btn-dynamic",
  "layout": {
    "form": {
      "scope": "formData",
      "initRequest": {
        "url": "/SUMP/call/RPCCall",
        "method": "POST",
        "params": {
          "servicecode": "pd0329",
          "credit_prod_cd": "${{params.prod_cd}}"
        }
      },
      "btns": [],
      "controlsGroup": [
        {
          "parent_cl_allocation_mode": {
            "control": "text",
            "label": "父分配方式",
            "width": "130px"
          }
        },
        {
          "title": "授信主信息",
          "tooltip": "step1",
          "titleIcon": "",
          "showHint": "",
          "accordion": false,
          "expand": true,
          "controls": [
            {
              "id1": {
                "control": "dynamic",
                "span": 24,
                "toRequest": {
                  "url": "/views/icms/guaranteeManager/creditApplicationInfoManager/credit_Main_Allocation.json",
                  "method": "post",
                  "params": {
                    "apply_no": "${{params.apply_no}}",
                    "credit_prod_cd": "${{params.prod_cd}}"
                  }
                }
              }
            }
          ]
        },
        {
          "title": "授信金额分配",
          "tooltip": "step2",
          "expand": true,
          "controls": [
            {
              "id2": {
                "control": "dynamic",
                "span": 24,
                "toRequest": {
                  "url": "/views/icms/guaranteeManager/creditApplicationInfoManager/credit_Main_Money.json",
                  "method": "get",
                  "params": {
                    "apply_no": "${{params.apply_no}}",
                    "cust_id": "${{params.cust_id}}",
                    "cl_prod_cd": "${{params.prod_cd}}",
                    "parent_cl_allocation_mode": "${{formData.parent_cl_allocation_mode}}"
                  }
                }
              }
            }
          ]
        }
      ]
    }
  }
}
