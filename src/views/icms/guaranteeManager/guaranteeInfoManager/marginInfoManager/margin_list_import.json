{
  "module": "v_search_btn_datagrid",
  "layout": {
    "datagrid": {
      "scope": "searchTable",
      "isInitSearch": true,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "ar0404",
          "apply_no": "${{params.apply_no}}"
        }
      },
      "thead": [
        {
          "prop": "margin_no",
          "label": "保证金编号",
          "align": "center"
        },
        {
          "label": "保证金主账户",
          "prop": "margin_acct",
          "align": "center"
        },
        {
          "label": "保证金金额",
          "prop": "margin_amt",
          "align": "center",
          "format": {
            "thousand": ",",
            "decimal": "2"
          }
        },
        {
          "label": "保证金币种",
          "prop": "ccy_code",
          "align": "center",
          "dict": {
            "dictType": "MS_CURRENCY",
            "dictKey": [
              "MS_CURRENCY"
            ],
            "format": "label"
          }
        },
        {
          "label": "账户名称",
          "prop": "account_name",
          "align": "center"
        },
        {
          "label": "操作",
          "width": "200px",
          "align": "center",
          "btns": [
            {
              "type": "add",
              "label": "确定",
              "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "post",
                "params": {
                  "servicecode": "ar0401",
                  "apply_no": "${{params.apply_no}}"
                }
              },
              "show": {
                "expression": "'${{params.pageType}}' != 'detail'"
              },
              "confirm": {
                "title": "提示信息",
                "msg": "确定引入该保证金信息吗？",
                "confirmButtonText": "确定",
                "cancelButtonText": "取消"
              },
              "eventAfter": {
                "doParentCallback": true
              }
            }
          ]
        }
      ]
    }
  }
}
