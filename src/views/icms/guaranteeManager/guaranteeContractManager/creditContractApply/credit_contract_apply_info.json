{
  "module": "v-form-btn-dynamic",
  "layout": {
    "form": {
      "scope": "detail",
      "initRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "ar0382",
          "apply_no": "${{params.apply_no}}"
        }
      },
      "controls": [
        {
          "ccy_code": {
            "control": "select",
            "label": "币种",
            "span":"7",

            "dict": {
              "dictType": "MS_CURRENCY",
              "dictKey": [
                "MS_CURRENCY"
              ],
              "format": "label"
            } ,
            "selectFirstValue": "true"

          },
          "credit_amt": {
            "control": "currency",
            "label": {
              "default": "信用金额", 
               "i18n": "K0001.Credit-mount"
                              },
            "span":"7",
            "rules": [
              {
                "required": true,
                "message": "信用金额不能为空"
              }
            ],
            "align": "left",
            "format":{
              "thousand": ","
            }
          },
          "base_ccy": {
            "control": "select",
            "label": {
              "default": "基准币种", 
               "i18n": "K0001.base-currency"
                              },
            "span":"7",
            "disabled": true,
            "dict": {
              "dictType": "MS_CURRENCY",
              "dictKey": [
                "MS_CURRENCY"
              ],
              "format": "label"
            },
            "selectFirstValue": "true"
          }
          },
        {
          "exc_rate": {
            "control": "currency",
            "label": "折算汇率",
            "span":"7",
            "disabled": true,
            "value": "1"
          },
          "base_amt": {
            "control": "currency",
            "span":"7",
            "label": {
              "default": "折算基准币种金额", 
               "i18n": "K0001.Conversion-Base-Currency-Amount"
                              },
            "compute": "${{detail.credit_amt}}*${{detail.exc_rate}}",
            "align": "left",
            "format":{
              "thousand": ","
            }
          }
        }

      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "submit",
          "label": "提交",
          "doRequest": {
            "url": "/SUMP/icmcall/icmRPCCall",
            "method": "post",
            "params": {
              "servicecode":"ar0381",
              "apply_no": "${{params.apply_no}}"
            }
          }
        },
        {
          "type": "reset",
          "btnStyle": "success",
          "label": "重置"
        }
      ]
    }
  }
}
