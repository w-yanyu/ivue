{
    "module": "v-inputDataForm-btn",
    "layout": {
      "form": {
        "initRequest":"${{params}}",
        "btns":[],
        "controlsGroup": [
          {
            "title": "合同申请信息",
            "tooltip": "step1",
            "titleIcon": "",
            "showHint": "",
            "accordion": false,
            "expand": true,
            "controls": [
              {
                "id1": {
                  "control": "dynamic",
                  "span": 24,
                  "toRequest": {
                    "url": "/views/icms/guaranteeManager/guaranteeContractManager/marginContractApply/marginContractApplyDetail/margin_contract_apply_info.json",
                    "method": "get",
                    "params": {
                      "guar_rule":"${{params.guar_rule}}",
                      "cust_name":"${{params.cust_name}}",
                      "ccy_code":"${{params.ccy_code}}",
                      "contract_amt":"${{params.contract_amt}}",
                      "contract_base_amt":"${{params.contract_base_amt}}",
                      "this_use_amt":"${{params.this_use_amt}}",
                      "base_this_use_amt":"${{params.base_this_use_amt}}",
                      "sign_date":"${{params.sign_date}}",
                      "guar_start_date":"${{params.guar_start_date}}",
                      "guar_end_date":"${{params.guar_end_date}}"
                    }
                  }
                }
              }
            ]
          },
          {
            "title": "已关联的保证金账号",
            "tooltip": "step2",
            "titleIcon": "",
            "showHint": "",
            "expand": true,
            "controls": [
              {
                "id2": {
                  "control": "dynamic",
                  "span": 24,
                  "toRequest": {
                    "url": "/views/icms/guaranteeManager/guaranteeContractManager/marginContractApply/marginContractApplyDetail/gmargin_contract_apply_relation.json",
                    "method": "get",
                    "params": {
                        "apply_no":"${{params.apply_no}}",
                        "margin_contract_no":"${{params.margin_contract_no}}",
                        "query_type":"1"
                    }
                  }
                }
              }
            ]
          }
        ]
      }
    }
  }
