{
  "module": "v_search_btn_datagrid",
  "layout": {

    "toolbar": {
      "btns": [
        {
          "type": "add",
          "target": "dialog",
          "label": "新增",
          "toRequest": {
            "method": "GET",
            "url": "/views/icms/lend/lendIOU/customrepayplan/custom_repay_plan_add.json",    
            "params": {
              "apply_no": "${{params.apply_no}}",
              "loan_no": "${{params.lend_no}}"
            }
          },
          "show": {
           "expression": "'${{params.pageType}}' != 'info'"
          },
          "props": {
            "width": "50%",
            "title":  "新增还本计划"
          }
        }
      ]
    },
    "datagrid": {
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "post",
        "params":{
          "servicecode":"ar0623",
          "apply_no": "${{params.apply_no}}"
        }
      },
      "pagination": {
        "pageSizes": [
          10,
          15,
          20,
          50,
          100
        ],
        "pageSize": 10
      },
      "thead": [

        {
          "label":  "本期期数",
          "prop": "current_period_num",
          "align": "center"
        },
        
        {
          "label":  "起始日期",
          "prop": "start_date",
          "align": "center"
        },
        {
          "label":  "到期日期",
          "prop": "matu_date",
          "align": "center"
        },

        {
          "label": "还款本金(元)",
          "align": "center",
          "prop": "prcpl_rpymt_amt",
          "format":{
            "thousand":","
          }
        },
        {
          "label": "剩余本金(元)",
          "align": "center",
          "prop": "rsdl_prcpl",
          "format":{
            "thousand":","
          }
        },
        {
          "label": "操作",
          "width":150,
          "align": "center",
          "btns": [
            {
              "type": "edit",
              "label": "维护",
              "toRequest": {
                "url": "/views/icms/lend/lendIOU/customrepayplan/custom_repay_plan_modify.json",    
                "method": "get",
                "props":{
                  "title":"维护还款账户"
                },
                "params": {
                  "apply_no": "${{params.apply_no}}",
                  "loan_no": "${{params.lend_no}}"
                }
              },
              "show": {
               "expression": "'${{params.pageType}}' != 'info'"
              }
            },
            {
              "type": "delete",
              "label": "删除",
              "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "post",
                "params":{
                  "servicecode":"ar0622"
                }
              },
              "show": {
               "expression": "'${{params.pageType}}' != 'info'"
              }
            }
          ]
        }
      ]
    }
  }
}
