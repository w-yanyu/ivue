{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "initRequest": "${{params}}",
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "post",
        "params": {
          "servicecode": "ar0608",
          "lend_no": "${{params.lend_no}}",
          "loan_no": "${{params.loan_no}}",
          "apply_no": "${{params.apply_no}}"
        }
      },
      "controls": [
        {
          "current_period_num": {
            "control": "text",
            "label": "本期期数",
            "span": 8,
            "width": "100px",
            "disabled": true
          },
          "repay_amt": {
            "control": "currency",
            "label": "每期还款总额(元)",
            "span": 8,
            "width": "100px",
            "format": {
              "thousand": ",",
              "decimal": "2"
            },
            "disabled": true
          },
          "rpymt_dt": {
            "control": "dateTimePicker",
            "label": "还款日期",
            "format": "yyyyMMdd",
            "span": 8,
            "width": "100px",
            "disabled": true
          },
          "chrg_amt": {
            "control": "currency",
            "label": "收费金额(元)",
            "span": 8,
            "width": "100px",
            "format": {
              "thousand": ",",
              "decimal": "2"
            }
          },
          "chrg_dt": {
            "control": "dateTimePicker",
            "label": "收费日期",
            "format": "yyyyMMdd",
            "span": 8,
            "width": "100px"
          },
          "remark": {
            "control": "textarea",
            "label": "备注",
            "span": 24,
            "width": "100px",
            "autosize": {
              "minRows": 3,
              "maxRows": 5
            },
            "maxlength": 100,
            "showWordLimit": true
          },
          "fee_pymt_acct_num": {
            "control": "hidden",
            "label": "付费账号",
            "span": 8
          },
          "fee_pymt_sub_acct_serl_num": {
            "control": "hidden",
            "label": "付费子账户序号",
            "span": 8
          },
          "chrg_pstg_acct_num": {
            "control": "hidden",
            "label": "收费入账账号",
            "span": 8
          },
          "chrg_pstg_sub_acct_serl_num": {
            "control": "hidden",
            "label": "收费入账子账户序号",
            "span": 8
          },
          "deal_ste": {
            "control": "hidden",
            "label": "处理状态",
            "span": 8,
            "dict": {
              "dictType": "AR_E_DEAL_STE",
              "dictKey": [
                "AR_E_DEAL_STE"
              ],
              "format": "label"
            }
          }
        }
      ]
    }
  }
}
