{
  "module": "v_search_btn_datagrid",
  "layout": {
    "form": {
      "controls": [
        {
          "doc_chklist_id": {
            "label": "核实项检查代码",
            "control": "text"
          },
          "doc_chklist_desc": {
            "label": "描述",
            "control": "text"
          }
        }
      ]
    },
    "toolbar": {
      "btns": [
        {
          "type": "add",
          "label": "新增",
          "toRequest": {
            "url": "/views/icms/verifyManager/verifyListManager/verfyLismanage_add.json",
            "method": "get",
            "params": {}
          },
          "props": {
            "title": "核实项新增",
            "width": "80%"
          }
        }
      ]
    },
    "datagrid": {
      "isInitSearch": true,
      "doRequest": {
        "url": "/SUMP/call/RPCCall",
        "method": "post",
        "params": {
          "servicecode": "ar1141",
          "verify_list_cd": "${{params.verify_list_cd}}",
          "verify_list_desc": "${{params.verify_list_desc}}",
          "cust_class_list": "${{params.cust_class_list}}"
        }
      },
      "pagination": {
        "pageSizes": [
          10,
          15,
          20
        ],
        "pageSize": 10
      },
      "thead": [
        {
          "type": "index",
          "align": "center"
        },
        {
          "type": "leaf",
          "label": "核实项检查列表序列号",
          "align": "center",
          "prop": "verify_list_cd",
          "width": "250px"
        },
        {
          "type": "string",
          "label": "适用客户类型",
          "prop": "cust_class",
          "align": "center",
          "width": "250px",
          "dict": {
            "dictType": "AR_E_CUST_CLASS",
            "dictKey": [
              "AR_E_CUST_CLASS"
            ],
            "exclude": [
              "30"
            ],
            "format": "label"
          }
        },
        {
          "label": "描述",
          "prop": "verify_list_desc",
          "align": "center",
          "type": "leaf"
        },
        {
          "label": "操作",
          "width": "150px",
          "align": "center",
          "fixed": "right",
          "btns": [
            {
              "type": "edit",
              "label": "维护",
              "toRequest": {
                "url": "/views/icms/verifyManager/verifyListManager/verfyLismanage_update.json",
                "method": "get",
                "params": {
                  "doc_chklist_id": "${{current.doc_chklist_id}}"
                }
              },
              "props": {
                "title": "核实项检查维护",
                "width": "80%"
              }
            },
            {
              "label": "明细",
              "type": "look",
              "toRequest": {
                "url": "/views/icms/verifyManager/verifyListManager/verfyLisMangedtl.json",
                "method": "get",
                "params": {
                  "verify_list_cd": "${{current.verify_list_cd}}"
                }
              },
              "props": {
                "title": "核实项检查详情",
                "width": "80%"
              }
            },
            {
              "type": "delete",
              "label": "删除",
              "doRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "DELETE",
                "params": {
                  "servicecode": "ar1143",
                  "trantp": "DELETE"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
