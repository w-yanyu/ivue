{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "pagination": {
        "show": false
      },
      "btns": [
        {
          "type": "submit",
          "label": "提交",
          "doRequest": {
            "url": "/SUMP/icmcall/icmRPCCall",
            "method": "POST",
            "params": {
              "servicecode": "pl0424",
              "page_id": "/views/pl/assetBuyingManagement/assetResponsibleInvestigation/asset_investigation_add.json"
            }
          }
        }
      ],
      "controls": [
        {
          "package_no": {
            "control": "remoteSelect",
            "label": "资产包名称",
            "labelField": "package_name",
            "valueField": "package_no",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ],
            "doRequest": {
              "url": "/SUMP/icmcall/icmRPCCall",
              "method": "POST",
              "params": {
                "length": 999,
                "start": 1,
                "servicecode": "pl0423"
              }
            },
            "format": "value-label"
          },
          "diligence_mechanism": {
            "control": "text",
            "label": "尽调机构",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          },
          "project_manager": {
            "control": "text",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ],
            "label": "项目经理"
          },
          "department": {
            "control": "remoteSelect",
            "label": "部门名称",
            "labelField": "branch_name",
            "valueField": "branch_id",
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ],
            "doRequest": {
              "url": "/SUMP/call/RPCCall",
              "method": "POST",
              "params": {
                "servicecode": "ct2173"
              }
            },
            "format": "label"
          },
          "diligence_base_date": {
            "label": "尽调基准日",
            "control": "dateTimePicker",
            "rules": [
              {
                "max": "10",
                "message": "长度不能超过10个字符"
              },
              {
                "required": true,
                "message": "请输入尽调基准日"
              }
            ]
          },
          "diligence_conclusion": {
            "control": "textarea",
            "label": "尽调结论",
            "align": "center",
            "span": "20",
            "rows": 6,
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          },
          "remark": {
            "control": "textarea",
            "label": "备注信息",
            "align": "center",
            "span": "20",
            "rows": 6,
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          }
        }
      ]
    }
  }
}