{
  "module": "v_inputDataForm_btn",
  "layout": {
    "form": {
      "initRequest": "${{params}}",
      "btns": [
        {
          "type": "submit",
          "label": "提交",
          "doRequest": {
            "url": "/SUMP/icmcall/icmRPCCall",
            "method": "POST",
            "params": {
              "servicecode": "pl0436",
              "diligence_no": "${{params.diligence_no}}",
              "page_id": "/views/pl/assetBuyingManagement/assetResponsibleInvestigation/assetDiligenceRisk/asset_diligence_risk_add.json"
            }
          }
        }
      ],
      "controls": [
        {
          "diligence_no": {
            "control": "hidden",
            "label": "尽调编号",
            "disabled": true
          },
          "risk_warning": {
            "control": "textarea",
            "label": "风险提示",
            "align": "center",
            "span": "20",
            "rows": 1,
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          },
          "risk_content": {
            "control": "textarea",
            "label": "风险具体内容",
            "align": "center",
            "span": "20",
            "rows": 10,
            "rules": [
              {
                "required": true,
                "message": "请输入"
              }
            ]
          }
        }
      ]
    }
  }
}