{
  "module": "v_search_btn_datagrid",
  "layout": {
    "form": {
      "foldLineNumber": 2,
      "controls": [
        {
          "loan_due_bill_num": {
            "span": 12,
            "control": "text",
            "label": "借据号",
            "rules": [
              {
                "max": 32,
                "message": "长度不能超过32个字符"
              }
            ]
          },"cust_nm": {
            "control": "text",
            "span": 12,
            "label": "客户名称",
            "format": "label"
          }
        }
      ]
    },
    "datagrid": {
      "scope": "searchTable",
      "isInitSearch": false,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "syln0002",
          "outlistid": "lnCpstnQryType"
        }
      },
      "thead": [
        {
          "label": "序号",
          "width": "50px",
          "type": "index",
          "align": "center"
        },
        {
          "align": "center",
          "label": "客户姓名",
          "width": "120px",
          "prop": "cust_nm"
        },
        {
          "align": "center",
          "label": "借据号",
          "prop": "loan_due_bill_num"
        },
        {
          "align": "center",
          "label": "客户号",
          "prop": "cust_num"
        },
        {
          "align": "center",
          "label": "可售产品名称",
          "prop": "slbl_prod_nm"
        },
        {
          "align": "center",
          "label": "借据金额(元)",
          "prop": "due_bill_amt",
          "format": {
            "thousand": ","
          }
        },
        {
          "align": "center",
          "label": "贷款形态",
          "prop": "loan_form",
          "dict": {
            "dictType": "LN_E_LOAN_FORM",
            "dictKey": [
              "LN_E_LOAN_FORM"
            ],
            "format": "label"
          }
        },
        {
          "align": "center",
          "label": "贷款账户状态",
          "prop": "loan_acct_ste",
          "dict": {
            "dictType": "LN_E_LOAN_ACCT_STE",
            "dictKey": [
              "LN_E_LOAN_ACCT_STE"
            ],
            "format": "label"
          }
        },
        {
          "label": "操作",
          "fixed": "right",
          "align": "center",
          "btns": [
            {
              "type": "look",
              "label": "利率变更",
              "show": {
                "expression": "'${{current.loan_acct_ste}}' === '0'"
              },
              "toRequest": {
                "url": "/views/pl/repayWayChange/loan_info_edit1.json",
                "method": "POST",
                "params": {
                  "loan_due_bill_num": "${{current.loan_due_bill_num}}"
                }
              },
              "props": {
                "width": "80%",
                "title": "借据信息变更"
              }
            },
            {
              "type": "look",
              "label": "还款周期变更",
              "show": {
                "expression": "'${{current.loan_acct_ste}}' === '0'"
              },
              "toRequest": {
                "url": "/views/pl/repayWayChange/loan_info_edit2.json",
                "method": "POST",
                "params": {
                  "loan_due_bill_num": "${{current.loan_due_bill_num}}"
                }
              },
              "props": {
                "width": "80%",
                "title": "借据信息变更"
              }
            },{
              "type": "look",
              "label": "还款顺序变更",
              "show": {
                "expression": "'${{current.loan_acct_ste}}' === '0'"
              },
              "toRequest": {
                "url": "/views/pl/repayWayChange/loan_info_edit3.json",
                "method": "POST",
                "params": {
                  "loan_due_bill_num": "${{current.loan_due_bill_num}}"
                }
              },
              "props": {
                "width": "80%",
                "title": "借据信息变更"
              }
            }
          ]
        }
      ]
    }
  }
}
