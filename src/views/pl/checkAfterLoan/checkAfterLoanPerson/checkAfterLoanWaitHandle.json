{
  "module": "v_search_btn_datagrid",
  "layout": {
    "form": {
      "controls": [
        {
          "matrix": {
            "label": "客户名称",
            "control": "text",
            "rules": [
              {
                "max": "5",
                "message": "长度不能超过5个字符"
              }
            ]
          }
        }
      ]
    },
    "datagrid": {
      "scope": "searchTable",
      "isInitSearch": false,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "AS_PLMS_KG_MACURD",
          "method": "queryAll"
        }
      },
      "thead": [
        {
          "type": "index"
        },
        {
          "prop": "matrix",
          "label": "检查性质",
          "align": "center"
        },
        {
          "prop": "groupi",
          "label": "客户名称",
          "align": "center"
        },
        {
          "prop": "matmin",
          "label": "业务号",
          "align": "center"
        },
        {
          "prop": "matmax",
          "label": "业务种类",
          "align": "center"
        },
        {
          "prop": "codeid",
          "label": "检查频率",
          "align": "center",
          "dict": {
            "dictType": "D_taCode",
            "dictKey": [
              "D_taCode"
            ],
            "labelField": "codesc",
            "valueField": "codeid",
            "doRequest": {
              "url": "/SUMP/icmcall/icmRPCCall",
              "method": "POST",
              "params": {
                "servicecode": "AS_PLMS_KG_COCURD",
                "method": "queryAll"
              }
            },
            "format": "value"
          }
        },
        {
          "prop": "codesc",
          "label": "检查月份",
          "align": "center"
        },
        {
          "prop": "codesc",
          "label": "检查季度",
          "align": "center"
        },
        {
          "prop": "codesc",
          "label": "检查人员",
          "align": "center"
        },
        {
          "prop": "codesc",
          "label": "检查地点",
          "align": "center"
        },
        {
          "prop": "codesc",
          "label": "检查时间",
          "align": "center"
        },
        {
          "label": "操作",
          "fixed": "right",
          "width": "200",
          "align": "center",
          "btns": [
            {
              "type": "edit",
              "label":  "业务提交",
              "show": {
                "expression": "'${{current.hndov_ste}}' === '1'"
              },
              "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "pl0023",
                  "hndov_code": "${{current.hndov_code}}",
                  "hand_prod_code": "${{current.hand_prod_code}}"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
