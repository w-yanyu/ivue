{
  "module": "v_inputDataForm_btn",
  "layout": {
      "form": {
        "scope": "templateScope",
        "initRequest":"${{params}}",
        "initDataOnce":true,


      "btns": [
          {
              "type": "submit",
              "label": "保存",
              "icon": "",
              "doRequest": {
                  "url": "/SUMP/icmcall/icmRPCCall",
                  "method": "POST",
                  "params": {
                      "servicecode": "pl0183",
                      "contract_no": "${{params.contract_no}}",
                      "check_no": "${{params.check_no}}"
                  }
              }
          }
      ],
      "controls": [
        {
          "payment_date": {
            "control": "dateTimePicker",
            "label": "付款日",
            "rules": [{
              "required": true
            }]
          },
            "payer": {
                "label": "收款人",
                "control": "text",
                "rules": [
                    {
                        "required": true
                    }
                ]
            },
            "acct_amt": {
                "label": "金额（万元）",
                "control": "text",
                "rules": [
                    {
                        "required": true
                    }
                ]
            },
            "loan_purp": {
              "label": "贷款用途",
              "control": "select",
              "multiple": false,
              "dict": {
                "dictKey": [
                  "PL_E_LOAN_PURP"
                ],
                "dictType": "PL_E_LOAN_PURP",
                "format": "label"
              },
              "rules": [
                {
                  "required": true
                }
              ]
            },
            "is_appropriate": {
              "label": "是否挪用，违规",
              "control": "select",
              "multiple": false,
              "dict": {
                "dictKey": [
                  "MS_E_YESORNO"
                ],
                "dictType": "MS_E_YESORNO",
                "format": "label"
              },
              "rules": [
                {
                  "required": true
                }
              ]
            },
            "pay_type": {
              "label": "付款方式",
              "control": "select",
              "multiple": false,
              "dict": {
                "dictKey": [
                  "PL_E_PAY"
                ],
                "dictType": "PL_E_PAY",
                "format": "label"
              },
              "rules": [
                {
                  "required": true
                }
              ]
            }
        }
    ]
}
}
}
