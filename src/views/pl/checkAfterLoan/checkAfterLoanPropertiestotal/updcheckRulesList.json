{
  "module": "v_inputDataForm_btn",
  "layout": {
      "form": {
        "scope": "templateScope",
        "initRequest":"${{params}}",
        "initDataOnce":true,


          "btns": [
              {
                  "type": "submit",
                  "label": "保存",
                  "icon": "",
                  "doRequest": {
                      "url": "/SUMP/icmcall/icmRPCCall",
                      "method": "POST",
                      "params": {
                          "servicecode": "pl0158",
                          "check_rule_no": "${{params.check_rule_no}}"
                      }
                  }
              }
          ],
          "controls": [
            {
                "check_rule_no": {
                    "label": "检查规则编号",
                    "control": "text",
                    "rules": [
                        {
                            "required": true
                        }
                    ]
                },
                "check_rule_desc": {
                    "label": "检查规则描述",
                    "control": "text",
                    "rules": [
                        {
                            "required": true
                        }
                    ]
                },
                "first_check_date": {
                    "label": "首次检查宽限期",
                    "control": "dateTimePicker",
                    "rules": [
                        {
                            "required": true
                        }
                    ]
                },
                "check_frequency": {
                    "label": "默认检查频率",
                    "control": "text",
                    "rules": [
                        {
                            "required": true
                        }
                    ]
                },
                "is_need_check": {
                  "label": "是否首次检查",
                  "control": "select",
                  "multiple": false,
                  "dict": {
                    "dictKey": [
                      "MS_E_YESORNO"
                    ],
                    "dictType": "MS_E_YESORNO",
                    "format": "value-label"
                  },
                  "rules": [
                    {
                      "required": true
                    }
                  ]
                },
                "check_flow": {
                    "label": "检查流程",
                    "control": "text",
                    "rules": [
                        {
                            "required": true
                        }
                    ]
                },
                "rule_state": {
                  "label": "规则状态",
                  "control": "select",
                  "multiple": false,
                  "dict": {
                    "dictKey": [
                      "PL_E_ISFLAG"
                    ],
                    "dictType": "PL_E_ISFLAG",
                    "format": "value-label"
                  },
                  "rules": [
                    {
                      "required": true
                    }
                  ]
                }
             }
        ]
      }
  }
}
