{
  "module": "v_search_btn_datagrid",
  "layout": {

    "toolbar": {
      "btns": [
        {
          "type": "add",
          "target": "dialog",
          "label": "随机认领",
          "toRequest": {
            "method": "GET",
            "url": "/views/msap/bpm/workbench/into_pool/workbench_into_pool_random.json",
            "params": {
              "appId":"waOnl"
            }
          },
          "props": {
            "title": "随机认领",
            "width": "600px"
          }
        }
      ]
    },
    "form": {
      "controls": [


        {

          "appl_id": {
            "control": "text",
            "label": "申请编号"
          }
        }


      ]
    },
    "datagrid": {
      "scope": "searchTable",
      "isInitSearch": false,
      "doRequest": {
        "url": "/SUMP/icmcall/icmRPCCall",
        "method": "POST",
        "params": {
          "servicecode": "bpm1002",
          "cur_user_id": "$g{{user_info.userCode}}",
          "appId":"waOnl"
        }
      },
      "thead": [
        {
          "label": "序号",
          "type" :  "index"
        },
        {
          "label": "任务ID",
          "prop": "wf_inst_id",
          "visible": "true",
          "width": 270
        },
        {
          "label": "申请编号",
          "prop": "appl_id",
          "width": 200
        },
        {
          "label": "申请人姓名",
          "prop": "cust_name"
        },
        {
          "label": "证件号码",
          "prop": "cert_no",
          "width": 160
        },
        {
          "label": "手机号",
          "prop": "mobile_no",
          "width": 120
        },
        {
          "label": "产品名称",
          "prop": "wf_prod_name"
        },
        {
          "label": "进件时间",
          "prop": "appl_date"
        },
        {
          "label": "当前节点",
          "prop": "cur_name",
          "width": 120
        },
        {
          "label": "操作",
          "fixed": "right",
          "width": 80,
          "align":"center",
          "btns": [
            {
              "type": "delete",
              "label": "领取任务",
              "confirm":{
                "title":"提示信息",
                "msg":"确认要领取该任务吗？",
                "confirmButtonText":"确定",
                "cancelButtonText":"取消"
              },
              "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "bpm1005",
                  "usercd": "$g{{user_info.userCode}}",
                  "appId":"waOnl",
                  "task_id":"${{current.task_inst_id}}"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
