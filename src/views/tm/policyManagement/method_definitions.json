{
    "module": "v_search_btn_datagrid",
    "layout": {
        "form": {
            "controls": [
                {
                    "method_name": {
                        "label": "方法名称",
                        "control": "text",
                        "rules": [
                            {
                                "max": 32,
                                "message": "长度不能超过32个字符"
                            }
                        ]
                    },
                    
                    "valid_flag": {
                        "control": "select",
                        "label": "是否有效",
                        "dict": {
                            "dictType": "BPM_E_ISFLAG",
                            "dictKey": [
                                "BPM_E_ISFLAG"
                            ],
                            "format": "label"
                        }
                    }
                }
            ],
            "foldLineNumber": 3
        },
        "toolbar": {
            "btns": [
                {
                    "type": "add",
                    "target": "dialog",
                    "label": "新增",
                    "toRequest": {
                        "method": "POST",
                        "url": "/views/tm/policyManagement/method_definitions_add.json"
                    },
                    "props": {
                        "width": "65%",
                        "title": "方法定义新增"
                    }
                }
            ]
        },
        "datagrid": {
            "isInitSearch": false,
            "scope": "searchTable",
            "doRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "post",
                "params": {
                    "servicecode": "bpm0028"
                }
            },
            "thead": [
                {
                    "label": "序号",
                    "type": "index"
                },
                {
                    "label": "方法编号",
                    "prop": "method_id"
                },
                {
                    "label": "全路径名称",
                    "prop": "method_full_path"
                },
                {
                    "label": "方法名称",
                    "prop": "method_name"
                },
               
                {
                    "label": "是否有效",
                    "prop": "valid_flag",
                    "type": "select",
                    "dict": {
                        "dictType": "BPM_E_ISFLAG",
                        "dictKey": [
                            "BPM_E_ISFLAG"
                        ],
                        "format": "label"
                    }
                },
                {
                    "label": "操作",
                    "fixed": "right",
                    "width": 200,
                    "align":"center",
                    "btns": [
                        {
                            "type": "edit",
                            "label": "方法参数",
                            "toRequest": {
                                "url": "/views/tm/policyManagement/method_parameters.json",
                                "method": "post"
                            },
                            "props": {
                                "width": "70%",
                                "title": "方法参数"
                            }
                        },
                        {
                            "type": "edit",
                            "label": "维护",
                            "toRequest": {
                                "url": "/views/tm/policyManagement/method_definitions_edit.json",
                                "method": "post"
                            },
                            "props": {
                                "width": "65%",
                                "title": "方法定义维护"
                            }
                        },
                       
                        {
                            "type": "delete",
                            "label": "删除",
                            "doRequest": {
                                "url": "/SUMP/icmcall/icmRPCCall",
                                "method": "post",
                                "params": {
                                    "servicecode": "bpm0026",
                                    "trantp":"DELETE"
                                    
                                }
                            }
                        }
                    ]
                }
            ],
            "pagination": {
                "show": true
            }
        }
    }
}