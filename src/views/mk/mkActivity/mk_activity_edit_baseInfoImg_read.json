{
    "module": "v_realonlyForm_btn",
    "layout": {
        "form": {
            "scope": "templateScope",
            "#initRequest":"${{params}}",
            "initDataOnce":true,
            "initRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "mk0030",
                  "active_id": "${{params.active_id}}"
                }
            },
            "controls": [
                {   
                    "active_img": {
                        "control": "string",
                        "label": "背景图片",
                        "span": "5",
                        "width": "120px",
                        "btnLable": "请选择文件",
                        "toRequest": {
                            "url": "@minioUploadButton",
                            "method": "get",
                            "params": {
                                "file_path": "active_img",
                                "formLabel": "附件上传"
                            }
                        }
                    }

                }  ,{
                    "abbreviate_img": {
                        "control": "string",
                        "label": "缩略图片",
                        "span": "5",
                        "width": "120px",
                        "btnLable": "请选择文件",
                        "toRequest": {
                            "url": "@minioUploadButton",
                            "method": "get",
                            "params": {
                                "file_path": "abbreviate_img",
                                "formLabel": "附件上传"
                            }
                        }
                    }
                },
                {
                    "active_connect": {
                        "control": "string",
                        "width": "120px",
                        "label": "业务活动链接",
                        "showWordLimit": true,
                        "rows": 2,
                        "span": 50
                      }
                }               
                   
            ]
        }
    }
}