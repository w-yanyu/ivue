{
    "module": "v_inputDataForm_btn",
    "layout": {
        "form": {
            "scope": "templateScope",
            "#initRequest":"${{params}}",
            "initDataOnce":true,
            "initRequest": {
                "url": "/SUMP/icmcall/icmRPCCall",
                "method": "POST",
                "params": {
                  "servicecode": "mk0030",
                  "active_id": "${{params.active_id}}"
                }
            },
            "controls": [
                {   
                    "active_img": {
                        "control": "dynamic",
                        "label": "背景图片",
                        "span": "5",
                        "width": "120px",
                        "btnLable": "请选择文件",
                        "toRequest": {
                            "url": "@minioUploadButton",
                            "method": "get",
                            "params": {
                                "file_path": "active_img",
                                "formLabel": "附件上传"
                            }
                        },
                        "rules": [
                            {
                                "required": true,
                                "message": "请上传背景图片"
                            }
                        ]
                    }

                }  ,{
                   
                    "abbreviate_img": {
                        "control": "dynamic",
                        "label": "缩略图片",
                        "span": "5",
                        "width": "120px",
                        "btnLable": "请选择文件",
                        "toRequest": {
                            "url": "@minioUploadButton",
                            "method": "get",
                            "params": {
                                "file_path": "abbreviate_img",
                                "formLabel": "附件上传"
                            }
                        },
                        "rules": [
                            {
                                "required": true,
                                "message": "请上传缩略图片"
                            }
                        ]
                    }
                },
                {
                    "active_connect": {
                        "control": "textarea",
                        "width": "120px",
                        "label": "业务活动链接",
                        "placeholder": "例如活动IP+端口号 http://10.22.12.119:7674",
                        "rules": [
                          {
                            "required": true,
                            "message": "请输入业务活动链接"
                          }
                        ],
                        "showWordLimit": true,
                        "rows": 2,
                        "span": 50
                      }
                }               
                   
            ]
        }
    }
}