{
    "module": "v_search_btn_datagrid",
    "layout": {
      "form": {
        "controls": [
          {
            "active_id": {
              "span": 12,
              "control": "text",
              "label": "活动编号"
            },
            "active_name": {
              "span": 12,
              "control": "text",
              "label": "活动名称"
            }
          },
          {
            "start_date": {
                "control": "dateTimePicker",
                "label": "开始日期",
                "span": 12,
                "type": "date",
                "format": "yyyyMMdd",
                "disabledDate": {
                    "startRange": "19000101",
                    "endRange": "30000101"
                }
            },
            "end_date": {
                "control": "dateTimePicker",
                "label": "结束日期",
                "type": "date",
                "span": 12,
                "format": "yyyyMMdd",
                "disabledDate": {
                    "startRange": "19000101",
                    "endRange": "30000101"
                }
            }
          }
        ]
      },

      "toolbar": {
        "btns": [
          {
            "type": "add",
            "target": "addlog",
            "label": "新增",
            "toRequest": {
              "method": "GET",
              "url": "/views/mk/mkActivity/mk_activity_add.json"
            },
            "props": {
              "width": "60%",
              "title": "新增营销活动"
            }
          }
        ]
      },

      "datagrid": {
        "scope": "searchTable",
        "isInitSearch": false,
        "doRequest": {
          "url": "/SUMP/icmcall/icmRPCCall",
          "method": "POST",
          "params": {
            "servicecode": "mk0013",
            "#appr_status":"01"
          }
        },
        "thead": [
          {
            "type":"string",
            "label": "活动编号",
            "prop": "active_id",
            "align": "center"
          },
          {
            "type":"string",
            "label": "活动名称",
            "prop": "active_name",
            "align": "center"
          },
  
          {
            "type":"string",
            "label": "开始日期",
            "prop": "start_date",
            "align": "center"
          },
          {
            "type":"string",
            "label": "结束日期",
            "prop": "end_date",
            "align": "center"
          },

          {
            "type":"string",
            "label": "负责部门",
            "prop": "active_sects",
            "align": "center",
            "dict":{
              "dictKey": [
                "active_sects"
              ],
					    "#format": "value-label",
              "labelField": "branch_name",
              "valueField": "branch_id",
              "doRequest": {
                "url": "/SUMP/call/RPCCall",
                "method": "POST",
                "params": {
                "servicecode": "ct2155",
                "page_id": "/views/ismt/ct/branch/brannch-info-manager.json"
                }
              }
            }
          },
          {
            "type":"string",
            "label": "活动主题",
            "prop": "active_topic",
            "align": "center"
          },

          {
            "label": "操作",
            "fixed": "right",
            "width":"100px",
            "align": "center",
            "btns": [
                {
                    "type":"look",
                    "label":"详情",
                    "toRequest":{
                      "url":"/views/mk/mkActivity/mk_activity_look.json",
                      "method":"POST"
                    },
                    "props":{
                      "width": "70%",
                      "title":"营销活动详情"
                    }
                },
              {
                "type": "edit",
                "label": "维护",
                "toRequest": {
                    "url": "/views/mk/mkActivity/mk_activity_edit.json",
                    "method": "POST"
                },

                "props": {
                    "width": "60%",
                    "title": "修改营销活动"
                }
              },
              {
                "type": "mkExternalLink",
                "label": "海报预览"
              }
            ]
          }
        ]
      }
    }
  }
  